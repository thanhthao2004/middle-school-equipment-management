<!-- Delete Confirmation Modal -->
<!-- This is a reusable partial for device deletion confirmation -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmModalLabel">THÔNG BÁO</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <p class="mb-0 fw-bold">BẠN CÓ CHẮC CHẮN MUỐN XÓA THIẾT BỊ KHÔNG ?</p>
                <p class="text-muted mt-2 small" id="deviceInfo"></p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-register text-white" id="confirmDeleteBtn">
                    Xác nhận
                </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

