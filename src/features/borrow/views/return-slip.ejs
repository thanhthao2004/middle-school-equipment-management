<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Phiếu trả thiết bị</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/public/stylesheets/style.css" rel="stylesheet">
    <link href="/public/stylesheets/borrow.css" rel="stylesheet">
    <style>
        .return-slip-container { 
            border: 1px solid #1e3a8a; 
            padding: 25px; 
            border-radius: 8px; 
            max-width: 1000px; 
            margin: 20px auto; 
            background: white;
        }
        .slip-header-info { 
            border: 1px solid #ccc; 
            padding: 15px; 
            margin-bottom: 25px; 
            background-color: #f8f9fa;
        }
        .equipment-table th, .equipment-table td { 
            font-size: 0.9rem; 
            padding: 8px; 
        }
        .equipment-table th { 
            background-color: #e9ecef; 
        }
        .slip-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #1e3a8a;
            margin-bottom: 10px;
        }
        .slip-id {
            font-size: 1.1rem;
            color: #666;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <% const userObj = (typeof user !== 'undefined' && user) ? user : { role: 'giao_vien' }; %>
    <div class="app-shell">
        <%- include('../../../views/partials/teacher-sidebar', { currentPage: 'history', user: userObj }) %>

        <div class="main-content">
        <%- include('../../../views/partials/header', { currentPage: 'history', user: userObj }) %>

        <div class="container py-4">
            <div class="return-slip-container position-relative">
                <button class="btn-close slip-close-btn" onclick="closeSlip()">&times;</button>
                
                <div class="slip-header">
                    <div class="slip-title">Phiếu trả thiết bị</div>
                    <div class="slip-id">MÃ PHIẾU TRẢ: <%= slip.maPhieuTra %></div>
                    <% if (slip.borrowTicket) { %>
                        <div class="slip-id">Thuộc phiếu mượn: <%= slip.borrowTicket.maPhieu %></div>
                    <% } %>
                </div>

                <!-- Thông tin Phiếu Trả -->
                <div class="slip-header-info">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Mã phiếu trả:</strong> <%= slip.maPhieuTra %></p>
                            <% if (slip.borrowTicket) { %>
                                <p class="mb-1"><strong>Mã phiếu mượn:</strong> <%= slip.borrowTicket.maPhieu %></p>
                            <% } %>
                            <p class="mb-1"><strong>Ngày trả:</strong> <%= slip.ngayTra ? new Date(slip.ngayTra).toLocaleDateString('vi-VN') : 'N/A' %></p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Người trả:</strong> <%= slip.nguoiTraId?.name || 'N/A' %></p>
                            <p class="mb-1"><strong>Ngày tạo phiếu:</strong> <%= slip.createdAt ? new Date(slip.createdAt).toLocaleDateString('vi-VN') : 'N/A' %></p>
                            <% if (slip.ghiChu) { %>
                                <p class="mb-0"><strong>Ghi chú:</strong> <%= slip.ghiChu %></p>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Chi tiết Thiết bị trả -->
                <h6 class="mb-3">Thiết bị trả:</h6>
                <div class="table-responsive">
                    <table class="table table-bordered equipment-table">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên Thiết Bị</th>
                                <th>Danh mục</th>
                                <th>Đơn vị</th>
                                <th>Vị trí</th>
                                <th>Nguồn</th>
                                <th>Số lượng trả</th>
                                <th>Tình trạng khi trả</th>
                                <th>Ghi chú</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (slip.details && slip.details.length > 0) { %>
                                <% slip.details.forEach((detail, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td><%= detail.device?.tenTB || detail.maTB %></td>
                                        <td><%= detail.device?.category?.tenDM || 'N/A' %></td>
                                        <td>cái</td>
                                        <td><%= detail.device?.viTriLuuTru || 'N/A' %></td>
                                        <td><%= detail.device?.nguonGoc || 'N/A' %></td>
                                        <td><%= detail.soLuongTra %></td>
                                        <td>
                                            <% if (detail.tinhTrangLucTra) { %>
                                                <span class="badge <%= detail.tinhTrangLucTra === 'Tốt' ? 'bg-success' : 'bg-warning' %>">
                                                    <%= detail.tinhTrangLucTra %>
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">N/A</span>
                                            <% } %>
                                        </td>
                                        <td><%= detail.ghiChu || '-' %></td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="9" class="text-center text-muted py-3">Không có thiết bị nào trong phiếu trả này</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

                <!-- Thông tin Phiếu Mượn liên quan -->
                <% if (slip.borrowTicket) { %>
                    <div class="mt-4">
                        <h6 class="mb-3">Thông tin phiếu mượn liên quan:</h6>
                        <div class="slip-header-info">
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="mb-1"><strong>Mã phiếu mượn:</strong> <%= slip.borrowTicket.maPhieu %></p>
                                    <p class="mb-1"><strong>Ngày mượn:</strong> <%= slip.borrowTicket.ngayMuon ? new Date(slip.borrowTicket.ngayMuon).toLocaleDateString('vi-VN') : 'N/A' %></p>
                                    <p class="mb-1"><strong>Ngày trả dự kiến:</strong> <%= slip.borrowTicket.ngayDuKienTra ? new Date(slip.borrowTicket.ngayDuKienTra).toLocaleDateString('vi-VN') : 'N/A' %></p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-1"><strong>Người mượn:</strong> <%= slip.borrowTicket.nguoiLapPhieuId?.name || 'N/A' %></p>
                                    <p class="mb-1"><strong>Lý do mượn:</strong> <%= slip.borrowTicket.lyDo || 'N/A' %></p>
                                    <p class="mb-0"><strong>Trạng thái:</strong> 
                                        <span class="badge <%= slip.borrowTicket.trangThai === 'da_hoan_tat' ? 'bg-success' : slip.borrowTicket.trangThai === 'dang_muon' ? 'bg-warning' : 'bg-secondary' %>">
                                            <%= slip.borrowTicket.trangThai === 'da_hoan_tat' ? 'Đã hoàn tất' : slip.borrowTicket.trangThai === 'dang_muon' ? 'Đang mượn' : slip.borrowTicket.trangThai %>
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>

                <div class="text-center mt-4">
                    <button class="btn btn-primary" onclick="closeSlip()">Đóng</button>
                </div>
            </div>
        </div>

        <%- include('../../../views/partials/footer') %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function closeSlip() {
            const params = new URLSearchParams(window.location.search);
            const from = params.get('from');
            if (from === 'history') {
                window.location.href = '/teacher/borrow/history';
            } else {
                window.location.href = '/teacher/borrow/teacher-home';
            }
        }
    </script>
</body>
</html>

