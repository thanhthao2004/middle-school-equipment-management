<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chỉnh sửa báo cáo thanh lý</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="/stylesheets/disposal.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <!-- ===== HEADER ===== -->
    <%- include('../../../views/partials/header', { currentPage: 'disposal' , user: typeof user !=='undefined' ? user :
        { role: 'ql_thiet_bi' } }) %>

        <!-- ===== MAIN LAYOUT ===== -->
        <div class="container-fluid p-0">
            <div class="row g-0">

                <!-- ===== SIDEBAR ===== -->
                <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'disposal' , user: typeof user
                    !=='undefined' ? user : { role: 'ql_thiet_bi' } }) %>

                    <!-- ===== MAIN CONTENT ===== -->
                    <div class="col-md-9 col-lg-10 main-content">
                        <div class="container-fluid py-4">

                            <!-- Page Header -->
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h1 class="h3 mb-0">CHỈNH SỬA BÁO CÁO THANH LÝ THIẾT BỊ HỎNG</h1>
                                <a href="/manager/disposal" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Quay lại
                                </a>
                            </div>

                            <!-- ===== INFO BOXES ===== -->
                            <div class="card mb-4">
                                <div class="card-body">
                                    <div class="d-flex flex-wrap gap-3 align-items-center">

                                        <div class="info-box info-code">
                                            <label>Mã biên bản</label>
                                            <div class="value">
                                                <%= disposal.code %>
                                            </div>
                                        </div>

                                        <div class="info-box info-year">
                                            <label>Năm học</label>
                                            <div class="value">
                                                <%= disposal.year %>
                                            </div>
                                        </div>

                                        <div class="info-box info-date">
                                            <label>Ngày lập</label>
                                            <div class="value">
                                                <%= disposal.created_at %>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                            <!-- ===== FORM ===== -->
                            <form action="/manager/disposal/<%= disposal.id %>" method="POST">

                                <!-- ===== TABLE ===== -->
                                <div class="card">
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-hover align-middle">
                                                <thead>
                                                    <tr>
                                                        <th>Tên thiết bị</th>
                                                        <th>Loại thiết bị</th>
                                                        <th>Bộ môn quản lý</th>
                                                        <th>Ngày phát hiện</th>
                                                        <th>Mức độ hỏng</th>
                                                        <th>Lý do</th>
                                                        <th>Giá bán</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if (disposal.details && disposal.details.length> 0) { %>
                                                        <% disposal.details.forEach((d, index)=> { %>
                                                            <tr>
                                                                <td>
                                                                    <input type="text"
                                                                        name="details[<%= index %>][name]"
                                                                        class="form-control" value="<%= d.name %>">
                                                                </td>

                                                                <td>
                                                                    <select name="details[<%= index %>][type]"
                                                                        class="form-select">
                                                                        <% deviceTypes.forEach(type=> { %>
                                                                            <option value="<%= type %>" <%=d.type===type
                                                                                ? 'selected' : '' %>>
                                                                                <%= type %>
                                                                            </option>
                                                                            <% }) %>
                                                                    </select>
                                                                </td>

                                                                <td>
                                                                    <select name="details[<%= index %>][department]"
                                                                        class="form-select">
                                                                        <% departments.forEach(dep=> { %>
                                                                            <option value="<%= dep %>"
                                                                                <%=d.department===dep ? 'selected' : ''
                                                                                %>>
                                                                                <%= dep %>
                                                                            </option>
                                                                            <% }) %>
                                                                    </select>
                                                                </td>

                                                                <td>
                                                                    <input type="date"
                                                                        name="details[<%= index %>][broken_date]"
                                                                        class="form-control"
                                                                        value="<%= d.broken_date || '' %>">
                                                                </td>

                                                                <td>
                                                                    <select name="details[<%= index %>][level]"
                                                                        class="form-select">
                                                                        <option value="Hỏng nhẹ" <%=d.level==='Hỏng nhẹ'
                                                                            ? 'selected' : '' %>>
                                                                            Hỏng nhẹ
                                                                        </option>
                                                                        <option value="Hỏng nặng"
                                                                            <%=d.level==='Hỏng nặng' ? 'selected' : ''
                                                                            %>>
                                                                            Hỏng nặng
                                                                        </option>
                                                                    </select>
                                                                </td>

                                                                <td>
                                                                    <input type="text"
                                                                        name="details[<%= index %>][reason]"
                                                                        class="form-control" value="<%= d.reason %>">
                                                                </td>

                                                                <td>
                                                                    <input type="number"
                                                                        name="details[<%= index %>][price]"
                                                                        class="form-control" min="0"
                                                                        value="<%= d.price %>">
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                                <% } else { %>
                                                                    <tr>
                                                                        <td colspan="7" class="text-center text-muted">
                                                                            Chưa có thiết bị nào trong báo cáo
                                                                        </td>
                                                                    </tr>
                                                                    <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                                <!-- ===== ACTION BUTTONS ===== -->
                                <div class="d-flex justify-content-end gap-2 mt-4">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save"></i> Lưu thay đổi
                                    </button>
                                    <a href="/manager/disposal" class="btn btn-secondary">
                                        <i class="fas fa-times"></i> Hủy
                                    </a>
                                </div>

                            </form>

                        </div>
                    </div>
            </div>
        </div>

        <!-- ===== FOOTER ===== -->
        <%- include('../../../views/partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>