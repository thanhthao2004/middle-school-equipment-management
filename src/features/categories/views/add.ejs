<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Thêm danh mục mới</title>

  <!-- Bootstrap 5.3.0 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome 6.4.0 -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/public/stylesheets/categories.css">
  <link rel="stylesheet" href="/public/stylesheets/style.css">  

</head>

<body>
  <!-- Sidebar -->
  <!-- Header -->
  <%- include('../../../views/partials/header', { currentPage: 'categories', user: typeof user !== 'undefined' ? user : { role: 'ql_thiet_bi' } }) %>

  <div class="container-fluid p-0">
    <div class="row g-0">
      <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'categories', user: typeof user !== 'undefined' ? user : { role: 'ql_thiet_bi' } }) %>

      <!-- Main Content -->
      <div class="col-md-9 col-lg-10 main-content">
        <div class="container py-4">
          <h1 class="h3 mb-4">Thêm danh mục mới</h1>

          <div class="card">
            <div class="card-body">
              <form action="/manager/categories" method="POST">
                <div class="mb-3">
                  <label for="id" class="form-label">Mã danh mục</label>
                  <input type="text" class="form-control" id="id" value="DM01" readonly>
                </div>

                <div class="mb-3">
                  <label for="name" class="form-label">Tên danh mục</label>
                  <input type="text" class="form-control" id="name" placeholder="Nhập tên danh mục..." required>
                </div>

                <div class="mb-3">
                  <label for="location" class="form-label">Vị trí lưu trữ</label>
                  <input type="text" class="form-control" id="location" placeholder="Nhập vị trí lưu trữ..." required>
                </div>

                <div class="d-flex justify-content-end gap-2">
                  <a href="/manager/categories" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-2"></i>Hủy
                  </a>
                  <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Lưu
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/public/javascripts/categories.js"></script>
</body>
</html>