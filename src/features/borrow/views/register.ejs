    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function viewDetails(deviceId) {
            // In a real application, you would fetch device details from the server
            const deviceData = {
                101: {
                    name: "Bộ dụng cụ thí nghiệm H2SO4",
                    id: "101",
                    category: "Hóa học",
                    unit: "cái",
                    class: "8, 9",
                    quantity: "3",
                    status: "Có sẵn",
                    condition: "Tốt",
                    location: "Phòng thiết bị 201",
                    origin: "NCC",
                    supplier: "Công ty TNHH Hóa Chất Việt"
                }
            };
            
            const device = deviceData[deviceId] || deviceData[101];
            
            document.getElementById('deviceName').textContent = device.name;
            document.getElementById('deviceId').textContent = device.id;
            document.getElementById('deviceCategory').textContent = device.category;
            document.getElementById('deviceUnit').textContent = device.unit;
            document.getElementById('deviceClass').textContent = device.class;
            document.getElementById('deviceQuantity').textContent = device.quantity;
            document.getElementById('deviceStatus').textContent = device.status;
            document.getElementById('deviceCondition').textContent = device.condition;
            document.getElementById('deviceLocation').textContent = device.location;
            document.getElementById('deviceOrigin').textContent = device.origin;
            document.getElementById('deviceSupplier').textContent = device.supplier;
            
            const modal = new bootstrap.Modal(document.getElementById('deviceDetailsModal'));
            modal.show();
        }
        
        function selectDevice() {
            // Close details modal and open borrow form
            const detailsModal = bootstrap.Modal.getInstance(document.getElementById('deviceDetailsModal'));
            detailsModal.hide();
            
            // Add device to borrow form
            openBorrowForm();
        }
        
        function openBorrowForm() {
            // Get selected devices from checkboxes
            const selectedDevices = [];
            const checkboxes = document.querySelectorAll('input[type="checkbox"]:checked');
            
            checkboxes.forEach((checkbox, index) => {
                const row = checkbox.closest('tr');
                const cells = row.querySelectorAll('td');
                
                selectedDevices.push({
                    st: index + 1,
                    name: cells[1].textContent,
                    category: cells[2].textContent,
                    unit: cells[3].textContent,
                    quantity: cells[5].textContent,
                    location: cells[8].textContent,
                    origin: cells[9].textContent
                });
            });
            
            // Populate borrow form table
            const tbody = document.getElementById('borrowFormTable');
            tbody.innerHTML = '';
            
            selectedDevices.forEach(device => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${device.st}</td>
                    <td>${device.name}</td>
                    <td>${device.category}</td>
                    <td>${device.unit}</td>
                    <td>${device.quantity}</td>
                    <td>${device.location}</td>
                    <td>${device.origin}</td>
                    <td>
                        <input type="date" class="form-control form-control-sm" value="${new Date().toISOString().split('T')[0]}">
                    </td>
                    <td>
                        <input type="date" class="form-control form-control-sm" value="${new Date(Date.now() + 7*24*60*60*1000).toISOString().split('T')[0]}">
                    </td>
                    <td>
                        <input type="number" class="form-control form-control-sm" value="1" min="1" max="${device.quantity}">
                    </td>
                    <td>
                        <select class="form-select form-select-sm">
                            <option value="sang">Sáng</option>
                            <option value="chieu">Chiều</option>
                        </select>
                    </td>
                    <td>
                        <textarea class="form-control form-control-sm" rows="2" placeholder="ghi chú nội dung dạy..."></textarea>
                    </td>
                `;
                tbody.appendChild(row);
            });
            
            const modal = new bootstrap.Modal(document.getElementById('borrowFormModal'));
            modal.show();
        }
        
        function submitBorrowForm() {
            // Validate form data
            const borrowDate = document.querySelector('input[type="date"]').value;
            const returnDate = document.querySelectorAll('input[type="date"]')[1].value;
            
            if (new Date(returnDate) < new Date(borrowDate)) {
                showErrorModal('Ngày trả không hợp lệ. Vui lòng chọn ngày trả sau hoặc bằng ngày mượn.');
                return;
            }
            
            // Check if borrow date is at least 1 day in advance
            const today = new Date();
            const tomorrow = new Date(today);
            tomorrow.setDate(tomorrow.getDate() + 1);
            
            if (new Date(borrowDate) < tomorrow) {
                showErrorModal('Cần đăng ký sớm hơn (≥1 ngày) trước buổi dạy');
                return;
            }
            
            // Submit form (in real app, this would be an AJAX call)
            const modal = bootstrap.Modal.getInstance(document.getElementById('borrowFormModal'));
            modal.hide();
            
            // Show success notification
            showSuccessModal();
        }
        
        function cancelSelection() {
            // Uncheck all checkboxes
            const checkboxes = document.querySelectorAll('input[type="checkbox"]');
            checkboxes.forEach(checkbox => checkbox.checked = false);
        }
        
        function showSuccessModal() {
            const modalHtml = `
                <div class="modal fade" id="successModal" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-body text-center py-5">
                                <h4 class="text-success mb-3">THÔNG BÁO</h4>
                                <h5 class="text-success mb-4">ĐĂNG KÝ MƯỢN THÀNH CÔNG !</h5>
                                <div class="d-flex gap-3 justify-content-center">
                                    <button class="btn btn-primary" onclick="viewBorrowSlip()">Xem phiếu mượn</button>
                                    <button class="btn btn-secondary" data-bs-dismiss="modal">Bỏ qua</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            document.body.insertAdjacentHTML('beforeend', modalHtml);
            const modal = new bootstrap.Modal(document.getElementById('successModal'));
            modal.show();
        }
        
        function showErrorModal(message) {
            const modalHtml = `
                <div class="modal fade" id="errorModal" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-body text-center py-4">
                                <h4 class="text-danger mb-3">THÔNG BÁO</h4>
                                <p class="mb-4">${message}</p>
                                <button class="btn btn-primary" data-bs-dismiss="modal">OK</button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            document.body.insertAdjacentHTML('beforeend', modalHtml);
            const modal = new bootstrap.Modal(document.getElementById('errorModal'));
            modal.show();
        }
        
        function viewBorrowSlip() {
            // Close success modal
            const successModal = bootstrap.Modal.getInstance(document.getElementById('successModal'));
            successModal.hide();
            
            // Show borrow slip
            window.location.href = '/borrow/slip/PM01';
        }
    </script>
