<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý Biên bản Nghiệm thu</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/public/stylesheets/style.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .table-acceptance th { background-color: #e9ecef; }
        .table-acceptance th, .table-acceptance td { vertical-align: middle; font-size: 0.9rem; }
        .filter-section { margin-bottom: 20px; }
    </style>
</head>
<body>

    <!-- Truyền currentPage cho header -->
    <%- include('../../../views/partials/header', { currentPage: 'acceptance' }) %>

    <div class="container-fluid p-0">
        <div class="row g-0">

            <!-- Sidebar admin -->
            <%- include('../../../views/partials/admin-sidebar', { currentPage: 'acceptance' }) %>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 main-content">
                <div class="container py-4">

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="h3 mb-0">QUẢN LÝ BIÊN BẢN NGHIỆM THU</h1>
                        <div class="d-flex align-items-center">
                            <span class="text-muted small">Quản lý thiết bị</span>
                        </div>
                    </div>

                    <!-- Filter -->
                    <div class="filter-section d-flex align-items-center gap-3">
                        <label class="form-label mb-0 fw-bold">Năm học</label>

                        <select class="form-select form-select-sm w-auto" id="schoolYearFilter">
                            <option value="">Tất cả</option>

                            <% years.forEach(y => { %>
                                <option value="<%= y %>" <%= y === selectedYear ? 'selected' : '' %>>
                                    <%= y %>
                                </option>
                            <% }) %>
                        </select>

                        <div class="input-group input-group-sm w-auto ms-auto">
                            <input type="text" class="form-control" placeholder="Tìm kiếm...">
                            <button class="btn btn-outline-secondary" type="button">
                                <i class="fas fa-search"></i> Tìm kiếm
                            </button>
                        </div>
                    </div>

                    <!-- Table -->
                    <div class="card mt-2">
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover table-acceptance mb-0">
                                    <thead>
                                        <tr>
                                            <th>Mã biên bản</th>
                                            <th>Năm học</th>
                                            <th>Trạng thái</th>
                                            <th>Lựa chọn</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <% data.forEach(item => { %>
                                            <tr>
                                                <td class="fw-bold"><%= item.id %></td>
                                                <td><%= item.year %></td>

                                                <td>
                                                    <% if (item.status === 'Đã nghiệm thu') { %>
                                                        <span class="badge bg-success">Đã nghiệm thu</span>
                                                    <% } else { %>
                                                        <span class="badge bg-warning text-dark">Cần nghiệm thu</span>
                                                    <% } %>
                                                </td>

                                                <td>
                                                    <a class="btn btn-link p-0 me-2"
                                                       href="/acceptance/detail/<%= item.id %>"
                                                       title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </a>

                                                    <% if (item.status !== 'Đã nghiệm thu') { %>
                                                        <a class="btn btn-link p-0 me-2"
                                                           href="/acceptance/edit/<%= item.id %>"
                                                           title="Sửa chi tiết">
                                                            <i class="fas fa-pencil-alt"></i>
                                                        </a>

                                                        <button class="btn btn-link p-0"
                                                                onclick="confirmDelete('<%= item.id %>')"
                                                                title="Xóa chi tiết">
                                                            <i class="fas fa-trash-alt text-danger"></i>
                                                        </button>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('../../../views/partials/footer') %>

    <script src="/js/bootstrap.bundle.min.js"></script>
    <script>
        function confirmDelete(id) {
            if (confirm(`Bạn có chắc chắn muốn xóa biên bản nghiệm thu ${id} không?`)) {
                window.location.href = `/acceptance/delete/${id}`;
            }
        }
    </script>
</body>
</html>
