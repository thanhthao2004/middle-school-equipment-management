<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý nhà cung cấp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/suppliers.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <!-- Header -->
    <%- include('../../../views/partials/header', { currentPage: 'suppliers' , user: typeof user !=='undefined' ? user :
        { role: 'ql_thiet_bi' } }) %>

        <!-- Main Layout with Sidebar -->
        <div class="container-fluid p-0">
            <div class="row g-0">
                <!-- Sidebar QLTB -->
                <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'suppliers' , user: typeof user
                    !=='undefined' ? user : { role: 'ql_thiet_bi' } }) %>

                    <!-- Main Content -->
                    <div class="col-md-9 col-lg-10 main-content">
                        <div class="container-fluid py-4">
                            <!-- Page Header -->
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h1 class="h3 mb-0">QUẢN LÝ NHÀ CUNG CẤP</h1>

                                <div class="d-flex gap-2">
                                    <a href="/manager/suppliers/inactive" class="btn btn-outline-secondary">
                                        <i class="fas fa-ban"></i> Nhà cung cấp ngừng hợp tác
                                    </a>

                                    <a href="/manager/suppliers/add" class="btn btn-primary">
                                        <i class="fas fa-plus"></i> Thêm nhà cung cấp mới
                                    </a>
                                </div>
                            </div>

                            <!-- Search Box -->
                            <div class="card mb-4">
                                <div class="card-body">
                                    <div class="row g-3">
                                        <div class="col-12 col-md-8">
                                            <form method="GET" action="/manager/suppliers">
                                                <div class="row g-3">
                                                    <div class="col-12 col-md-8">
                                                        <input type="text" name="keyword" class="form-control"
                                                            placeholder="Tìm theo tên hoặc mã NCC..."
                                                            value="<%= keyword || '' %>">
                                                    </div>
                                                    <div class="col-12 col-md-4">
                                                        <button class="btn btn-primary w-100">
                                                            <i class="fas fa-search"></i> Tìm kiếm
                                                        </button>
                                                    </div>
                                                </div>
                                            </form>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Table -->
                            <div class="card">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Mã NCC</th>
                                                    <th>Tên NCC</th>
                                                    <th>Địa Chỉ</th>
                                                    <th>SĐT</th>
                                                    <th>Email</th>
                                                    <th>Loại Thiết Bị</th>
                                                    <th>Ngày Hợp Tác</th>
                                                    <th>Trạng Thái</th>
                                                    <th>Thao Tác</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% suppliers.forEach(s=> { %>
                                                    <tr>
                                                        <!-- Mã NCC -->
                                                        <td>
                                                            <span class="badge bg-secondary">
                                                                <%= s.maNCC %>
                                                            </span>
                                                        </td>

                                                        <!-- Tên NCC -->
                                                        <td>
                                                            <%= s.name %>
                                                        </td>

                                                        <!-- Địa chỉ -->
                                                        <td>
                                                            <%= s.address || '-' %>
                                                        </td>

                                                        <!-- SĐT -->
                                                        <td>
                                                            <%= s.phone || '-' %>
                                                        </td>

                                                        <!-- Email -->
                                                        <td>
                                                            <%= s.email || '-' %>
                                                        </td>

                                                        <!-- Loại thiết bị -->
                                                        <td>
                                                            <%= s.type || '-' %>
                                                        </td>

                                                        <!-- Ngày hợp tác -->
                                                        <td>
                                                            <%= s.contractDate ? new
                                                                Date(s.contractDate).toLocaleDateString('vi-VN') : '-'
                                                                %>
                                                        </td>

                                                        <!-- Trạng thái -->
                                                        <td>
                                                            <span
                                                                class="badge <%= s.status === 'Ngừng hợp tác' ? 'bg-danger' : 'bg-success' %>">
                                                                <%= s.status %>
                                                            </span>
                                                        </td>

                                                        <!-- Thao tác -->
                                                        <td>
                                                            <div class="btn-group btn-group-sm">
                                                                <a href="/manager/suppliers/edit/<%= s._id %>"
                                                                    class="btn btn-warning">
                                                                    <i class="fas fa-edit"></i> Sửa
                                                                </a>
                                                                <a href="#" class="btn btn-danger btn-delete"
                                                                    data-id="<%= s._id %>" data-name="<%= s.name %>">
                                                                    <i class="fas fa-trash-alt"></i> Xóa
                                                                </a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        </div>

        <!-- Footer -->
        <%- include('../../../views/partials/footer') %>

            <!-- Modal Xóa -->
            <div id="deleteModal" class="modal-overlay">
                <div class="modal-box">
                    <h3><i class="fas fa-triangle-exclamation"></i> Xác nhận xóa</h3>
                    <p id="deleteText"></p>
                    <form id="deleteForm" method="POST">
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Xác nhận</button>
                        <button id="cancelBtn" type="button" class="btn btn-secondary"><i class="fas fa-times"></i>
                            Hủy</button>
                    </form>
                </div>
            </div>

            <!-- Bootstrap JS -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="/javascripts/suppliers.js"></script>
</body>

</html>