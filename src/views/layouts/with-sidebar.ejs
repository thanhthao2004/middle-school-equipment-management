<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= typeof title !=='undefined' ? title : 'Middle School Equipment Management' %>
    </title>

    <!-- Bootstrap 5.3.0 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome 6.4.0 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- Custom Styles -->
    <link href="/stylesheets/style.css" rel="stylesheet">
    
    <!-- Additional CSS for specific pages -->
    <% if (typeof additionalCSS !=='undefined' && additionalCSS) { %>
        <%- additionalCSS %>
            <% } %>
</head>

<body class="<%= typeof bodyClass !== 'undefined' ? bodyClass : '' %>" style="background-color: var(--light-gray);">
    <div class="app-shell">
        <!-- Sidebar -->
        <%- include('../partials/' + (typeof sidebarType !== 'undefined' ? sidebarType : 'borrow-sidebar'), { currentPage, user }) %>
        
        <!-- Main Content -->
        <div class="main-content">
            <!-- Header -->
            <%- include('../partials/header', { currentPage, user }) %>
            
            <!-- Page Content -->
            <div class="container-fluid py-4">
                <%- body %>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Font Awesome JS fallback (ensures SVG+JS icons render if webfont method is blocked) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"
        crossorigin="anonymous"></script>

    <!-- Additional JS for specific pages -->
    <% if (typeof additionalJS !=='undefined' && additionalJS) { %>
        <%- additionalJS %>
            <% } %>
</body>

</html>