<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        <%= title %>
    </title>

    <!-- Bootstrap 5 (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&family=Poppins:wght@600&display=swap"
        rel="stylesheet">

    <!-- App stylesheet -->
    <link href="/public/stylesheets/style.css" rel="stylesheet">
    <!-- Font Awesome for default avatar icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Flatpickr datepicker -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

    <meta name="color-scheme" content="light dark">
    <style>
        :root {
            --error-red: #dc3545;
        }

        .avatar-img {
            width: 140px;
            height: 140px;
            border-radius: 50%;
            background-color: #e9ecef;
            border: 4px solid #ffffff;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .avatar-wrapper {
            width: 140px;
        }

        /* make the user icon scale to the avatar size */
        .avatar-img i {
            font-size: 56px;
            color: #6c757d;
            line-height: 1
        }

        /* required marker color per COLOR_GUIDELINES */
        .required {
            color: var(--error-red);
        }
    </style>
</head>

<body>
    <div class="container py-5">
        <div class="mx-auto profile-card shadow-sm">
            <div class="text-center mb-4">
                <h1 class="page-title mb-0">Quản lý thông tin cá nhân</h1>

            </div>

            <form action="/profile" method="post" enctype="multipart/form-data" novalidate>
                <div class="row g-4">
                    <div class="col-lg-4 text-center">
                        <div class="avatar-wrapper mx-auto mb-2 position-relative">
                            <div id="avatar-preview" class="avatar-img d-flex align-items-center justify-content-center"
                                role="img" aria-label="avatar">
                                <i class="fas fa-user text-secondary"></i>
                            </div>
                            <button type="button" id="remove-avatar"
                                class="btn btn-sm btn-outline-secondary remove-avatar d-none position-absolute"
                                style="top:6px; right:6px;" title="Xóa ảnh">X</button>
                        </div>

                        <label for="avatar-input" class="btn btn-outline-primary btn-sm w-100 mb-2">Chọn
                            ảnh...</label>
                        <input id="avatar-input" name="avatar" type="file" accept="image/*" class="d-none" />

                        <div class="field-note">Định dạng: JPG/PNG, tối đa 2MB. Kéo thả hoặc chọn file.</div>
                    </div>

                    <div class="col-lg-8">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Mã nhân viên</label>
                                <input class="form-control input-box" name="code" value="" readonly />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Chức vụ</label>
                                <input class="form-control input-box" name="position" value=""
                                    placeholder="VD: Nhân viên, Quản lý..." />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Họ và tên <span class="required">(*)</span></label>
                                <input required class="form-control input-box" name="fullName" value=""
                                    placeholder="Nhập họ và tên" />
                                <div class="invalid-feedback">Vui lòng nhập họ và tên.</div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Số điện thoại <span class="required">(*)</span></label>
                                <input required pattern="[\d\+\-\s]+" class="form-control input-box" name="phone"
                                    value="" placeholder="VD: 0912xxxxxx" />
                                <div class="invalid-feedback">Vui lòng nhập số điện thoại hợp lệ.</div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Ngày sinh <span class="required">(*)</span></label>
                                <!-- Use flatpickr for consistent calendar picker across browsers -->
                                <input required type="text" id="dob" class="form-control input-box" name="dob" value=""
                                    placeholder="YYYY-MM-DD" autocomplete="off" />
                                <div class="invalid-feedback">Vui lòng chọn ngày sinh.</div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Địa chỉ</label>
                                <input class="form-control input-box" name="address" value=""
                                    placeholder="Địa chỉ liên hệ" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Email <span class="required">(*)</span></label>
                                <input required type="email" class="form-control input-box" name="email" value=""
                                    placeholder="you@example.com" />
                                <div class="invalid-feedback">Vui lòng nhập email hợp lệ.</div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a href="/" class="btn btn-danger">Hủy bỏ</a>
                            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS (Popper included) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Flatpickr -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <script>
        // Avatar preview + remove
        (function () {
            const input = document.getElementById('avatar-input');
            const preview = document.getElementById('avatar-preview');
            const removeBtn = document.getElementById('remove-avatar');

            if (!input) return;

            input.addEventListener('change', function (e) {
                const f = e.target.files && e.target.files[0];
                if (!f) return;
                if (f.size > 2 * 1024 * 1024) {
                    alert('Kích thước ảnh không được lớn hơn 2MB.');
                    input.value = '';
                    return;
                }
                const reader = new FileReader();
                reader.onload = function (ev) {
                    // set preview div background to the selected image and remove icon
                    preview.style.backgroundImage = `url('${ev.target.result}')`;
                    preview.style.backgroundSize = 'cover';
                    preview.style.backgroundPosition = 'center';
                    preview.innerHTML = '';
                    removeBtn.classList.remove('d-none');
                };
                reader.readAsDataURL(f);
            });

            removeBtn.addEventListener('click', function () {
                // restore default icon
                preview.style.backgroundImage = '';
                preview.innerHTML = '<i class="fas fa-user text-secondary"></i>';
                input.value = '';
                removeBtn.classList.add('d-none');
            });

            // Basic client-side validation bootstrap-style
            const form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            }
            // initialize flatpickr on dob input
            if (typeof flatpickr !== 'undefined') {
                flatpickr("#dob", {
                    dateFormat: 'Y-m-d',
                    altInput: true,
                    altFormat: 'd/m/Y',
                    maxDate: 'today',
                    allowInput: true
                });
            }
        })();
    </script>
</body>

</html>