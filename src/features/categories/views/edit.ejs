<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sửa danh mục</title>

  <!-- Bootstrap 5.3.0 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome 6.4.0 -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/categories.css">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
  <!-- Header -->
  <%- include('../../../views/partials/header', { currentPage: 'categories' , user: typeof user !=='undefined' ? user :
    { role: 'ql_thiet_bi' } }) %>

    <!-- Main Layout with Sidebar -->
    <div class="container-fluid p-0">
      <div class="row g-0">
        <!-- Sidebar QLTB -->
        <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'categories' , user: typeof user
          !=='undefined' ? user : { role: 'ql_thiet_bi' } }) %>

          <!-- Main Content -->
          <div class="col-md-9 col-lg-10 main-content">
            <div class="container-fluid py-4">
              <!-- Page Header -->
              <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">SỬA DANH MỤC</h1>
                <a href="/manager/categories" class="btn btn-secondary">
                  <i class="fas fa-arrow-left"></i> Quay lại
                </a>
              </div>

              <!-- Form -->
              <div class="card">
                <div class="card-body">
                  <form action="/manager/categories/<%= category.id %>" method="POST">
                    <div class="row g-3">
                      <div class="col-12 col-md-6">
                        <label for="id" class="form-label">Mã danh mục</label>
                        <input type="text" id="id" name="id" class="form-control input-disabled" value="<%= category.id %>" readonly>
                      </div>

                      <div class="col-12 col-md-6">
                        <label for="name" class="form-label">Tên danh mục <span class="text-danger">*</span></label>
                        <input type="text" id="name" name="name" class="form-control" value="<%= category.name %>"
                          required>
                      </div>

                      <div class="col-12">
                        <label for="location" class="form-label">Vị trí lưu trữ <span
                            class="text-danger">*</span></label>
                        <input type="text" id="location" name="location" class="form-control"
                          value="<%= category.location %>" required>
                      </div>
                    </div>

                    <div class="d-flex gap-2 justify-content-end mt-4">
                      <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Lưu</button>
                      <button type="button" class="btn btn-secondary"
                        onclick="window.location.href='/manager/categories'">
                        <i class="fas fa-times"></i> Hủy
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>

    <!-- Footer -->
    <%- include('../../../views/partials/footer') %>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
      <script src="/public/javascripts/categories.js"></script>
</body>

</html>