<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lịch sử mượn/trả</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet">
    <link href="/stylesheets/borrow.css" rel="stylesheet">
</head>
<body>
    <% const userObj = (typeof user !== 'undefined' && user) ? user : { role: 'giao_vien' }; %>
    <div class="app-shell">
        <%- include('../../../views/partials/teacher-sidebar', { currentPage: 'history', user: userObj }) %>

        <div class="main-content">
        
        <%- include('../../../views/partials/header', { currentPage: 'history', user: userObj }) %>

        <div class="container py-4">

            <div class="card mb-4">
                <div class="card-body">
                    <div class="row g-3 align-items-end">
                        <div class="col-12 col-md-2">
                            <label class="form-label small text-muted fw-bold">Mã phiếu</label>
                            <input type="text" class="form-control" id="filterId" placeholder="VD: PM2, PT1">
                        </div>
                        <div class="col-12 col-md-2">
                            <label class="form-label small text-muted fw-bold">Loại phiếu</label>
                            <select class="form-select" id="filterType">
                                <option value="">Tất cả</option>
                                <option value="borrow">Phiếu mượn</option>
                                <option value="return">Phiếu trả</option>
                            </select>
                        </div>
                        <div class="col-12 col-md-2">
                            <label class="form-label small text-muted fw-bold">Trạng thái</label>
                            <select class="form-select" id="filterStatus">
                                <option value="">Tất cả</option>
                                <option value="dang_muon">Chờ duyệt</option>
                                <option value="approved">Đã duyệt</option>
                                <option value="rejected">Không duyệt</option>
                                <option value="da_hoan_tat">Đã hoàn tất</option>
                                <option value="huy">Đã hủy</option>
                            </select>
                        </div>
                        <div class="col-6 col-md-2">
                            <label class="form-label small text-muted fw-bold">Ngày tạo từ</label>
                            <input type="date" class="form-control" id="filterFrom">
                        </div>
                        <div class="col-6 col-md-2">
                            <label class="form-label small text-muted fw-bold">Ngày tạo đến</label>
                            <input type="date" class="form-control" id="filterTo">
                        </div>
                        <div class="col-12 col-md-2 d-flex justify-content-end gap-2 flex-wrap">
         
                    <button class="btn btn-outline-info text-nowrap px-3" id="btnApply"><i class="fas fa-filter me-1"></i>Áp dụng</button>
                            <button class="btn btn-outline-secondary text-nowrap px-3" id="btnReset"><i class="fas fa-undo me-1"></i>Reset</button>
                        </div>
                    </div>
        
         </div>
            </div>

            <div class="card mt-2">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover equipment-table mb-0" id="historyTable">
             
                <thead>
                                <tr>
                                    <th style="width: 150px;">Mã phiếu</th>
                          
           <th style="width: 120px;">Ngày tạo</th>
                                    <th style="width: 140px;">Trạng thái</th>
                                    <th style="width: 120px;">Ngày mượn/trả</th>
                                    <th style="width: 180px;">Lựa chọn</th>
                     
            </tr>
                            </thead>
                            <tbody id="historyTbody">
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        <i class="fas fa-spinner fa-spin me-2"></i>Đang tải dữ liệu...
                                    </td>
                                </tr>
                            </tbody>
                        </table>
      
               </div>
                </div>
            </div>
        </div>

        <%- include('../../../views/partials/footer') %>
        
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/public/javascripts/history.js"></script>
</body>
</html>