<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title || 'Thông tin cá nhân' %>
    </title>
    <!-- Bootstrap 5.3.0 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome 6.4.0 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <% const userObj=(typeof user !=='undefined' && user) ? user : { role: 'giao_vien' }; %>
        <div class="container-fluid p-0">
            <div class="row g-0">
                <!-- Sidebar theo vai trò -->
                <% if (userObj.role==='admin' ) { %>
                    <%- include('../../../views/partials/admin-sidebar', { currentPage: 'profile' , user: userObj }) %>
                        <% } else if (userObj.role==='ql_thiet_bi' ) { %>
                            <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'profile' , user: userObj
                                }) %>
                                <% } else if (userObj.role==='hieu_truong' ) { %>
                                    <%- include('../../../views/partials/principal-sidebar', { currentPage: 'profile' ,
                                        user: userObj }) %>
                                        <% } else { %>
                                            <%- include('../../../views/partials/teacher-sidebar', {
                                                currentPage: 'profile' , user: userObj }) %>
                                                <% } %>

                                                    <!-- Main Content -->
                                                    <div class="col-md-9 col-lg-10 main-content">
                                                        <%- include('../../../views/partials/header', {
                                                            currentPage: 'profile' , user: userObj }) %>

                                                            <div class="container py-4">
                                                                <div
                                                                    class="d-flex justify-content-between align-items-center mb-4">

                                                                    <a class="btn btn-secondary" href="/">
                                                                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                                                                    </a>
                                                                </div>

                                                                <div class="card">
                                                                    <div class="card-header bg-primary text-white">
                                                                        <h5 class="card-title mb-0">Thông tin tài khoản
                                                                        </h5>
                                                                    </div>
                                                                    <div class="card-body">

                                                                        <!-- Avatar Section -->
                                                                        <h6 class="text-primary mb-3"><i
                                                                                class="fas fa-image me-2"></i>Ảnh đại
                                                                            diện</h6>
                                                                        <div class="row mb-4">
                                                                            <div class="col-md-3 text-center">
                                                                                <% if (userDetail && userDetail.profile
                                                                                    && userDetail.profile.avatarUrl) {
                                                                                    %>
                                                                                    <img src="<%= userDetail.profile.avatarUrl %>"
                                                                                        alt="Avatar"
                                                                                        class="img-fluid rounded"
                                                                                        style="max-width: 200px; max-height: 200px; object-fit: cover;">
                                                                                    <% } else { %>
                                                                                        <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                                                                            style="width: 200px; height: 200px;">
                                                                                            <i class="fas fa-user"
                                                                                                style="font-size: 4rem; color: #ccc;"></i>
                                                                                        </div>
                                                                                        <% } %>
                                                                            </div>
                                                                            <div class="col-md-9">
                                                                                <p class="text-muted">Để thay đổi ảnh
                                                                                    đại diện, vui lòng nhấn nút "Chỉnh
                                                                                    sửa thông tin" bên dưới.</p>
                                                                            </div>
                                                                        </div>

                                                                        <hr>

                                                                        <!-- Personal Info -->
                                                                        <h6 class="text-primary mb-3"><i
                                                                                class="fas fa-user me-2"></i>Thông tin
                                                                            cá nhân</h6>
                                                                        <div class="row mb-4">
                                                                            <div class="col-md-6 mb-3">
                                                                                <label class="form-label fw-bold">Họ và
                                                                                    tên:</label>
                                                                                <p class="form-control-plaintext">
                                                                                    <%= userDetail && userDetail.hoTen
                                                                                        %>
                                                                                </p>
                                                                            </div>
                                                                            <div class="col-md-6 mb-3">
                                                                                <label class="form-label fw-bold">Mã
                                                                                    nhân viên:</label>
                                                                                <p class="form-control-plaintext">
                                                                                    <%= userDetail && userDetail.maNV %>
                                                                                </p>
                                                                            </div>
                                                                            <div class="col-md-6 mb-3">
                                                                                <label class="form-label fw-bold">Số
                                                                                    điện thoại:</label>
                                                                                <p class="form-control-plaintext">
                                                                                    <%= (userDetail &&
                                                                                        userDetail.soDienThoai)
                                                                                        || 'Chưa cập nhật' %>
                                                                                </p>
                                                                            </div>
                                                                            <div class="col-md-6 mb-3">
                                                                                <label class="form-label fw-bold">Địa
                                                                                    chỉ:</label>
                                                                                <p class="form-control-plaintext">
                                                                                    <%= (userDetail &&
                                                                                        userDetail.diaChi)
                                                                                        || 'Chưa cập nhật' %>
                                                                                </p>
                                                                            </div>
                                                                            <div class="col-md-6 mb-3">
                                                                                <label class="form-label fw-bold">Ngày
                                                                                    sinh:</label>
                                                                                <p class="form-control-plaintext">
                                                                                    <%= (userDetail &&
                                                                                        userDetail.ngaySinh) ? new
                                                                                        Date(userDetail.ngaySinh).toLocaleDateString('vi-VN')
                                                                                        : 'Chưa cập nhật' %>
                                                                                </p>
                                                                            </div>
                                                                            <div class="col-md-6 mb-3">
                                                                                <label class="form-label fw-bold">Giới
                                                                                    tính:</label>
                                                                                <p class="form-control-plaintext">
                                                                                    <%= (userDetail &&
                                                                                        userDetail.gioiTinh) || 'Nam' %>
                                                                                </p>
                                                                            </div>
                                                                        </div>

                                                                        <hr>

                                                                        <!-- Login Info -->
                                                                        <h6 class="text-primary mb-3"><i
                                                                                class="fas fa-key me-2"></i>Thông tin
                                                                            đăng nhập</h6>
                                                                        <div class="row mb-4">
                                                                            <div class="col-md-6 mb-3">
                                                                                <label class="form-label fw-bold">Tên
                                                                                    đăng nhập:</label>
                                                                                <p class="form-control-plaintext">
                                                                                    <%= userDetail &&
                                                                                        userDetail.username %>
                                                                                </p>
                                                                            </div>
                                                                            <div class="col-md-6 mb-3">
                                                                                <label
                                                                                    class="form-label fw-bold">Email:</label>
                                                                                <p class="form-control-plaintext">
                                                                                    <%= userDetail && userDetail.email
                                                                                        %>
                                                                                </p>
                                                                            </div>
                                                                        </div>

                                                                        <hr>

                                                                        <!-- Work Info -->
                                                                        <h6 class="text-primary mb-3"><i
                                                                                class="fas fa-briefcase me-2"></i>Thông
                                                                            tin công việc</h6>
                                                                        <div class="row mb-4">
                                                                            <div class="col-md-6 mb-3">
                                                                                <label class="form-label fw-bold">Vai
                                                                                    trò:</label>
                                                                                <div>
                                                                                    <% if (userDetail &&
                                                                                        userDetail.role==='admin' ) { %>
                                                                                        <span
                                                                                            class="badge bg-danger">Quản
                                                                                            trị viên</span>
                                                                                        <% } else if (userDetail &&
                                                                                            userDetail.role==='hieu_truong'
                                                                                            ) { %>
                                                                                            <span
                                                                                                class="badge bg-primary">Hiệu
                                                                                                trưởng</span>
                                                                                            <% } else if (userDetail &&
                                                                                                userDetail.role==='to_truong'
                                                                                                ) { %>
                                                                                                <span
                                                                                                    class="badge bg-info text-dark">Tổ
                                                                                                    trưởng</span>
                                                                                                <% } else if (userDetail
                                                                                                    &&
                                                                                                    userDetail.role==='giao_vien'
                                                                                                    ) { %>
                                                                                                    <span
                                                                                                        class="badge bg-success">Giáo
                                                                                                        viên</span>
                                                                                                    <% } else if
                                                                                                        (userDetail &&
                                                                                                        userDetail.role==='ql_thiet_bi'
                                                                                                        ) { %>
                                                                                                        <span
                                                                                                            class="badge bg-warning text-dark">QL
                                                                                                            Thiết
                                                                                                            bị</span>
                                                                                                        <% } else if
                                                                                                            (userDetail)
                                                                                                            { %>
                                                                                                            <span
                                                                                                                class="badge bg-secondary">
                                                                                                                <%= userDetail.role
                                                                                                                    %>
                                                                                                            </span>
                                                                                                            <% } %>
                                                                                </div>
                                                                            </div>
                                                                            <div class="col-md-6 mb-3">
                                                                                <label class="form-label fw-bold">Năm
                                                                                    kinh nghiệm:</label>
                                                                                <p class="form-control-plaintext">
                                                                                    <%= (userDetail &&
                                                                                        userDetail.chucVu)
                                                                                        || 'Chưa cập nhật' %>
                                                                                </p>
                                                                            </div>
                                                                            <div class="col-md-6 mb-3">
                                                                                <label class="form-label fw-bold">Bộ
                                                                                    môn:</label>
                                                                                <p class="form-control-plaintext">
                                                                                    <%= (userDetail && userDetail.boMon)
                                                                                        || 'Chưa cập nhật' %>
                                                                                </p>
                                                                            </div>
                                                                            <div class="col-md-6 mb-3">
                                                                                <label class="form-label fw-bold">Trình
                                                                                    độ chuyên môn:</label>
                                                                                <p class="form-control-plaintext">
                                                                                    <%= (userDetail &&
                                                                                        userDetail.trinhDo)
                                                                                        || 'Chưa cập nhật' %>
                                                                                </p>
                                                                            </div>
                                                                            <div class="col-md-6 mb-3">
                                                                                <label class="form-label fw-bold">Trạng
                                                                                    thái:</label>
                                                                                <div>
                                                                                    <% if (userDetail &&
                                                                                        userDetail.trangThai==='active'
                                                                                        ) { %>
                                                                                        <span
                                                                                            class="badge bg-success"><i
                                                                                                class="fas fa-check-circle me-1"></i>Hoạt
                                                                                            động</span>
                                                                                        <% } else { %>
                                                                                            <span
                                                                                                class="badge bg-secondary"><i
                                                                                                    class="fas fa-times-circle me-1"></i>Không
                                                                                                hoạt động</span>
                                                                                            <% } %>
                                                                                </div>
                                                                            </div>
                                                                        </div>

                                                                    </div>
                                                                    <div class="card-footer text-end">
                                                                        <a href="/profile/edit" class="btn btn-primary">
                                                                            <i class="fas fa-edit me-2"></i>Chỉnh sửa
                                                                            thông tin
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                    </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>