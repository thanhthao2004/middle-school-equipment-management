<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet">
    <link href="/stylesheets/purchasing-plans.css" rel="stylesheet">
    <link href="/stylesheets/training-plans.css" rel="stylesheet">
</head>

<body class="training-plans-page">
    <% const userObj=(typeof user !=='undefined' && user) ? user : { role: 'to_truong' }; %>

        <!-- Header -->
        <%- include('../../../views/partials/header', { currentPage: 'purchasing-plans' , user: userObj }) %>

            <div class="container-fluid p-0">
                <div class="row g-0">
                    <% if (userObj.role==='hieu_truong' ) { %>
                        <%- include('../../../views/partials/principal-sidebar', { currentPage: 'trainingPlans' , user:
                            userObj }) %>
                            <% } else { %>
                                <%- include('../../../views/partials/teacher-sidebar', { currentPage: 'training-plans' ,
                                    user: userObj }) %>
                                    <% } %>

                                        <div class="col-md-9 col-lg-10 main-content" style="padding-top: 60px;">
                                            <div class="container py-4">
                                                <main class="page-main">
                                                    <div class="page-header">
                                                        <h1>Xem kế hoạch đào tạo</h1>
                                                    </div>

                                                    <div class="controls d-flex justify-content-between">
                                                        <div class="left d-flex gap-2">
                                                            <select id="year-filter" class="form-select search-select"
                                                                aria-label="Năm học">
                                                                <option value="">Năm học</option>
                                                                <% if (years && years.length) { %>
                                                                    <% years.forEach(function(y){ %>
                                                                        <option value="<%= y %>" <%=(queryYear==y
                                                                            ? 'selected' : '' ) %>
                                                                            >
                                                                            <%= y %>
                                                                        </option>
                                                                        <% }) %>
                                                                            <% } %>
                                                            </select>
                                                            <button id="year-filter-btn"
                                                                class="btn btn-outline-primary">
                                                                <i class="fa-solid fa-magnifying-glass"></i>
                                                            </button>
                                                        </div>
                                                        <div class="right">
                                                            <% if (userObj.role==='hieu_truong' ) { %>
                                                                <a href="/principal/training-plans/create"
                                                                    class="btn btn-primary">
                                                                    <i class="fas fa-plus me-2"></i>Tạo kế hoạch mới
                                                                </a>
                                                                <% } %>
                                                        </div>
                                                    </div>

                                                    <div class="card card-table mt-3">
                                                        <div class="card-body">
                                                            <% if (trainingPlans && trainingPlans.length) { %>
                                                                <div class="table-responsive">
                                                                    <table class="table align-middle">
                                                                        <thead>
                                                                            <tr>
                                                                                <th>Mã kế hoạch</th>
                                                                                <th>Tên kế hoạch</th>
                                                                                <th>Năm học</th>
                                                                                <th>Ngày lập</th>
                                                                                <th>Hành động</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                            <% trainingPlans.forEach(function(plan){ %>
                                                                                <tr data-year="<%= plan.namHoc %>">
                                                                                    <td><span
                                                                                            class="badge bg-light text-dark">
                                                                                            <%= plan.maKeHoachDaoTao %>
                                                                                        </span></td>
                                                                                    <td class="fw-bold">
                                                                                        <%= plan.tenHienThi
                                                                                            || 'Chưa đặt tên' %>
                                                                                    </td>
                                                                                    <td>
                                                                                        <%= plan.namHoc %>
                                                                                    </td>
                                                                                    <td>
                                                                                        <%= plan.ngayLap ? (new
                                                                                            Date(plan.ngayLap)).toLocaleDateString('en-GB')
                                                                                            : (plan.createdAt ? (new
                                                                                            Date(plan.createdAt)).toLocaleDateString('en-GB')
                                                                                            : '' ) %>
                                                                                    </td>
                                                                                    <td class="text-center">
                                                                                        <% if (plan.duongDanFile) { %>
                                                                                            <a href="<%= plan.duongDanFile %>"
                                                                                                class="action-btn btn-view"
                                                                                                title="Xem kế hoạch (PDF)"
                                                                                                target="_blank">
                                                                                                <i
                                                                                                    class="fa-solid fa-eye"></i>
                                                                                            </a>
                                                                                            <a href="<%= plan.duongDanFile %>"
                                                                                                class="action-btn btn-view"
                                                                                                title="Tải xuống PDF"
                                                                                                download="<%= plan.tenHienThi || plan.tenFile %>">
                                                                                                <i
                                                                                                    class="fa-solid fa-download text-primary"></i>
                                                                                            </a>
                                                                                            <button type="button"
                                                                                                class="action-btn btn-delete text-danger"
                                                                                                title="Xóa kế hoạch"
                                                                                                data-id="<%= plan._id %>"
                                                                                                data-code="<%= plan.maKeHoachDaoTao %>">
                                                                                                <i
                                                                                                    class="fa-solid fa-trash-can"></i>
                                                                                            </button>
                                                                                            <% } %>
                                                                                    </td>
                                                                                </tr>
                                                                                <% }) %>
                                                                        </tbody>
                                                                    </table>
                                                                </div>
                                                                <div id="no-results" class="alert alert-warning mt-3"
                                                                    style="display:none">
                                                                    Không có kế hoạch đào tạo cho năm học đã chọn.
                                                                </div>
                                                                <% } else { %>
                                                                    <div class="alert alert-info">Chưa có kế hoạch đào
                                                                        tạo nào.</div>
                                                                    <% } %>
                                                        </div>
                                                    </div>
                                                </main>
                                            </div>
                                        </div>
                </div>
            </div>

            <%- include('../../../views/partials/footer') %>

                <!-- Delete Modal -->
                <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Bạn có chắc chắn muốn xóa kế hoạch đào tạo <strong id="deletePlanCode"></strong> không?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Xác nhận xóa</button>
                            </div>
                        </div>
                    </div>
                </div>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
                <script>
                    // Filter theo năm học
                    (function () {
                        const yearSelect = document.getElementById('year-filter');
                        const yearBtn = document.getElementById('year-filter-btn');
                        const noResults = document.getElementById('no-results');

                        function filterByYear(year) {
                            const rows = document.querySelectorAll('table tbody tr[data-year]');
                            let any = false;
                            rows.forEach(r => {
                                const y = r.getAttribute('data-year') || '';
                                if (!year || year === '' || y === year) {
                                    r.style.display = '';
                                    any = true;
                                } else {
                                    r.style.display = 'none';
                                }
                            });
                            if (noResults) noResults.style.display = any ? 'none' : 'block';
                        }

                        if (yearBtn) {
                            yearBtn.addEventListener('click', function () {
                                filterByYear(yearSelect ? yearSelect.value : '');
                            });
                        }
                    })();

                    // Delete Logic
                    (function () {
                        const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
                        const deletePlanCode = document.getElementById('deletePlanCode');
                        const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
                        let planIdToDelete = null;
                        let rowToDelete = null;

                        document.querySelectorAll('.btn-delete').forEach(btn => {
                            btn.addEventListener('click', function () {
                                planIdToDelete = this.dataset.id;
                                deletePlanCode.textContent = this.dataset.code;
                                rowToDelete = this.closest('tr');
                                deleteModal.show();
                            });
                        });

                        confirmDeleteBtn.addEventListener('click', async function () {
                            if (!planIdToDelete) return;

                            try {
                                const response = await fetch(`${window.location.pathname.replace(/\/$/, '')}/${planIdToDelete}`, {
                                    method: 'DELETE'
                                });
                                const data = await response.json();

                                if (data.success) {
                                    rowToDelete.remove();
                                    deleteModal.hide();
                                    // Refresh status if table empty
                                    if (document.querySelectorAll('table tbody tr').length === 0) {
                                        window.location.reload();
                                    }
                                } else {
                                    alert(data.message || 'Lỗi khi xóa kế hoạch');
                                }
                            } catch (error) {
                                console.error('Delete error:', error);
                                alert('Lỗi kết nối máy chủ');
                            }
                        });
                    })();
                </script>
</body>

</html>