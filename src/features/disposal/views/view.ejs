<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết báo cáo thanh lý</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="/stylesheets/disposal.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <!-- ===== HEADER ===== -->
    <%- include('../../../views/partials/header', { currentPage: 'disposal' , user: typeof user !=='undefined' ? user :
        { role: 'ql_thiet_bi' } }) %>

        <!-- ===== MAIN LAYOUT ===== -->
        <div class="container-fluid p-0">
            <div class="row g-0">
                <!-- ===== SIDEBAR ===== -->
                <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'disposal' , user: typeof user
                    !=='undefined' ? user : { role: 'ql_thiet_bi' } }) %>

                    <!-- ===== MAIN CONTENT ===== -->
                    <div class="col-md-9 col-lg-10 main-content">
                        <div class="container-fluid py-4">

                            <!-- Page Header -->
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h1 class="h3 mb-0">CHI TIẾT BÁO CÁO THANH LÝ THIẾT BỊ HỎNG</h1>
                                <a href="/manager/disposal" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Quay lại
                                </a>
                            </div>

                            <!-- ===== INFO BOXES (GIỮ NGUYÊN STYLE) ===== -->
                            <div class="card mb-4">
                                <div class="card-body">
                                    <div class="d-flex flex-wrap gap-3 align-items-center">

                                        <div class="info-box info-code">
                                            <label>Mã biên bản</label>
                                            <div class="value">
                                                <%= disposal.code %>
                                            </div>
                                        </div>

                                        <div class="info-box info-year">
                                            <label>Năm học</label>
                                            <div class="value">
                                                <%= disposal.year %>
                                            </div>
                                        </div>

                                        <div class="info-box info-date">
                                            <label>Ngày lập</label>
                                            <div class="value">
                                                <%= disposal.created_at %>
                                            </div>
                                        </div>

                                        <!-- Filters -->
                                        <div class="disposal-filters ms-auto">
                                            <div class="disposal-filter">
                                                <label for="filterSeverity">Mức độ hỏng</label>
                                                <select id="filterSeverity">
                                                    <option value="all">Tất cả</option>
                                                    <option value="Hỏng nhẹ">Hỏng nhẹ</option>
                                                    <option value="Hỏng nặng">Hỏng nặng</option>
                                                </select>
                                            </div>

                                            <div class="disposal-filter">
                                                <label for="filterDepartment">Bộ môn quản lý</label>
                                                <select id="filterDepartment">
                                                    <option value="all">Tất cả</option>
                                                    <% let departments=[]; disposal.details.forEach(d=> {
                                                        if (!departments.includes(d.department)) {
                                                        departments.push(d.department);
                                                        }
                                                        });
                                                        departments.forEach(dep => {
                                                        %>
                                                        <option value="<%= dep %>">
                                                            <%= dep %>
                                                        </option>
                                                        <% }) %>
                                                </select>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                            <!-- ===== TABLE ===== -->
                            <div class="card">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover align-middle">
                                            <thead>
                                                <tr>
                                                    <th>Tên thiết bị</th>
                                                    <th>Loại thiết bị</th>
                                                    <th>Bộ môn quản lý</th>
                                                    <th>Ngày phát hiện</th>
                                                    <th>Mức độ hỏng</th>
                                                    <th>Lý do</th>
                                                    <th>Giá bán</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if (disposal.details && disposal.details.length> 0) { %>
                                                    <% disposal.details.forEach(d=> { %>
                                                        <tr>
                                                            <td>
                                                                <%= d.name %>
                                                            </td>
                                                            <td>
                                                                <%= d.type %>
                                                            </td>
                                                            <td>
                                                                <%= d.department %>
                                                            </td>
                                                            <td>
                                                                <%= d.broken_date || d.detected_at || '' %>
                                                            </td>
                                                            <td>
                                                                <% if ((d.level || d.severity)==='Hỏng nặng' ) { %>
                                                                    <span class="level-badge level-severe">Hỏng
                                                                        nặng</span>
                                                                    <% } else if ((d.level || d.severity)==='Hỏng nhẹ' )
                                                                        { %>
                                                                        <span class="level-badge level-low">Hỏng
                                                                            nhẹ</span>
                                                                        <% } else { %>
                                                                            <span class="level-badge">
                                                                                <%= d.level || d.severity || '' %>
                                                                            </span>
                                                                            <% } %>
                                                            </td>
                                                            <td>
                                                                <%= d.reason %>
                                                            </td>
                                                            <td>
                                                                <%= d.price %>
                                                            </td>
                                                        </tr>
                                                        <% }) %>
                                                            <% } else { %>
                                                                <tr>
                                                                    <td colspan="7" class="text-center text-muted">
                                                                        Chưa có thiết bị nào được thêm
                                                                    </td>
                                                                </tr>
                                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
            </div>
        </div>

        <!-- ===== FOOTER ===== -->
        <%- include('../../../views/partials/footer') %>

            <!-- JS -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="/public/javascripts/disposal.js"></script>
</body>

</html>