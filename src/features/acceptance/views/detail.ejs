    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/public/stylesheets/style.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .acceptance-detail-box { border: 1px solid #ddd; padding: 30px; border-radius: 8px; background-color: #fff; max-width: 900px; margin: 20px auto; }
        .table-detail th, .table-detail td { font-size: 0.85rem; padding: 8px; }
        .table-detail th { background-color: #e9ecef; }
        .table-detail td { border-right: 1px solid #ccc; }
    </style>
</head>
<body>
    <!-- Header -->
    <%- include('../../../views/partials/header', { currentPage: 'acceptance', user: typeof user !== 'undefined' ? user : { role: 'ql_thiet_bi' } }) %>

