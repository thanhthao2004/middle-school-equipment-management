<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Danh Sách Người Dùng</title>
  <!-- Bootstrap 5.3.0 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome 6.4.0 -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/public/stylesheets/style.css">
</head>
<body>
  <!-- Header -->
  <% const userObj = (typeof user !== 'undefined' && user) ? user : { role: 'admin' }; %>
  <%- include('../../../views/partials/header', { currentPage: 'users', user: userObj }) %>

  <div class="container-fluid p-0">
    <div class="row g-0">
      <!-- Sidebar Admin -->
      <%- include('../../../views/partials/admin-sidebar', { currentPage: 'users', user: userObj }) %>

      <!-- Main Content -->
      <div class="col-md-9 col-lg-10 main-content">
        <div class="container py-4">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Danh Sách Người Dùng</h1>
            <a class="btn btn-primary" href="/admin/create">
              <i class="fas fa-user-plus me-2"></i>Tạo tài khoản mới
            </a>
          </div>

          <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <i class="fas fa-exclamation-circle me-2"></i><%= error %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% } %>

          <% if (typeof req !== 'undefined' && req.query && req.query.success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <i class="fas fa-check-circle me-2"></i><%= decodeURIComponent(req.query.success) %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% } %>

          <!-- Thanh tìm kiếm -->
          <div class="card mb-3">
            <div class="card-body">
              <form method="GET" action="/admin" class="d-flex gap-2">
                <div class="flex-grow-1">
                  <input 
                    type="text" 
                    name="q" 
                    class="form-control" 
                    placeholder="Tìm kiếm theo tên, chức vụ, số điện thoại,.." 
                    value="<%= typeof q !== 'undefined' ? q : '' %>"
                  >
                </div>
                <button type="submit" class="btn btn-outline-primary">
                  <i class="fas fa-search me-2"></i>Tìm kiếm
                </button>
                <% if (typeof q !== 'undefined' && q) { %>
                  <a href="/admin" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-2"></i>Xóa bộ lọc
                  </a>
                <% } %>
              </form>
            </div>
          </div>

          <div class="card">
            <div class="card-body">
              <div style="overflow-x:auto;">
                <table class="table table-hover">
                  <thead class="table-light">
                    <tr>
                      <th>ID</th>
                      <th>Họ và tên</th>
                      <th>Tên đăng nhập</th>
                      <th>Chức vụ</th>
                      <th>Số điện thoại</th>
                      <th>Năm KN</th>
                      <th>Giới tính</th>
                      <th>Bộ môn</th>
                      <th>Thao tác</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (users && users.length > 0) { %>
                      <% users.forEach(function(u) { %>
                      <tr>
                        <td><%= u.id %></td>
                        <td><%= u.fullname %></td>
                        <td><%= u.username %></td>
                        <td><%= u.role %></td>
                        <td><%= u.phone %></td>
                        <td><%= u.experience %></td>
                        <td><%= u.gender %></td>
                        <td><%= u.subject %></td>
                        <td>
                          <div class="btn-group" role="group">
                            <a href="/admin/<%= u.id %>" class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                              <i class="fas fa-eye"></i>
                            </a>
                            <form action="/admin/<%= u.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Bạn có chắc chắn muốn xóa người dùng này?');">
                              <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa">
                                <i class="fas fa-trash"></i>
                              </button>
                            </form>
                          </div>
                        </td>
                      </tr>
                      <% }); %>
                    <% } else { %>
                      <tr>
                        <td colspan="9" class="text-center text-muted py-4">
                          <i class="fas fa-inbox fa-2x mb-2"></i><br>
                          <% if (typeof q !== 'undefined' && q) { %>
                            Không tìm thấy kết quả cho "<%= q %>"
                          <% } else { %>
                            Chưa có người dùng nào.
                          <% } %>
                        </td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
