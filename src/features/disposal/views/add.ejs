<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tạo báo cáo thanh lý</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/stylesheets/disposal.css">
    <link rel="stylesheet" href="/public/stylesheets/style.css">
</head>

<body>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <!-- Sidebar -->
            <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'disposal' , user: typeof user
                !=='undefined' ? user : { role: 'ql_thiet_bi' } }) %>

                <!-- Main Content -->
                <div class="col-md-9 col-lg-10 main-content">
                    <!-- Header -->
                    <%- include('../../../views/partials/header', { currentPage: 'disposal' , user: typeof user
                        !=='undefined' ? user : { role: 'ql_thiet_bi' } }) %>
                        <div class="container py-4">
                            <div class="main">

                                <!-- HEADER -->
                                <div class="main-header">
                                    <div style="display:flex; align-items:center;">
                                        <button class="btn-menu" id="toggleSidebar"><i class="fas fa-bars"></i></button>
                                        <h2>TẠO BÁO CÁO THANH LÝ THIẾT BỊ HỎNG</h2>
                                    </div>
                                    <div class="user"><i class="fas fa-user"></i> QLTB</div>
                                </div>

                                <!-- INFO SECTION -->
                                <div class="disposal-info mb-3">
                                    <div class="info-box info-code">
                                        <label>Mã biên bản</label>
                                        <span class="value">
                                            <%= code || '' %>
                                        </span>
                                    </div>
                                    <div class="info-box info-year">
                                        <label>Năm học</label>
                                        <span class="value">
                                            <%= year || '' %>
                                        </span>
                                    </div>
                                    <div class="info-box info-date">
                                        <label>Ngày lập</label>
                                        <span class="value">
                                            <%= created_at || '' %>
                                        </span>
                                    </div>
                                </div>

                                <!-- BUTTON ADD DEVICE -->
                                <div style="margin-bottom:20px;">
                                    <a href="/manager/disposal/add-devices?code=<%= code %>&year=<%= year %>&created_at=<%= created_at %>"
                                        class="btn btn-primary">
                                        <i class="fas fa-plus"></i> Thêm thiết bị
                                    </a>
                                </div>

                                <!-- TABLE THIẾT BỊ -->
                                <table class="disposal-table table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Tên thiết bị</th>
                                            <th>Loại thiết bị</th>
                                            <th>Bộ môn quản lý</th>
                                            <th>Ngày phát hiện hỏng</th>
                                            <th>Mức độ hỏng</th>
                                            <th>Lý do hỏng</th>
                                            <th>Giá bán dự kiến</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (devices && devices.length> 0) { %>
                                            <% devices.forEach(d=> { %>
                                                <tr>
                                                    <td>
                                                        <%= d.name %>
                                                    </td>
                                                    <td>
                                                        <%= d.type %>
                                                    </td>
                                                    <td>
                                                        <%= d.department %>
                                                    </td>
                                                    <td>
                                                        <%= d.broken_date || '' %>
                                                    </td>
                                                    <td>
                                                        <%= d.level || '' %>
                                                    </td>
                                                    <td>
                                                        <%= d.reason || '' %>
                                                    </td>
                                                    <td>
                                                        <%= d.price ? d.price.toLocaleString() : '' %> VND
                                                    </td>
                                                </tr>
                                                <% }) %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="7" class="text-center text-muted">Chưa có thiết
                                                                bị nào được thêm
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>
                                </table>

                                <!-- Nút tạo báo cáo / hủy -->
                                <div style="display:flex; justify-content:flex-end; gap:10px; margin-top:20px;">
                                    <a href="/manager/disposal/create?code=<%= code %>&year=<%= year %>&created_at=<%= created_at %>"
                                        class="btn btn-primary">Tạo báo cáo</a>
                                    <a href="/manager/disposal" class="btn btn-secondary">Hủy</a>
                                </div>

                            </div>
                        </div>
                        <!-- Footer -->
                        <%- include('../../../views/partials/footer') %>
                </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/public/javascripts/disposal.js"></script>
</body>

</html>