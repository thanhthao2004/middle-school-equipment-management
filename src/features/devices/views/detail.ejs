<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết thiết bị - <%= device.maTB %></title>
    
    <!-- Bootstrap 5.3.0 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome 6.4.0 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/stylesheets/devices.css">
    <link rel="stylesheet" href="/public/stylesheets/style.css">
</head>
<body>
    <!-- Header -->
    <%- include('../../../views/partials/header', { currentPage: 'devices' }) %>

    <div class="container-fluid p-0">
        <div class="row g-0">
            <!-- Sidebar QLTB -->
            <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'devices' }) %>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 main-content">
                <div class="container py-4">
                    <!-- Page Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="h3 mb-0">CHI TIẾT THIẾT BỊ</h1>
                        <div class="d-flex gap-2">
                            <a href="/devices" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <a href="/devices/edit/<%= device._id %>" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                            <a href="/devices/delete/<%= device._id %>" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i> Xóa
                            </a>
                        </div>
                    </div>

                    <!-- Flash Messages -->
                    <% if (typeof messages !== 'undefined' && messages.success) { %>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <%= messages.success %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>

                    <!-- Device Details -->
                    <div class="row">
                        <!-- Main Info Card -->
                        <div class="col-md-8">
                            <div class="card mb-4">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> Thông tin thiết bị</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row mb-3">
                                        <div class="col-md-4 fw-bold">Mã thiết bị:</div>
                                        <div class="col-md-8">
                                            <span class="code-box"><%= device.maTB || '-' %></span>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-4 fw-bold">Tên thiết bị:</div>
                                        <div class="col-md-8"><%= device.tenTB || '-' %></div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-4 fw-bold">Danh mục:</div>
                                        <div class="col-md-8">
                                            <% if (device.category && device.category.tenDM) { %>
                                                <%= device.category.tenDM %>
                                            <% } else if (device.maDM) { %>
                                                <%= device.maDM %>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-4 fw-bold">Số lượng:</div>
                                        <div class="col-md-8">
                                            <span class="badge bg-info"><%= device.soLuong || 0 %></span>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-4 fw-bold">Trạng thái:</div>
                                        <div class="col-md-8">
                                            <% if (device.tinhTrangThietBi) { %>
                                                <span class="status-badge status-available">
                                                    <%= device.tinhTrangThietBi %>
                                                </span>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-4 fw-bold">Vị trí lưu trữ:</div>
                                        <div class="col-md-8"><%= device.viTriLuuTru || '-' %></div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-4 fw-bold">Nguồn gốc:</div>
                                        <div class="col-md-8"><%= device.nguonGoc || '-' %></div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-4 fw-bold">Ngày nhập:</div>
                                        <div class="col-md-8">
                                            <% if (device.ngayNhap) { %>
                                                <%= new Date(device.ngayNhap).toLocaleDateString('vi-VN') %>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-4 fw-bold">Ngày tạo:</div>
                                        <div class="col-md-8">
                                            <% if (device.createdAt) { %>
                                                <%= new Date(device.createdAt).toLocaleString('vi-VN') %>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-4 fw-bold">Cập nhật lần cuối:</div>
                                        <div class="col-md-8">
                                            <% if (device.updatedAt) { %>
                                                <%= new Date(device.updatedAt).toLocaleString('vi-VN') %>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Hướng dẫn sử dụng -->
                            <% if (device.huongDanSuDung) { %>
                                <div class="card mb-4">
                                    <div class="card-header bg-info text-white">
                                        <h5 class="mb-0"><i class="fas fa-book"></i> Hướng dẫn sử dụng</h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="mb-0"><%= device.huongDanSuDung %></p>
                                    </div>
                                </div>
                            <% } %>
                        </div>

                        <!-- Image Card -->
                        <div class="col-md-4">
                            <div class="card mb-4">
                                <div class="card-header bg-secondary text-white">
                                    <h5 class="mb-0"><i class="fas fa-image"></i> Hình ảnh</h5>
                                </div>
                                <div class="card-body text-center">
                                    <% if (device.hinhAnh) { %>
                                        <img src="<%= device.hinhAnh %>" 
                                             alt="<%= device.tenTB %>" 
                                             class="img-fluid rounded"
                                             style="max-height: 300px; width: auto;"
                                             onerror="this.src='https://via.placeholder.com/300x200?text=Không+có+hình+ảnh'">
                                    <% } else { %>
                                        <div class="text-muted py-5">
                                            <i class="fas fa-image fa-3x mb-3"></i>
                                            <p>Chưa có hình ảnh</p>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('../../../views/partials/footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

