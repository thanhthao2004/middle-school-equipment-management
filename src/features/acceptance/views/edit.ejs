<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sửa chi tiết Nghiệm thu</title>

    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        .acceptance-form-box {
            border: 1px solid #ddd;
            padding: 30px;
            border-radius: 8px;
            background-color: #fff;
            max-width: 1100px;
            margin: 20px auto;
        }

        .table-form th,
        .table-form td {
            font-size: 0.85rem;
            padding: 8px;
        }

        .table-form th {
            background-color: #e9ecef;
        }

        .table-form .form-control-sm {
            height: 30px;
            padding: 0.25rem 0.5rem;
            font-size: 0.8rem;
        }
    </style>
</head>

<body>

    <%- include('../../../views/partials/header', { currentPage: 'acceptance' , user }) %>

        <div class="container-fluid p-0">
            <div class="row g-0">

                <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'acceptance' , user }) %>

                    <div class="col-md-9 col-lg-10 main-content">
                        <div class="container py-4">

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h1 class="h3 mb-0">SỬA CHI TIẾT NGHIỆM THU</h1>
                                <span class="text-muted small">Quản lý thiết bị</span>
                            </div>

                            <div class="acceptance-form-box">
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <h4 class="mb-0">Số hiệu: <%= minute.maBienBan %>
                                    </h4>
                                    <span class="badge bg-info p-2">Dựa trên kế hoạch: <%= minute.maKeHoachMuaSam %>
                                            </span>
                                </div>

                                <!-- FORM POST THẬT -->
                                <form method="post" id="acceptanceForm">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-form table-hover">
                                            <thead class="table-light align-middle text-center">
                                                <tr>
                                                    <th rowspan="2" width="40">STT</th>
                                                    <th rowspan="2">Thiết bị</th>
                                                    <th colspan="2">Số lượng</th>
                                                    <th colspan="2">Đơn giá (VNĐ)</th>
                                                    <th rowspan="2">Thành tiền thực tế</th>
                                                    <th rowspan="2">Tình trạng thực tế</th>
                                                    <th rowspan="2">Ghi chú</th>
                                                </tr>
                                                <tr>
                                                    <th width="80">Kế hoạch</th>
                                                    <th width="80">Thực tế</th>
                                                    <th width="120">Kế hoạch</th>
                                                    <th width="120">Thực tế</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                <% details.forEach((item, index)=> { %>
                                                    <tr class="item-row">
                                                        <td class="text-center align-middle">
                                                            <%= index + 1 %>
                                                        </td>
                                                        <td class="align-middle">
                                                            <div class="fw-bold">
                                                                <%= item.tenTB || 'Thiết bị' %>
                                                            </div>
                                                            <div class="small text-muted">
                                                                <%= item.maTB %>
                                                            </div>
                                                            <input type="hidden" name="details[<%= index %>][id]"
                                                                value="<%= item._id %>">
                                                        </td>

                                                        <td class="text-center align-middle">
                                                            <%= item.soLuongKeHoach %>
                                                        </td>
                                                        <td>
                                                            <input type="number"
                                                                class="form-control form-control-sm text-center qty-input"
                                                                name="details[<%= index %>][soLuongThucTe]"
                                                                value="<%= item.soLuongThucTe %>" min="0" required>
                                                        </td>

                                                        <td class="text-end align-middle">
                                                            <%= (item.donGiaKeHoach || 0).toLocaleString('vi-VN') %>
                                                        </td>
                                                        <td>
                                                            <input type="number"
                                                                class="form-control form-control-sm text-end price-input"
                                                                name="details[<%= index %>][donGiaThucTe]"
                                                                value="<%= item.donGiaThucTe %>" min="0" required>
                                                        </td>

                                                        <td class="text-end align-middle fw-bold total-cell">
                                                            <%= (item.thanhTienThucTe || 0).toLocaleString('vi-VN') %>
                                                        </td>

                                                        <td>
                                                            <select class="form-select form-select-sm"
                                                                name="details[<%= index %>][chatLuong]">
                                                                <option value="Tốt" <%=item.chatLuong==='Tốt'
                                                                    ? 'selected' : '' %>>Tốt</option>
                                                                <option value="Khá" <%=item.chatLuong==='Khá'
                                                                    ? 'selected' : '' %>>Khá</option>
                                                                <option value="Trung bình"
                                                                    <%=item.chatLuong==='Trung bình' ? 'selected' : ''
                                                                    %>>Trung bình</option>
                                                                <option value="Hỏng" <%=item.chatLuong==='Hỏng'
                                                                    ? 'selected' : '' %>>Hỏng</option>
                                                            </select>
                                                        </td>

                                                        <td>
                                                            <input type="text" class="form-control form-control-sm"
                                                                name="details[<%= index %>][lyDo]"
                                                                value="<%= item.lyDo || '' %>" placeholder="...">
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                            </tbody>
                                            <tfoot class="table-light">
                                                <tr>
                                                    <th colspan="6" class="text-end">TỔNG CỘNG HỢP ĐỒNG THỰC TẾ:</th>
                                                    <th class="text-end text-primary h5 mb-0" id="grandTotalText">0</th>
                                                    <th colspan="2"></th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>

                                    <div class="text-end mt-4">
                                        <button type="submit" class="btn btn-primary px-5">
                                            <i class="fas fa-check-circle me-1"></i> Xác nhận & Lưu nghiệm thu
                                        </button>
                                        <a href="/manager/acceptance" class="btn btn-secondary px-4 ms-2">Hủy</a>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
            </div>
        </div>

        <%- include('../../../views/partials/footer') %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const rows = document.querySelectorAll('.item-row');
                    const grandTotalText = document.getElementById('grandTotalText');

                    function updateTotals() {
                        let grandTotal = 0;
                        rows.forEach(row => {
                            const qty = parseFloat(row.querySelector('.qty-input').value) || 0;
                            const price = parseFloat(row.querySelector('.price-input').value) || 0;
                            const total = qty * price;
                            grandTotal += total;
                            row.querySelector('.total-cell').textContent = total.toLocaleString('vi-VN');
                        });
                        grandTotalText.textContent = grandTotal.toLocaleString('vi-VN') + ' đ';
                    }

                    rows.forEach(row => {
                        row.querySelector('.qty-input').addEventListener('input', updateTotals);
                        row.querySelector('.price-input').addEventListener('input', updateTotals);
                    });

                    updateTotals();
                });
            </script>
</body>

</html>