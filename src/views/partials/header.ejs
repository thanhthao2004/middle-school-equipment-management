<%
// Xác định header type dựa trên user.role
const userRole = (typeof user !== 'undefined' && user && user.role) ? user.role : 'giao_vien';
const userObj = typeof user !== 'undefined' ? user : {};
const currentPageObj = typeof currentPage !== 'undefined' ? currentPage : '';
%>

<!-- Include header theo actor -->
<% if (userRole === 'admin') { %>
    <%- include('./headers/admin-header', { user: userObj, currentPage: currentPageObj }) %>
<% } else if (userRole === 'ql_thiet_bi') { %>
    <%- include('./headers/qltb-header', { user: userObj, currentPage: currentPageObj }) %>
<% } else if (userRole === 'to_truong') { %>
    <%- include('./headers/department-head-header', { user: userObj, currentPage: currentPageObj }) %>
<% } else if (userRole === 'hieu_truong') { %>
    <%- include('./headers/principal-header', { user: userObj, currentPage: currentPageObj }) %>
<% } else { %>
    <%- include('./headers/teacher-header', { user: userObj, currentPage: currentPageObj }) %>
<% } %>
