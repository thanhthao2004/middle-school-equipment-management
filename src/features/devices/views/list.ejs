<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý thiết bị</title>
    
    <!-- Bootstrap 5.3.0 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome 6.4.0 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- Custom Styles -->
    <link href="/public/stylesheets/style.css" rel="stylesheet">
    <link href="/public/stylesheets/devices.css" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <%- include('../../../views/partials/header') %>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <!-- Sidebar -->
            <%- include('../../../views/partials/device-sidebar') %>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 main-content">
                <div class="container py-4">
                    <!-- Page Title -->
                    <h1 class="text-center mb-4" style="color: var(--dark-gray); font-weight: 700;">DANH SÁCH THIẾT BỊ</h1>

                    <!-- Filters and Search -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-2">
                                    <label class="form-label fw-bold text-muted small">DANH MỤC THIẾT BỊ</label>
                                    <select class="form-select" id="categoryFilter">
                                        <option value="">Tất cả danh mục</option>
                                        <option value="chemistry">Hóa học</option>
                                        <option value="it">Tin học</option>
                                        <option value="literature">Ngữ văn</option>
                                        <option value="physics">Vật lý</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label fw-bold text-muted small">LỚP HỌC</label>
                                    <select class="form-select" id="classFilter">
                                        <option value="">Tất cả lớp</option>
                                        <option value="6">Lớp 6</option>
                                        <option value="7">Lớp 7</option>
                                        <option value="8">Lớp 8</option>
                                        <option value="9">Lớp 9</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label fw-bold text-muted small">TRẠNG THÁI</label>
                                    <select class="form-select" id="statusFilter">
                                        <option value="">Tất cả trạng thái</option>
                                        <option value="available">Có sẵn</option>
                                        <option value="borrowed">Đã mượn</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label fw-bold text-muted small">TÌNH TRẠNG</label>
                                    <select class="form-select" id="conditionFilter">
                                        <option value="">Tất cả tình trạng</option>
                                        <option value="good">Tốt</option>
                                        <option value="damaged">Hỏng</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label fw-bold text-muted small">TÌM KIẾM THIẾT BỊ</label>
                                    <div class="search-container">
                                        <input type="text" class="form-control" placeholder="Tìm kiếm thiết bị..." id="searchInput">
                                        <i class="fas fa-search search-icon"></i>
                                    </div>
                                </div>
                                <div class="col-md-1 d-flex align-items-end">
                                    <button class="btn btn-outline-secondary w-100" onclick="resetFilters()" title="Reset bộ lọc">
                                        <i class="fas fa-undo"></i>
                                    </button>
                                </div>
                            </div>
                            
                            <!-- Advanced Filters Row -->
                            <div class="row g-3 mt-2" id="advancedFilters" style="display: none;">
                                <div class="col-md-2">
                                    <label class="form-label fw-bold text-muted small">VỊ TRÍ LƯU TRỮ</label>
                                    <select class="form-select" id="locationFilter">
                                        <option value="">Tất cả vị trí</option>
                                        <option value="Phòng thiết bị 20">Phòng thiết bị 20</option>
                                        <option value="Kho Hóa học">Kho Hóa học</option>
                                        <option value="Phòng IT">Phòng IT</option>
                                        <option value="Phòng 101">Phòng 101</option>
                                        <option value="Phòng thiết bị 30">Phòng thiết bị 30</option>
                                        <option value="Thư viện">Thư viện</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label fw-bold text-muted small">NHÀ CUNG CẤP</label>
                                    <select class="form-select" id="supplierFilter">
                                        <option value="">Tất cả nhà cung cấp</option>
                                        <option value="Bộ giáo dục">Bộ giáo dục</option>
                                        <option value="GV Thanh Thả">GV Thanh Thả</option>
                                        <option value="Cellphones">Cellphones</option>
                                        <option value="Đại lý">Đại lý</option>
                                        <option value="VTV">VTV</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label fw-bold text-muted small">NGÀY NHẬP TỪ</label>
                                    <input type="date" class="form-control" id="dateFrom">
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label fw-bold text-muted small">NGÀY NHẬP ĐẾN</label>
                                    <input type="date" class="form-control" id="dateTo">
                                </div>
                                <div class="col-md-4 d-flex align-items-end">
                                    <div class="d-flex gap-2 w-100">
                                        <button class="btn btn-outline-info btn-sm" onclick="applyFilters()">
                                            <i class="fas fa-filter me-1"></i>Áp dụng
                                        </button>
                                        <button class="btn btn-outline-warning btn-sm" onclick="clearAdvancedFilters()">
                                            <i class="fas fa-times me-1"></i>Xóa bộ lọc
                                        </button>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Toggle Advanced Filters -->
                            <div class="text-center mt-3">
                                <button class="btn btn-link text-muted" onclick="toggleAdvancedFilters()" id="toggleAdvancedBtn">
                                    <i class="fas fa-chevron-down me-1"></i>
                                    Bộ lọc nâng cao
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Equipment Table or Empty State -->
                    <% if (devices && devices.length > 0) { %>
                        <div class="card mt-2">
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover equipment-table mb-0" id="equipmentTable">
                                        <thead>
                                            <tr>
                                                <th width="5%">Mã TB</th>
                                                <th width="15%">Tên Thiết Bị</th>
                                                <th width="8%">Danh mục</th>
                                                <th width="6%">Đơn vị</th>
                                                <th width="8%">Lớp</th>
                                                <th width="6%">SL Tồn</th>
                                                <th width="8%">Trạng Thái</th>
                                                <th width="8%">Tình trạng</th>
                                                <th width="12%">Vị Trí Lưu Trữ</th>
                                                <th width="10%">Nhà cung cấp</th>
                                                <th width="8%">Ngày nhập</th>
                                                <th width="5%">Hình Ảnh</th>
                                                <th width="5%">Lựa chọn</th>
                                            </tr>
                                        </thead>
                                        <tbody id="equipmentTableBody">
                                            <% devices.forEach(function(device, index) { %>
                                                <tr data-category="<%= device.category || '' %>" 
                                                    data-class="<%= device.classes || '' %>" 
                                                    data-status="<%= device.status === 'Có sẵn' ? 'available' : 'borrowed' %>" 
                                                    data-condition="<%= device.condition === 'Tốt' ? 'good' : 'damaged' %>"
                                                    data-device-id="<%= device.maTB || device.id %>">
                                                    <td><span class="fw-bold text-primary"><%= device.maTB || device.id %></span></td>
                                                    <td>
                                                        <div class="fw-bold"><%= device.tenTB || device.name %></div>
                                                        <% if (device.description) { %>
                                                            <small class="text-muted"><%= device.description %></small>
                                                        <% } %>
                                                    </td>
                                                    <td><span class="badge bg-info"><%= device.categoryName || device.category || 'N/A' %></span></td>
                                                    <td><%= device.unit || 'N/A' %></td>
                                                    <td><%= device.classes || device.class || 'N/A' %></td>
                                                    <td><span class="fw-bold text-success"><%= device.soLuong || device.quantity || 0 %></span></td>
                                                    <td>
                                                        <span class="status-<%= device.status === 'Có sẵn' ? 'available' : 'borrowed' %>">
                                                            <%= device.status || 'N/A' %>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span class="condition-<%= device.condition === 'Tốt' ? 'good' : 'damaged' %>">
                                                            <%= device.tinhTrangThietBi || device.condition || 'N/A' %>
                                                        </span>
                                                    </td>
                                                    <td><%= device.viTriLuuTru || device.location || 'N/A' %></td>
                                                    <td><%= device.supplier || device.nguonGoc || 'N/A' %></td>
                                                    <td>
                                                        <% if (device.ngayNhap) { %>
                                                            <%= new Date(device.ngayNhap).toLocaleDateString('vi-VN') %>
                                                        <% } else { %>
                                                            N/A
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <% if (device.hinhAnh) { %>
                                                            <i class="fas fa-check-circle text-success"></i>
                                                        <% } else { %>
                                                            <i class="far fa-circle text-muted"></i>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex gap-1">
                                                            <button class="btn btn-sm btn-outline-primary" onclick="editDevice('<%= device.maTB || device.id %>')" title="Sửa">
                                                                <i class="fas fa-edit"></i>
                                                            </button>
                                                            <button class="btn btn-sm btn-outline-danger" onclick="deleteDevice('<%= device.maTB || device.id %>')" title="Xóa">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    <% } else { %>
                        <!-- Empty State -->
                        <div class="card mt-2">
                            <div class="card-body text-center py-5">
                                <div class="empty-state">
                                    <h5 class="text-muted mb-4">Hiện chưa có thiết bị nào trong danh sách</h5>
                                    <button class="btn btn-register text-white" onclick="addDevice()">
                                        <i class="fas fa-plus me-2"></i>Thêm thiết bị
                                    </button>
                                </div>
                            </div>
                        </div>
                    <% } %>

                    <!-- Add Device Button (shown when devices exist) -->
                    <% if (devices && devices.length > 0) { %>
                        <div class="d-flex justify-content-center mt-4">
                            <button class="btn btn-register text-white" onclick="addDevice()">
                                <i class="fas fa-plus me-2"></i>Thêm thiết bị
                            </button>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmModalLabel">THÔNG BÁO</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <p class="mb-0 fw-bold">BẠN CÓ CHẮC CHẮN MUỐN XÓA THIẾT BỊ KHÔNG ?</p>
                    <p class="text-muted mt-2 small" id="deviceInfo"></p>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-register text-white" id="confirmDeleteBtn">
                        Xác nhận
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('../../../views/partials/footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Device Management JavaScript -->
    <script src="/public/javascripts/devices.js"></script>
</body>
</html>
