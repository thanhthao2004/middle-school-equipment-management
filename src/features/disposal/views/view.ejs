<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết báo cáo thanh lý</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="/stylesheets/disposal.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <!-- ===== HEADER ===== -->
    <%- include('../../../views/partials/header', { currentPage: 'disposal' , user: typeof user !=='undefined' ? user :
        { role: 'ql_thiet_bi' } }) %>

        <div class="container-fluid p-0">
            <div class="row g-0">

                <!-- ===== SIDEBAR ===== -->
                <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'disposal' , user: typeof user
                    !=='undefined' ? user : { role: 'ql_thiet_bi' } }) %>

                    <!-- ===== MAIN CONTENT ===== -->
                    <div class="col-md-9 col-lg-10 main-content">
                        <div class="container-fluid py-4">

                            <!-- Page Header -->
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h1 class="h3 mb-0">CHI TIẾT BÁO CÁO THANH LÝ THIẾT BỊ HỎNG</h1>
                                <a href="/manager/disposal" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Quay lại
                                </a>
                            </div>

                            <!-- ===== INFO BOXES ===== -->
                            <div class="card mb-4">
                                <div class="card-body">
                                    <div class="d-flex flex-wrap gap-3 align-items-center">

                                        <div class="info-box info-code">
                                            <label>Mã biên bản</label>
                                            <div class="value">
                                                <%= disposal.code %>
                                            </div>
                                        </div>

                                        <div class="info-box info-year">
                                            <label>Năm học</label>
                                            <div class="value">
                                                <%= disposal.year %>
                                            </div>
                                        </div>

                                        <div class="info-box info-date">
                                            <label>Ngày lập</label>
                                            <div class="value">
                                                <%= new Date(disposal.created_at).toLocaleDateString("vi-VN") %>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                            <!-- ===== DEVICES TABLE ===== -->
                            <div class="card">
                                <div class="card-body p-0">
                                    <div class="table-responsive">
                                        <table class="table table-hover align-middle mb-0">
                                            <thead>
                                                <tr>
                                                    <th>Mã thiết bị</th>
                                                    <th>Tên thiết bị</th>
                                                    <th>Danh mục</th>
                                                    <th>Tình trạng</th>
                                                    <th>Vị trí</th>
                                                    <th>Mức độ hỏng</th>
                                                    <th>Lý do</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                <% if (disposal.items && disposal.items.length> 0) { %>
                                                    <% disposal.items.forEach(item=> { %>
                                                        <tr>
                                                            <td>
                                                                <span class="code-box">
                                                                    <%= item.device?.maTB || '-' %>
                                                                </span>
                                                            </td>

                                                            <td>
                                                                <%= item.device?.tenTB || '-' %>
                                                            </td>

                                                            <td>
                                                                <%= item.device?.category?.tenDM || '-' %>
                                                            </td>

                                                            <td>
                                                                <span class="status-badge status-danger">
                                                                    <%= item.device?.tinhTrangThietBi || '-' %>
                                                                </span>
                                                            </td>

                                                            <td>
                                                                <%= item.device?.viTriLuuTru || '-' %>
                                                            </td>

                                                            <!-- ✅ MỨC ĐỘ HỎNG (CHỈ XEM) -->
                                                            <td>
                                                                <% if (item.level==='Hỏng nặng' ) { %>
                                                                    <span class="level-badge level-severe">Hỏng
                                                                        nặng</span>
                                                                    <% } else if (item.level==='Hỏng nhẹ' ) { %>
                                                                        <span class="level-badge level-low">Hỏng
                                                                            nhẹ</span>
                                                                        <% } else { %>
                                                                            <span class="text-muted">—</span>
                                                                            <% } %>
                                                            </td>

                                                            <!-- ✅ LÝ DO (CHỈ XEM) -->
                                                            <td>
                                                                <%= item.reason || '—' %>
                                                            </td>
                                                        </tr>
                                                        <% }) %>
                                                            <% } else { %>
                                                                <tr>
                                                                    <td colspan="7" class="text-center text-muted py-4">
                                                                        Không có thiết bị nào trong báo cáo
                                                                    </td>
                                                                </tr>
                                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

            </div>
        </div>

        <!-- ===== FOOTER ===== -->
        <%- include('../../../views/partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>