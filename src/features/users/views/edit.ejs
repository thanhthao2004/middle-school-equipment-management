<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chỉnh Sửa Người Dùng</title>
    <!-- Bootstrap 5.3.0 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome 6.4.0 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <style>
        .radio-group {
            display: flex;
            gap: 1.5rem;
            margin-top: 0.5rem;
        }

        .radio-group input[type="radio"] {
            width: auto;
            margin-right: 0.5rem;
        }

        .radio-group label {
            font-weight: 400;
            margin-bottom: 0;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <% const userObj=(typeof user !=='undefined' && user) ? user : { role: 'admin' }; %>
        <%- include('../../../views/partials/header', { currentPage: 'users' , user: userObj }) %>

            <div class="container-fluid p-0">
                <div class="row g-0">
                    <!-- Sidebar Admin -->
                    <%- include('../../../views/partials/admin-sidebar', { currentPage: 'users' , user: userObj }) %>

                        <!-- Main Content -->
                        <div class="col-md-9 col-lg-10 main-content">
                            <div class="container py-4">
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <h1 class="h3 mb-0">Chỉnh Sửa Thông Tin</h1>
                                    <a class="btn btn-secondary" href="/admin/<%= userDetail._id %>/detail">
                                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                                    </a>
                                </div>

                                <div class="card">
                                    <div class="card-header bg-primary text-white">
                                        <h5 class="card-title mb-0">Thông tin tài khoản</h5>
                                    </div>
                                    <div class="card-body">
                                        <% if (success) { %>
                                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                                <%= success %>
                                                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                                                        aria-label="Close"></button>
                                            </div>
                                            <% } %>

                                                <% if (error) { %>
                                                    <div class="alert alert-danger alert-dismissible fade show"
                                                        role="alert">
                                                        <%= error %>
                                                            <button type="button" class="btn-close"
                                                                data-bs-dismiss="alert" aria-label="Close"></button>
                                                    </div>
                                                    <% } %>

                                                        <form action="/admin/<%= userDetail._id %>/edit" method="POST">

                                                            <!-- Info -->
                                                            <h6 class="text-primary mb-3"><i
                                                                    class="fas fa-user me-2"></i>Thông tin cá nhân</h6>
                                                            <div class="row">
                                                                <div class="col-md-6 mb-3">
                                                                    <label for="maNV" class="form-label fw-bold">Mã nhân
                                                                        viên</label>
                                                                    <input type="text" class="form-control" id="maNV"
                                                                        value="<%= userDetail.maNV %>" disabled>
                                                                </div>
                                                                <div class="col-md-6 mb-3">
                                                                    <label for="fullname" class="form-label fw-bold">Họ
                                                                        và tên <span
                                                                            class="text-danger">*</span></label>
                                                                    <input type="text" class="form-control"
                                                                        id="fullname" name="fullname"
                                                                        value="<%= userDetail.hoTen %>" required>
                                                                </div>
                                                            </div>

                                                            <div class="row">
                                                                <div class="col-md-6 mb-3">
                                                                    <label for="phone" class="form-label fw-bold">Số
                                                                        điện thoại</label>
                                                                    <input type="tel" class="form-control" id="phone"
                                                                        name="phone"
                                                                        value="<%= userDetail.soDienThoai %>">
                                                                </div>
                                                                <div class="col-md-6 mb-3">
                                                                    <label for="address" class="form-label fw-bold">Địa
                                                                        chỉ</label>
                                                                    <input type="text" class="form-control" id="address"
                                                                        name="address" value="<%= userDetail.diaChi %>">
                                                                </div>
                                                            </div>

                                                            <div class="row">
                                                                <div class="col-md-6 mb-3">
                                                                    <label for="dob" class="form-label fw-bold">Ngày
                                                                        sinh</label>
                                                                    <input type="date" class="form-control" id="dob"
                                                                        name="dob"
                                                                        value="<%= userDetail.ngaySinh ? new Date(userDetail.ngaySinh).toISOString().split('T')[0] : '' %>">
                                                                </div>
                                                                <div class="col-md-6 mb-3">
                                                                    <label class="form-label fw-bold">Giới tính</label>
                                                                    <div class="radio-group">
                                                                        <% const isMale=!userDetail.gioiTinh ||
                                                                            userDetail.gioiTinh==='Nam' ; %>
                                                                            <% const isFemale=userDetail.gioiTinh==='Nữ'
                                                                                ; %>
                                                                                <input type="radio" id="gioitinhnam"
                                                                                    name="gender" value="Nam" <%=isMale
                                                                                    ? 'checked' : '' %>>
                                                                                <label for="gioitinhnam">Nam</label>
                                                                                <input type="radio" id="gioitinhnu"
                                                                                    name="gender" value="Nữ" <%=isFemale
                                                                                    ? 'checked' : '' %>>
                                                                                <label for="gioitinhnu">Nữ</label>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <hr>

                                                            <!-- Login -->
                                                            <h6 class="text-primary mb-3"><i
                                                                    class="fas fa-key me-2"></i>Thông tin đăng nhập</h6>
                                                            <div class="row">
                                                                <div class="col-md-6 mb-3">
                                                                    <label for="username" class="form-label fw-bold">Tên
                                                                        đăng nhập</label>
                                                                    <input type="text" class="form-control"
                                                                        id="username" value="<%= userDetail.username %>"
                                                                        disabled>
                                                                </div>
                                                                <div class="col-md-6 mb-3">
                                                                    <label for="email"
                                                                        class="form-label fw-bold">Email</label>
                                                                    <input type="email" class="form-control" id="email"
                                                                        value="<%= userDetail.email %>" disabled>
                                                                </div>
                                                            </div>

                                                            <hr>

                                                            <!-- Work -->
                                                            <h6 class="text-primary mb-3"><i
                                                                    class="fas fa-briefcase me-2"></i>Thông tin công
                                                                việc</h6>
                                                            <div class="row">
                                                                <div class="col-md-6 mb-3">
                                                                    <label for="role" class="form-label fw-bold">Vai trò
                                                                        <span class="text-danger">*</span></label>
                                                                    <select class="form-select" id="role" name="role"
                                                                        required>
                                                                        <option value="admin"
                                                                            <%=userDetail.role==='admin' ? 'selected'
                                                                            : '' %>>Quản trị viên</option>
                                                                        <option value="hieu_truong"
                                                                            <%=userDetail.role==='hieu_truong'
                                                                            ? 'selected' : '' %>>Hiệu trưởng</option>
                                                                        <option value="to_truong"
                                                                            <%=userDetail.role==='to_truong'
                                                                            ? 'selected' : '' %>>Tổ trưởng</option>
                                                                        <option value="giao_vien"
                                                                            <%=userDetail.role==='giao_vien'
                                                                            ? 'selected' : '' %>>Giáo viên</option>
                                                                        <option value="ql_thiet_bi"
                                                                            <%=userDetail.role==='ql_thiet_bi'
                                                                            ? 'selected' : '' %>>QL Thiết bị</option>
                                                                    </select>
                                                                </div>
                                                                <div class="col-md-6 mb-3">
                                                                    <label for="experience"
                                                                        class="form-label fw-bold">Năm kinh
                                                                        nghiệm</label>
                                                                    <select name="experience" class="form-select">
                                                                        <option value="">-- Chọn năm kinh nghiệm --
                                                                        </option>
                                                                        <option value="1 năm"
                                                                            <%=userDetail.chucVu==='1 năm' ? 'selected'
                                                                            : '' %>>1 năm</option>
                                                                        <option value="2 năm"
                                                                            <%=userDetail.chucVu==='2 năm' ? 'selected'
                                                                            : '' %>>2 năm</option>
                                                                        <option value="3 năm"
                                                                            <%=userDetail.chucVu==='3 năm' ? 'selected'
                                                                            : '' %>>3 năm</option>
                                                                        <option value="Trên 5 năm"
                                                                            <%=userDetail.chucVu==='Trên 5 năm'
                                                                            ? 'selected' : '' %>>Trên 5 năm</option>
                                                                    </select>
                                                                </div>
                                                            </div>

                                                            <div class="row">
                                                                <div class="col-md-6 mb-3">
                                                                    <label for="subject" class="form-label fw-bold">Bộ
                                                                        môn</label>
                                                                    <select name="subject" class="form-select">
                                                                        <option value="">-- Chọn bộ môn --</option>
                                                                        <option value="Toán"
                                                                            <%=userDetail.boMon==='Toán' ? 'selected'
                                                                            : '' %>>Toán</option>
                                                                        <option value="Văn" <%=userDetail.boMon==='Văn'
                                                                            ? 'selected' : '' %>>Văn</option>
                                                                        <option value="Anh" <%=userDetail.boMon==='Anh'
                                                                            ? 'selected' : '' %>>Anh</option>
                                                                        <option value="Lý" <%=userDetail.boMon==='Lý'
                                                                            ? 'selected' : '' %>>Lý</option>
                                                                        <option value="Hóa" <%=userDetail.boMon==='Hóa'
                                                                            ? 'selected' : '' %>>Hóa</option>
                                                                        <option value="Sinh"
                                                                            <%=userDetail.boMon==='Sinh' ? 'selected'
                                                                            : '' %>>Sinh</option>
                                                                        <option value="Sử" <%=userDetail.boMon==='Sử'
                                                                            ? 'selected' : '' %>>Sử</option>
                                                                        <option value="Địa" <%=userDetail.boMon==='Địa'
                                                                            ? 'selected' : '' %>>Địa</option>
                                                                    </select>
                                                                </div>
                                                                <div class="col-md-6 mb-3">
                                                                    <label for="specialization"
                                                                        class="form-label fw-bold">Trình độ chuyên
                                                                        môn</label>
                                                                    <input type="text" class="form-control"
                                                                        id="specialization" name="specialization"
                                                                        value="<%= userDetail.trinhDo %>">
                                                                </div>
                                                            </div>

                                                            <div class="row">
                                                                <div class="col-md-6 mb-3">
                                                                    <label for="status" class="form-label fw-bold">Trạng
                                                                        thái <span class="text-danger">*</span></label>
                                                                    <select class="form-select" id="status"
                                                                        name="status" required>
                                                                        <option value="active"
                                                                            <%=userDetail.trangThai==='active'
                                                                            ? 'selected' : '' %>>Hoạt động</option>
                                                                        <option value="inactive"
                                                                            <%=userDetail.trangThai==='inactive'
                                                                            ? 'selected' : '' %>>Không hoạt động
                                                                        </option>
                                                                    </select>
                                                                </div>
                                                            </div>

                                                            <div class="text-end">
                                                                <button type="submit" class="btn btn-primary">
                                                                    <i class="fas fa-save me-2"></i>Lưu thay đổi
                                                                </button>
                                                            </div>
                                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

            <% if (success) { %>
                <script>
                    setTimeout(() => {
                        window.location.href = '/admin';
                    }, 1000);
                </script>
                <% } %>
</body>

</html>