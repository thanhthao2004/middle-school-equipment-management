<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet">
    <link href="/stylesheets/purchasing-plans.css" rel="stylesheet">
</head>

<body>
    <% const userObj=(typeof user !=='undefined' && user) ? user : { role: 'to_truong' }; %>
        <!-- Header -->
        <%- include('../../../views/partials/header', { currentPage: 'purchasing-plans' , user: userObj }) %>

            <div class="container-fluid p-0">
                <div class="row g-0">
                    <div class="col-md-3 col-lg-2">
                        <%- include('../../../views/partials/teacher-sidebar', { currentPage: 'purchasing-plans' , user: userObj }) %>
                    </div>

                    <div class="col-md-9 col-lg-10 main-content">
                        <div class="container py-4">
                            <div class="app-shell">
                                <main class="main-content">
                                    <div class="page-header mb-4">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h1>Chi tiết kế hoạch mua sắm</h1>
                                                <div class="page-subtitle">Xem thông tin chi tiết</div>
                                            </div>
                                            <div>
                                                <button class="btn btn-danger" id="exportBtn">
                                                    <i class="fa-solid fa-download"></i> Xuất File
                                                </button>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="card mb-4">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <div class="mb-3">
                                                        <label class="form-label fw-bold">Mã kế hoạch</label>
                                                        <input type="text" class="form-control" 
                                                            value="<%= plan.maKeHoachMuaSam %>" readonly />
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="mb-3">
                                                        <label class="form-label fw-bold">Ngày lập</label>
                                                        <input type="text" class="form-control" 
                                                            value="<%= new Date(plan.createdAt).toLocaleDateString('vi-VN') %>" readonly />
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="mb-3">
                                                        <label class="form-label fw-bold">Trạng thái</label>
                                                        <input type="text" class="form-control" 
                                                            value="<%= plan.trangThai === 'cho_phe_duyet' ? 'Đang chờ duyệt' : plan.trangThai === 'da_duyet' ? 'Đã duyệt' : 'Khác' %>" readonly />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="card card-table">
                                        <div class="card-header">
                                            <h5 class="mb-0">Danh sách thiết bị</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="table-responsive">
                                                <table class="table table-hover align-middle">
                                                    <thead>
                                                        <tr>
                                                            <th>Tên Danh Mục TB</th>
                                                            <th>Mã TB</th>
                                                            <th>Tên TB</th>
                                                            <th style="width: 100px;">Số lượng</th>
                                                            <th style="width: 80px;">ĐVT</th>
                                                            <th style="width: 120px;">Đơn giá</th>
                                                            <th style="width: 130px;">Dự toán</th>
                                                            <th>Thời gian dự kiến</th>
                                                            <th>Lý do</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% if (plan.details && plan.details.length > 0) { %>
                                                            <% plan.details.forEach(detail => { %>
                                                                <tr>
                                                                    <td><%= detail.tenDanhMuc || '-' %></td>
                                                                    <td><%= detail.maTB || '-' %></td>
                                                                    <td><%= detail.tenTB || '-' %></td>
                                                                    <td class="text-center"><%= detail.soLuongDuKienMua %></td>
                                                                    <td><%= detail.donViTinh %></td>
                                                                    <td class="text-end"><%= detail.donGia ? new Intl.NumberFormat('vi-VN').format(detail.donGia) : '-' %></td>
                                                                    <td class="text-end"><%= detail.duToanKinhPhi ? new Intl.NumberFormat('vi-VN').format(detail.duToanKinhPhi) : '-' %></td>
                                                                    <td><%= detail.thoiGianDuKienMua ? new Date(detail.thoiGianDuKienMua).toLocaleDateString('vi-VN') : '-' %></td>
                                                                    <td><%= detail.lyDoMua || '-' %></td>
                                                                </tr>
                                                            <% }); %>
                                                        <% } else { %>
                                                            <tr>
                                                                <td colspan="9" class="text-center">Không có thiết bị nào</td>
                                                            </tr>
                                                        <% } %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mt-4 d-flex gap-2">
                                        <a href="/teacher/purchasing-plans" class="btn btn-secondary">
                                            <i class="fa-solid fa-arrow-left"></i> Quay lại
                                        </a>
                                    </div>

                                    <!-- Hidden element to store plan data -->
                                    <div id="planDataContainer" style="display: none;" data-plan='<%- JSON.stringify(plan) %>'></div>
                                </main>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <%- include('../../../views/partials/footer') %>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
                <script src="/javascripts/purchasing_plan_detail.js"></script>

</body>

</html>
