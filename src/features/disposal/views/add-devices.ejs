<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chọn thiết bị thanh lý</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="/stylesheets/disposal.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <!-- ===== HEADER ===== -->
    <%- include('../../../views/partials/header', { currentPage: 'disposal' , user: typeof user !=='undefined' ? user :
        { role: 'ql_thiet_bi' } }) %>

        <!-- ===== MAIN LAYOUT ===== -->
        <div class="container-fluid p-0">
            <div class="row g-0">

                <!-- ===== SIDEBAR ===== -->
                <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'disposal' , user: typeof user
                    !=='undefined' ? user : { role: 'ql_thiet_bi' } }) %>

                    <!-- ===== MAIN CONTENT ===== -->
                    <div class="col-md-9 col-lg-10 main-content py-4">

                        <!-- Page Header -->
                        <div class="d-flex justify-content-between align-items-center mb-4 px-4">
                            <h1 class="h3 mb-0">CHỌN THIẾT BỊ THANH LÝ</h1>
                            <a href="/manager/disposal/add?code=<%= code %>&year=<%= year %>&created_at=<%= created_at %>"
                                class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                        </div>

                        <!-- ===== INFO BOX ===== -->
                        <div class="card mb-4 mx-4">
                            <div class="card-body">
                                <div class="d-flex flex-wrap gap-3 align-items-center">

                                    <div class="info-box info-code">
                                        <label>Mã biên bản</label>
                                        <div class="value">
                                            <%= code || '' %>
                                        </div>
                                    </div>

                                    <div class="info-box info-year">
                                        <label>Năm học</label>
                                        <div class="value">
                                            <%= year || '' %>
                                        </div>
                                    </div>

                                    <div class="info-box info-date">
                                        <label>Ngày lập</label>
                                        <div class="value">
                                            <%= created_at || '' %>
                                        </div>
                                    </div>

                                    <div class="ms-auto">
                                        <span class="filter-badge">
                                            <i class="fas fa-filter me-1"></i>
                                            Đang lọc:
                                            <strong>Thiết bị hỏng</strong>
                                        </span>
                                    </div>


                                </div>
                            </div>
                        </div>

                        <!-- ===== TABLE ===== -->
                        <form method="POST" action="/manager/disposal/add-devices">
                            <input type="hidden" name="code" value="<%= code %>">
                            <input type="hidden" name="year" value="<%= year %>">
                            <input type="hidden" name="created_at" value="<%= created_at %>">

                            <div class="card mx-4">
                                <div class="card-body p-0">
                                    <div class="table-responsive">
                                        <table class="table table-hover align-middle mb-0">
                                            <thead>
                                                <tr>
                                                    <th>Chọn</th>
                                                    <th>Mã thiết bị</th>
                                                    <th>Tên thiết bị</th>
                                                    <th>Danh mục</th>
                                                    <th>Tình trạng</th>
                                                    <th>Vị trí</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                <% if (devices && devices.length> 0) { %>
                                                    <% devices.forEach(device=> { %>
                                                        <tr>
                                                            <td class="text-center">
                                                                <input type="checkbox" name="selectedDevices[]"
                                                                    value="<%= device._id %>">
                                                            </td>

                                                            <td>
                                                                <span class="code-box">
                                                                    <%= device.maTB || '-' %>
                                                                </span>
                                                            </td>

                                                            <td>
                                                                <%= device.tenTB || '-' %>
                                                            </td>

                                                            <td>
                                                                <%= device.category?.tenDM || '-' %>
                                                            </td>

                                                            <td>
                                                                <span class="status-badge status-danger">
                                                                    <%= device.tinhTrangThietBi || '-' %>
                                                                </span>
                                                            </td>

                                                            <td>
                                                                <%= device.viTriLuuTru || '-' %>
                                                            </td>
                                                        </tr>
                                                        <% }) %>
                                                            <% } else { %>
                                                                <tr>
                                                                    <td colspan="10"
                                                                        class="text-center text-muted py-4">
                                                                        Không có thiết bị hỏng nào để thanh lý
                                                                    </td>
                                                                </tr>
                                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <!-- ===== ACTION BUTTONS ===== -->
                            <div class="d-flex justify-content-end gap-2 mt-4 px-4">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-check"></i> Thêm vào báo cáo
                                </button>
                                <a href="/manager/disposal/add?code=<%= code %>&year=<%= year %>&created_at=<%= created_at %>"
                                    class="btn btn-secondary">
                                    Hủy
                                </a>
                            </div>
                        </form>

                    </div>
            </div>
        </div>

        <!-- ===== FOOTER ===== -->
        <%- include('../../../views/partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>