<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Chi tiết Biên bản Nghiệm thu</title>

    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        .acceptance-detail-box {
            border: 1px solid #ddd;
            padding: 30px;
            border-radius: 8px;
            background-color: #fff;
            max-width: 900px;
            margin: 20px auto;
        }
        .table-detail th, .table-detail td {
            font-size: 0.85rem;
            padding: 8px;
        }
        .table-detail th { background-color: #e9ecef; }
    </style>
</head>
<body>

<%- include('../../../views/partials/header', { currentPage: 'acceptance', user }) %>

<div class="container-fluid p-0">
    <div class="row g-0">
        <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'acceptance', user }) %>

        <div class="col-md-9 col-lg-10 main-content">
            <div class="container py-4">

                <h1 class="h3 mb-4">CHI TIẾT NGHIỆM THU</h1>

                <div class="acceptance-detail-box">
                    <h4 class="mb-4">Mã: <%= minute.maBienBan %></h4>

                    <div class="table-responsive">
                        <table class="table table-bordered table-detail">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Mã thiết bị</th>
                                    <th>Số lượng thực tế</th>
                                    <th>Chất lượng</th>
                                    <th>Lý do</th>
                                </tr>
                            </thead>
                            <tbody>

                            <% if (details && details.length > 0) { %>
                                <% details.forEach((d, i) => { %>
                                    <tr>
                                        <td><%= i + 1 %></td>
                                        <td><%= d.maTB %></td>
                                        <td><%= d.soLuongThucTe %></td>
                                        <td><%= d.chatLuong %></td>
                                        <td><%= d.lyDo || '' %></td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="text-center text-muted">
                                        Không có dữ liệu chi tiết nghiệm thu
                                    </td>
                                </tr>
                            <% } %>

                            </tbody>
                        </table>
                    </div>

                    <div class="text-center mt-4">
                        <button class="btn btn-secondary" onclick="window.history.back()">Quay lại</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<%- include('../../../views/partials/footer') %>
<script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
