<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sửa danh mục</title>

    <!-- Bootstrap 5.3.0 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome 6.4.0 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/stylesheets/categories.css">
    <link rel="stylesheet" href="/public/stylesheets/style.css">  
</head>

<body>
    <!-- Sidebar -->
    <%- include('../../../views/partials/nvqltb-sidebar') %>

    <!-- Main Content -->
    <div class="main">
        <div class="main-header">
            <h2>SỬA DANH MỤC</h2>
            <div class="user"><i class="fas fa-user"></i> QLTB</div>
        </div>

        <form action="/categories/update/<%= category.id %>" method="POST">
            <div class="form-group">
                <label for="id">Mã danh mục</label>
                <input type="text" id="id" name="id" value="<%= category.id %>" readonly>
            </div>

            <div class="form-group">
                <label for="name">Tên danh mục</label>
                <input type="text" id="name" name="name" value="<%= category.name %>">
            </div>

            <div class="form-group">
                <label for="location">Vị trí lưu trữ</label>
                <input type="text" id="location" name="location" value="<%= category.location %>">
            </div>

            <div class="btn-group">
                <button type="submit" class="btn-save"><i class="fas fa-save"></i> LƯU</button>
                <button type="button" class="btn-cancel" onclick="window.location.href='/categories'"><i class="fas fa-times"></i> HỦY</button>
            </div>
        </form>
    </div>
    <script src="/public/javascripts/categories.js"></script>
</body>

</html>
