<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Quản lý Biên bản Nghiệm thu</title>

    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/public/stylesheets/style.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body>

<%- include('../../../views/partials/header', { currentPage: 'acceptance', user }) %>

<div class="container-fluid p-0">
    <div class="row g-0">
        <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'acceptance', user }) %>

        <div class="col-md-9 col-lg-10 main-content">
            <div class="container py-4">

                <h1 class="h3 mb-4">QUẢN LÝ BIÊN BẢN NGHIỆM THU</h1>

                <div class="d-flex align-items-center gap-3 mb-3">
                    <form method="get">
                        <label class="fw-bold me-2">Năm học</label>
                        <select name="year" class="form-select form-select-sm d-inline w-auto"
                                onchange="this.form.submit()">
                            <option value="">Tất cả</option>
                            <% years.forEach(y => { %>
                                <option value="<%= y %>" <%= y === selectedYear ? 'selected' : '' %>>
                                    <%= y %>
                                </option>
                            <% }) %>
                        </select>
                    </form>
                </div>

                <div class="card">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Mã biên bản</th>
                                    <th>Năm học</th>
                                    <th>Trạng thái</th>
                                    <th class="text-center">Lựa chọn</th>
                                </tr>
                            </thead>
                            <tbody>

                            <% if (data && data.length > 0) { %>
                                <% data.forEach(item => {
                                    const isCurrentYear = item.namHoc === currentYear;
                                    const isEditable = isCurrentYear && item.trangThaiNghiemThu !== 'Đã nghiệm thu';
                                %>
                                    <tr>
                                        <td class="fw-bold"><%= item.maBienBan %></td>
                                        <td><%= item.namHoc %></td>
                                        <td>
                                            <% if (item.trangThaiNghiemThu === 'Đã nghiệm thu') { %>
                                                <span class="badge bg-success">Đã nghiệm thu</span>
                                            <% } else { %>
                                                <span class="badge bg-warning text-dark">Cần nghiệm thu</span>
                                            <% } %>
                                        </td>

                                        <td class="text-center">
                                            <a href="/manager/acceptance/detail/<%= item._id %>"
                                               class="text-primary me-2" title="Xem">
                                                <i class="fas fa-eye"></i>
                                            </a>

                                            <% if (isEditable) { %>
                                                <a href="/manager/acceptance/edit/<%= item._id %>"
                                                   class="text-warning me-2" title="Sửa">
                                                    <i class="fas fa-pen"></i>
                                                </a>

                                                <a href="/manager/acceptance/delete/<%= item._id %>"
                                                   class="text-danger" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4" class="text-center text-muted py-4">
                                        Không có dữ liệu biên bản nghiệm thu
                                    </td>
                                </tr>
                            <% } %>

                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<%- include('../../../views/partials/footer') %>
<script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
