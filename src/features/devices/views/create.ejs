<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thêm thiết bị mới</title>
    
    <!-- Bootstrap 5.3.0 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome 6.4.0 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/stylesheets/devices.css">
    <link rel="stylesheet" href="/public/stylesheets/style.css">
</head>
<body>
    <!-- Header -->
    <%- include('../../../views/partials/header', { currentPage: 'devices' }) %>

    <div class="container-fluid p-0">
        <div class="row g-0">
            <!-- Sidebar QLTB -->
            <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'devices' }) %>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 main-content">
                <div class="container py-4">
                    <!-- Page Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="h3 mb-0">THÊM THIẾT BỊ MỚI</h1>
                        <a href="/devices" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>

                    <!-- Flash Messages -->
                    <% if (typeof messages !== 'undefined' && messages.error) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= messages.error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>

                    <!-- Form -->
                    <div class="card">
                        <div class="card-body">
                            <form action="/devices/create" method="POST" id="deviceForm">
                                <div class="row">
                                    <!-- Mã thiết bị -->
                                    <div class="col-md-6 mb-3">
                                        <label for="maTB" class="form-label">
                                            Mã thiết bị <span class="text-danger">*</span>
                                        </label>
                                        <input type="text" 
                                               class="form-control" 
                                               id="maTB" 
                                               name="maTB" 
                                               placeholder="Để trống để tự động tạo (TB001, TB002...)"
                                               value="">
                                        <small class="form-text text-muted">Mã thiết bị sẽ được tự động tạo nếu để trống</small>
                                    </div>

                                    <!-- Tên thiết bị -->
                                    <div class="col-md-6 mb-3">
                                        <label for="tenTB" class="form-label">
                                            Tên thiết bị <span class="text-danger">*</span>
                                        </label>
                                        <input type="text" 
                                               class="form-control" 
                                               id="tenTB" 
                                               name="tenTB" 
                                               required
                                               placeholder="Nhập tên thiết bị">
                                    </div>

                                    <!-- Danh mục -->
                                    <div class="col-md-6 mb-3">
                                        <label for="category" class="form-label">Danh mục</label>
                                        <select class="form-select" id="category" name="category">
                                            <option value="">Chọn danh mục</option>
                                            <% if (categories && categories.length > 0) { %>
                                                <% categories.forEach(cat => { %>
                                                    <option value="<%= cat._id %>">
                                                        <%= cat.tenDM || cat.name || '' %>
                                                    </option>
                                                <% }); %>
                                            <% } %>
                                        </select>
                                    </div>

                                    <!-- Số lượng -->
                                    <div class="col-md-6 mb-3">
                                        <label for="soLuong" class="form-label">Số lượng</label>
                                        <input type="number" 
                                               class="form-control" 
                                               id="soLuong" 
                                               name="soLuong" 
                                               min="0"
                                               value="0"
                                               placeholder="0">
                                    </div>

                                    <!-- Trạng thái thiết bị -->
                                    <div class="col-md-6 mb-3">
                                        <label for="tinhTrangThietBi" class="form-label">Trạng thái thiết bị</label>
                                        <input type="text" 
                                               class="form-control" 
                                               id="tinhTrangThietBi" 
                                               name="tinhTrangThietBi" 
                                               placeholder="Ví dụ: Tốt, Khá, Trung bình, Hỏng...">
                                    </div>

                                    <!-- Vị trí lưu trữ -->
                                    <div class="col-md-6 mb-3">
                                        <label for="viTriLuuTru" class="form-label">Vị trí lưu trữ</label>
                                        <input type="text" 
                                               class="form-control" 
                                               id="viTriLuuTru" 
                                               name="viTriLuuTru" 
                                               placeholder="Ví dụ: Phòng A101, Kho số 2...">
                                    </div>

                                    <!-- Nguồn gốc -->
                                    <div class="col-md-6 mb-3">
                                        <label for="nguonGoc" class="form-label">Nguồn gốc</label>
                                        <input type="text" 
                                               class="form-control" 
                                               id="nguonGoc" 
                                               name="nguonGoc" 
                                               placeholder="Ví dụ: Mua mới, Tài trợ, Hiến tặng...">
                                    </div>

                                    <!-- Ngày nhập -->
                                    <div class="col-md-6 mb-3">
                                        <label for="ngayNhap" class="form-label">Ngày nhập</label>
                                        <input type="date" 
                                               class="form-control" 
                                               id="ngayNhap" 
                                               name="ngayNhap">
                                    </div>

                                    <!-- Hình ảnh -->
                                    <div class="col-md-12 mb-3">
                                        <label for="hinhAnh" class="form-label">Hình ảnh (URL)</label>
                                        <input type="url" 
                                               class="form-control" 
                                               id="hinhAnh" 
                                               name="hinhAnh" 
                                               placeholder="https://example.com/image.jpg">
                                        <small class="form-text text-muted">Nhập đường dẫn URL của hình ảnh</small>
                                    </div>

                                    <!-- Hướng dẫn sử dụng -->
                                    <div class="col-md-12 mb-3">
                                        <label for="huongDanSuDung" class="form-label">Hướng dẫn sử dụng</label>
                                        <textarea class="form-control" 
                                                  id="huongDanSuDung" 
                                                  name="huongDanSuDung" 
                                                  rows="4"
                                                  placeholder="Nhập hướng dẫn sử dụng thiết bị..."></textarea>
                                    </div>
                                </div>

                                <!-- Form Actions -->
                                <div class="d-flex justify-content-end gap-2 mt-4">
                                    <button type="button" class="btn btn-secondary" onclick="window.location.href='/devices'">
                                        <i class="fas fa-times"></i> Hủy
                                    </button>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save"></i> Lưu
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('../../../views/partials/footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/public/javascripts/devices.js"></script>
</body>
</html>

