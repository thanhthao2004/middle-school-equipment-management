<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sửa nhà cung cấp</title>
  <!-- Bootstrap 5.3.0 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome 6.4.0 -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/public/stylesheets/suppliers.css">
  <link rel="stylesheet" href="/public/stylesheets/style.css">
</head>

<body>
  <div class="container-fluid p-0">
    <div class="row g-0">
      <!-- Sidebar -->
      <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'suppliers', user: typeof user !== 'undefined' ? user : { role: 'ql_thiet_bi' } }) %>

      <!-- Main Content -->
      <div class="col-md-9 col-lg-10 main-content p-0">
        <!-- Header -->
        <%- include('../../../views/partials/header', { currentPage: 'suppliers', user: typeof user !== 'undefined' ? user : { role: 'ql_thiet_bi' } }) %>

        <div class="main p-4">
          <div class="main-header">
            <h2>SỬA NHÀ CUNG CẤP</h2>
          </div>

          <form action="/manager/suppliers/<%= supplier.id %>" method="POST">
            <div class="form-group">
              <label for="id">Mã Nhà Cung Cấp</label>
              <input type="text" id="id" name="id" value="<%= supplier.id %>" readonly>
            </div>

            <div class="form-group">
              <label for="name">Tên Nhà Cung Cấp</label>
              <input type="text" id="name" name="name" value="<%= supplier.name %>">
            </div>

            <div class="form-group">
              <label for="address">Địa Chỉ</label>
              <input type="text" id="address" name="address" value="<%= supplier.address %>">
            </div>

            <div class="form-group">
              <label for="phone">Số Điện Thoại</label>
              <input type="text" id="phone" name="phone" value="<%= supplier.phone %>">
            </div>

            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" value="<%= supplier.email %>">
            </div>

            <div class="form-group">
              <label for="type">Loại Thiết Bị</label>
              <input type="text" id="type" name="type" value="<%= supplier.type %>">
            </div>

            <div class="form-group">
              <label for="contractDate">Ngày Hợp Tác</label>
              <input type="date" id="contractDate" name="contractDate" value="<%= supplier.contractDate %>">
            </div>

            <div class="form-group">
              <label for="status">Trạng Thái</label>
              <select id="status" name="status" class="form-select">
                <option value="" <%= supplier.status === '' ? 'selected' : '' %>>Chọn</option>
                <option value="Hoạt động" <%= supplier.status === 'Hoạt động' ? 'selected' : '' %>>Hoạt động</option>
                <option value="Ngừng hợp tác" <%= supplier.status === 'Ngừng hợp tác' ? 'selected' : '' %>>Ngừng hợp tác</option>
              </select>
            </div>

            <div class="btn-group">
              <button type="submit" class="btn-save"><i class="fas fa-save"></i> LƯU</button>
              <button type="button" class="btn-cancel" onclick="window.location.href='/manager/suppliers'"><i class="fas fa-times"></i> HỦY</button>
            </div>
          </form>
        </div>

        <!-- Footer -->
        <%- include('../../../views/partials/footer') %>
      </div>
    </div>
  </div>

  <script src="/public/javascripts/suppliers.js"></script>
</body>

</html>
