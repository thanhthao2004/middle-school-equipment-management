<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Báo cáo thanh lý</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/public/stylesheets/disposal.css">
    <link rel="stylesheet" href="/public/stylesheets/style.css">


</head>

<body>
    <!-- Header -->
    <%- include('../../../views/partials/header', { currentPage: 'disposal', user: typeof user !== 'undefined' ? user : { role: 'ql_thiet_bi' } }) %>

    <div class="container-fluid p-0">
      <div class="row g-0">
        <!-- Sidebar -->
        <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'disposal', user: typeof user !== 'undefined' ? user : { role: 'ql_thiet_bi' } }) %>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10 main-content">
          <div class="container py-4">
            <!-- MAIN -->
            <div class="main">
            <!-- HEADER -->
            <div class="main-header">
                <div style="display:flex; align-items:center;">
                    <button class="btn-menu" id="toggleSidebar"><i class="fas fa-bars"></i></button>
                    <h2>DANH SÁCH BÁO CÁO THANH LÝ THIẾT BỊ HỎNG</h2>
                </div>
                <div class="user"><i class="fas fa-user"></i> QLTB</div>
            </div>

            <!-- SEARCH -->
            <div class="search-box">
                <input type="text" class="form-control" placeholder="Tìm kiếm...">
                <button class="search-btn"><i class="fas fa-search"></i> Tìm kiếm</button>

            </div>

            <!-- TABLE -->
            <div class="table-responsive">
                <table>
                    <thead>
                        <tr>
                            <th>Mã biên bản</th>
                            <th>Năm học</th>
                            <th>Ngày lập</th>
                            <th>Lựa chọn</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% disposal.forEach(r=> { %>
                            <tr>
                                <td>
                                    <div class="info-box info-code">
                                        <%= r.code %>
                                    </div>
                                </td>
                                <td>
                                    <div class="info-box info-year">
                                        <%= r.year %>
                                    </div>
                                </td>
                                <td>
                                    <div class="info-box info-date">
                                        <%= r.created_at %>
                                    </div>
                                </td>

                                <td>
                                    <a href="/manager/disposal/view/<%= r.id %>"><i class="fas fa-eye"></i> Xem</a> |
                                    <a href="/manager/disposal/edit/<%= r.id %>"><i class="fas fa-edit"></i> Sửa</a> |
                                    <a href="#" class="btn-delete" data-id="<%= r.id %>" data-code="<%= r.code %>"><i
                                            class="fas fa-trash-alt"></i> Xóa</a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- ADD BUTTON -->
            <a href="/manager/disposal/add" class="btn-add"><i class="fas fa-plus"></i> Thêm báo cáo mới</a>
            </div>
          </div>
        </div>
      </div>
    </div>

        <!-- DELETE MODAL -->
        <div id="deleteModal">
            <div class="modal-box">
                <h3><i class="fas fa-triangle-exclamation"></i> Xác nhận xóa</h3>
                <p id="deleteText"></p>
                <form id="deleteForm" method="POST">
                    <button type="submit" class="confirm">Xác nhận</button>
                    <button type="button" class="cancel" id="cancelBtn">Hủy</button>
                </form>
            </div>
        </div>

        <script src="/public/javascripts/disposal.js"></script>
</body>

</html>