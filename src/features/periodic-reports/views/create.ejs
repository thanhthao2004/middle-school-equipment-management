<!DOCTYPE html>
<html lang="vi">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><%= title || 'Lập báo cáo định kỳ' %></title>

        <link href="/css/bootstrap.min.css" rel="stylesheet">
        <link href="/public/stylesheets/style.css" rel="stylesheet">

        <style>
        .form-label { font-weight:600 }
        .page-header {
            border-bottom: 1px solid #dee2e6;
            margin-bottom: 20px;
            padding-bottom: 10px;
        }
    </style>
    </head>
    <body>

        <%
        const userObj = (typeof user !== 'undefined' && user)
        ? user
        : { role: 'ql_thiet_bi' };
        %>

        <!-- HEADER -->
        <%- include('../../../views/partials/header', {
        currentPage: 'periodic-reports',
        user: userObj
        }) %>

        <div class="container-fluid p-0">
            <div class="row g-0">

                <!-- SIDEBAR -->
                <%- include('../../../views/partials/qltb-sidebar', {
                currentPage: 'periodic-reports',
                user: userObj
                }) %>

                <!-- CONTENT -->
                <div class="col-md-9 col-lg-10">
                    <div class="container py-4">

                        <div class="page-header">
                            <h1>Lập báo cáo định kỳ</h1>
                            <div class="text-muted" style="font-size:14px">
                                Tạo báo cáo tình trạng thiết bị định kỳ
                            </div>
                        </div>

                        <!-- FORM -->
                        <form
                            method="POST"
                            action="/manager/periodic-reports"
                            enctype="multipart/form-data">

                            <div class="card p-4 mx-auto"
                                style="max-width: 700px;">
                                <h5 class="mb-4">Thông tin chung</h5>

                                <div class="row g-3">

                                    <!-- NGÀY LẬP -->
                                    <div class="col-md-6">
                                        <label class="form-label">Ngày lập <span
                                                class="text-danger">*</span></label>
                                        <input
                                            type="date"
                                            name="ngayLap"
                                            class="form-control"
                                            required>

                                    </div>

                                    <!-- KỲ BÁO CÁO -->
                                    <div class="col-md-6">
                                        <label class="form-label">Kỳ báo cáo
                                            <span
                                                class="text-danger">*</span></label>
                                        <input
                                            type="text"
                                            name="kyBaoCao"
                                            class="form-control"
                                            placeholder="Ví dụ: Học kỳ I 2024-2025"
                                            required>

                                    </div>

                                    <!-- FILE UPLOAD -->
                                    <div class="col-12">
                                        <label class="form-label">File báo cáo
                                            (PDF / Word)</label>
                                        <input type="file"
                                            name="file"
                                            class="form-control"
                                            accept=".pdf,.doc,.docx">
                                        <small class="text-muted">
                                            Chấp nhận PDF, DOC, DOCX. Tối đa
                                            10MB
                                        </small>
                                    </div>

                                </div>

                                <div
                                    class="d-flex justify-content-end gap-2 mt-4">
                                    <a href="/manager/periodic-reports"
                                        class="btn btn-secondary">
                                        Hủy
                                    </a>

                                    <button type="submit"
                                        class="btn btn-primary">
                                        Lưu báo cáo
                                    </button>
                                </div>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>

        <%- include('../../../views/partials/footer') %>

        <script>
    (function () {
        const today = new Date().toISOString().slice(0, 10);
        const inp = document.getElementById('ngayLap');
        if (inp && !inp.value) inp.value = today;
    })();
</script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
