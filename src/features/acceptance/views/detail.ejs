                                        <td>Thiết bị dạy môn</td>
                                        <td>Bộ thí nghiệm cơ học</td>
                                        <td>3</td>
                                        <td>3</td>
                                        <td>Khá</td>
                                        <td>Bị gãy 1 bộ -> yêu cầu đổi</td>
                                        <td class="text-center"><i class="fas fa-times text-danger"></i></td>
                                    </tr>
                                    <tr>
                                        <td>3</td>
                                        <td>Thiết bị dạy Hóa</td>
                                        <td>Bộ dụng cụ thí nghiệm hóa chất</td>
                                        <td>4</td>
                                        <td>4</td>
                                        <td>Tốt</td>
                                        <td>Bề ngoài nghiệm -</td>
                                        <td class="text-center"><i class="fas fa-check text-success"></i></td>
