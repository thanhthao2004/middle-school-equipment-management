<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Báo cáo thanh lý</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="/stylesheets/disposal.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <!-- ===== HEADER ===== -->
    <%- include('../../../views/partials/header', { currentPage: 'disposal' , user: typeof user !=='undefined' ? user :
        { role: 'ql_thiet_bi' } }) %>

        <!-- ===== MAIN LAYOUT ===== -->
        <div class="container-fluid p-0">
            <div class="row g-0">
                <!-- ===== SIDEBAR ===== -->
                <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'disposal' , user: typeof user
                    !=='undefined' ? user : { role: 'ql_thiet_bi' } }) %>

                    <!-- ===== MAIN CONTENT ===== -->
                    <div class="col-md-9 col-lg-10 main-content">
                        <div class="container-fluid py-4">

                            <!-- Page Header -->
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h1 class="h3 mb-0">BÁO CÁO THANH LÝ THIẾT BỊ HỎNG</h1>
                                <a href="/manager/disposal/add" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Thêm báo cáo mới
                                </a>
                            </div>

                            <!-- Search Box -->
                            <div class="card mb-4">
                                <div class="card-body">
                                    <form class="row g-2" method="GET" action="/manager/disposal">
                                        <div class="col-md-10">
                                            <input type="text" name="q" class="form-control"
                                                placeholder="Tìm theo mã biên bản hoặc năm học...">
                                        </div>
                                        <div class="col-md-2">
                                            <button class="btn btn-primary w-100" type="submit">
                                                <i class="fas fa-search"></i> Tìm kiếm
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <!-- Table -->
                            <div class="card">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover align-middle">
                                            <thead>
                                                <tr>
                                                    <th>Mã biên bản</th>
                                                    <th>Năm học</th>
                                                    <th>Ngày lập</th>
                                                    <th class="text-center">Thao tác</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% disposal.forEach(r=> { %>
                                                    <tr>
                                                        <td>
                                                            <span class="code-box">
                                                                <%= r.code %>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <%= r.year %>
                                                        </td>
                                                        <td>
                                                            <%= new Date(r.created_at).toLocaleDateString("vi-VN") %>
                                                        </td>
                                                        <td class="text-center">
                                                            <div class="d-flex justify-content-center gap-2">
                                                                <a href="/manager/disposal/view/<%= r._id %>"
                                                                    class="btn btn-sm btn-outline-primary">
                                                                    <i class="fas fa-eye"></i>
                                                                </a>

                                                                <% if (r.year===currentAcademicYear) { %>
                                                                    <a href="/manager/disposal/edit/<%= r._id %>"
                                                                        class="btn btn-sm btn-warning">
                                                                        <i class="fas fa-edit"></i>
                                                                    </a>

                                                                    <button type="button"
                                                                        class="btn btn-sm btn-danger btn-delete"
                                                                        data-id="<%= r._id %>"
                                                                        data-code="<%= r.code %>">
                                                                        <i class="fas fa-trash-alt"></i>
                                                                    </button>
                                                                    <% } else { %>
                                                                        <span class="lock-icon"
                                                                            title="Báo cáo năm học cũ – chỉ xem">
                                                                            <i class="fas fa-lock"></i>
                                                                        </span>

                                                                        <% } %>
                                                            </div>
                                                        </td>

                                                    </tr>
                                                    <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
            </div>
        </div>

        <!-- ===== FOOTER ===== -->
        <%- include('../../../views/partials/footer') %>

            <!-- ===== DELETE MODAL ===== -->
            <div id="deleteModal">
                <div class="modal-box">
                    <h3><i class="fas fa-triangle-exclamation"></i> Xác nhận xóa</h3>
                    <p id="deleteText"></p>
                    <form id="deleteForm" method="POST">
                        <button type="submit" class="btn btn-danger">Xác nhận</button>
                        <button type="button" class="btn btn-secondary" id="cancelBtn">Hủy</button>
                    </form>
                </div>
            </div>

            <!-- JS -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="/public/javascripts/disposal.js"></script>
</body>

</html>