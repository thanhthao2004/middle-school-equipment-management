<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= title %>
  </title>

  <link href="/css/bootstrap.min.css" rel="stylesheet" />
  <link href="/stylesheets/style.css" rel="stylesheet" />
  <!-- Reusing Disposal Styles for consistence -->
  <link href="/stylesheets/periodic-reports.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
</head>

<body>
  <% const userObj=(typeof user !=='undefined' && user) ? user : { role: 'ql_thiet_bi' }; const readOnlyFlag=(typeof
    readOnly !=='undefined' ) ? readOnly : true; %>

    <%- include('../../../views/partials/header', { currentPage: 'periodic-reports' , user: userObj }) %>

      <div class="container-fluid p-0">
        <div class="row g-0">
          <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'periodic-reports' , user: userObj }) %>

            <div class="col-md-9 col-lg-10 main-content">
              <div class="container-fluid py-4">

                <!-- Page Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                  <h1 class="h3 mb-0">CHI TIẾT BÁO CÁO ĐỊNH KỲ</h1>
                  <a href="/manager/periodic-reports" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                  </a>
                </div>

                <!-- ===== INFO BOXES ===== -->
                <div class="card mb-4">
                  <div class="card-body">
                    <div class="d-flex flex-wrap gap-3 align-items-center">

                      <div class="info-box info-code">
                        <label>Mã báo cáo</label>
                        <div class="value">
                          <%= report.code %>
                        </div>
                      </div>

                      <div class="info-box info-year">
                        <label>Kỳ báo cáo</label>
                        <div class="value">
                          <%= report.period %>
                        </div>
                      </div>

                      <div class="info-box info-date">
                        <label>Ngày lập</label>
                        <div class="value">
                          <%= report.date %>
                        </div>
                      </div>

                      <!-- Status Badge within Info context if needed, or separate -->
                      <div class="info-box" style="border-left: 5px solid #6c757d; background: #f8f9fa;">
                        <label>Trạng thái</label>
                        <div class="value">
                          <% if (report.status==='completed' ) { %>
                            <span class="text-success">Đã duyệt</span>
                            <% } else if (report.status==='rejected' ) { %>
                              <span class="text-danger">Từ chối</span>
                              <% } else { %>
                                <span class="text-warning">Chờ duyệt</span>
                                <% } %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Actions Bar (Update Status / Upload File) -->
                <% if (!readOnlyFlag || report.items.length===0) { %>
                  <div class="card mb-4">
                    <div class="card-body">
                      <form action="/manager/periodic-reports/<%= report.id %>" method="post"
                        class="row g-3 align-items-end">
                        <% if (!readOnlyFlag && report.status==='pending' ) { %>
                          <div class="col-md-3">
                            <label class="form-label">Cập nhật trạng thái</label>
                            <select name="trangThaiBaoCao" class="form-select">
                              <option value="pending" <%=report.status==='pending' ? 'selected' : '' %>>Đang chờ duyệt
                              </option>
                              <option value="completed" <%=report.status==='completed' ? 'selected' : '' %>>Đã duyệt
                              </option>
                              <option value="rejected" <%=report.status==='rejected' ? 'selected' : '' %>>Từ chối
                              </option>
                            </select>
                          </div>
                          <div class="col-md-3">
                            <button type="submit" class="btn btn-primary">Cập nhật</button>
                          </div>
                          <% } %>

                            <div class="col-md-6 text-end ms-auto">
                              <% if (report.fileUrl) { %>
                                <a href="/manager/periodic-reports/<%= report.id %>/download"
                                  class="btn btn-outline-success">
                                  <i class="fas fa-file-download"></i> Tải file đính kèm
                                </a>
                                <% } else { %>
                                  <span class="text-muted small">Không có file đính kèm</span>
                                  <% } %>
                            </div>
                      </form>
                    </div>
                  </div>
                  <% } %>


                    <!-- ===== DEVICES SNAPSHOT TABLE ===== -->
                    <div class="card">
                      <div class="card-body p-0">
                        <div class="table-responsive">
                          <table class="table table-hover align-middle mb-0">
                            <thead>
                              <tr>
                                <th>Mã thiết bị</th>
                                <th>Tên thiết bị</th>
                                <th>Danh mục</th>
                                <th class="text-center">Số lượng</th>
                                <th>Tình trạng chi tiết</th>
                              </tr>
                            </thead>

                            <tbody>
                              <% if (report.items && report.items.length> 0) { %>
                                <% report.items.forEach(item=> { %>
                                  <tr>
                                    <td>
                                      <span class="code-box"
                                        style="background: #f1f5f9; padding: 4px 8px; border-radius: 4px; font-weight: 600; font-size: 0.9em;">
                                        <%= item.maTB %>
                                      </span>
                                    </td>
                                    <td>
                                      <%= item.tenTB %>
                                    </td>
                                    <td>
                                      <span class="badge bg-light text-dark border">
                                        <%= item.categoryName %>
                                      </span>
                                    </td>
                                    <td class="text-center fw-bold">
                                      <%= item.soLuong %>
                                    </td>
                                    <td>
                                      <% if (item.stats) { %>
                                        <div class="d-flex gap-2 flex-wrap">
                                          <% if (item.stats.tot> 0) { %>
                                            <span class="badge bg-success">Tốt: <%= item.stats.tot %></span>
                                            <% } %>
                                              <% if (item.stats.kha> 0) { %>
                                                <span class="badge bg-primary">Khá: <%= item.stats.kha %></span>
                                                <% } %>
                                                  <% if (item.stats.trungBinh> 0) { %>
                                                    <span class="badge bg-warning text-dark">TB: <%=
                                                        item.stats.trungBinh %></span>
                                                    <% } %>
                                                      <% if (item.stats.hong> 0) { %>
                                                        <span class="badge bg-danger">Hỏng: <%= item.stats.hong %>
                                                            </span>
                                                        <% } %>
                                        </div>
                                        <% } else { %>
                                          <span class="text-muted">-</span>
                                          <% } %>
                                    </td>
                                  </tr>
                                  <% }); %>
                                    <% } else { %>
                                      <tr>
                                        <td colspan="5" class="text-center text-muted py-4">
                                          Không có dữ liệu snapshot trong báo cáo này.
                                        </td>
                                      </tr>
                                      <% } %>
                            </tbody>
                          </table>
                        </div>
                      </div>
                    </div>

              </div>
            </div>
        </div>
      </div>

      <!-- Footer -->
      <%- include('../../../views/partials/footer') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>