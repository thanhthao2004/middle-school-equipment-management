<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet">
</head>

<body>
    <% const userObj=(typeof user !=='undefined' && user) ? user : { role: 'to_truong' }; %>

        <!-- Header -->
        <%- include('../../../views/partials/header', { currentPage: 'trainingPlans' , user: userObj }) %>

            <div class="container-fluid p-0">
                <div class="row g-0">
                    <% if (userObj.role==='hieu_truong' ) { %>
                        <%- include('../../../views/partials/principal-sidebar', { currentPage: 'trainingPlans' , user:
                            userObj }) %>
                            <% } else { %>
                                <%- include('../../../views/partials/teacher-sidebar', { currentPage: 'training-plans' ,
                                    user: userObj }) %>
                                    <% } %>

                                        <div class="col-md-9 col-lg-10 main-content" style="padding-top: 60px;">
                                            <div class="container py-4">
                                                <main class="page-main">
                                                    <div class="page-header text-start mb-4">
                                                        <nav aria-label="breadcrumb">
                                                            <ol class="breadcrumb">
                                                                <li class="breadcrumb-item"><a
                                                                        href="/principal/training-plans">Kế hoạch đào
                                                                        tạo</a></li>
                                                                <li class="breadcrumb-item active" aria-current="page">
                                                                    Tạo mới</li>
                                                            </ol>
                                                        </nav>
                                                        <h1 class="h3">Tạo kế hoạch đào tạo mới</h1>
                                                    </div>

                                                    <div class="card shadow-sm">
                                                        <div class="card-body">
                                                            <form action="/principal/training-plans/create"
                                                                method="POST" enctype="multipart/form-data">
                                                                <div class="mb-3">
                                                                    <label for="schoolYear"
                                                                        class="form-label fw-bold">Năm học <span
                                                                            class="text-danger">*</span></label>
                                                                    <select class="form-select" id="schoolYear"
                                                                        name="schoolYear" required>
                                                                        <option value="" selected disabled>Chọn năm học
                                                                        </option>
                                                                        <% if (years && years.length) { %>
                                                                            <% years.forEach(function(y){ %>
                                                                                <option value="<%= y %>">
                                                                                    <%= y %>
                                                                                </option>
                                                                                <% }) %>
                                                                                    <% } %>
                                                                    </select>
                                                                </div>

                                                                <div class="mb-3">
                                                                    <label for="displayName"
                                                                        class="form-label fw-bold">Tên hiển thị của tệp
                                                                        <span class="text-danger">*</span></label>
                                                                    <input type="text" class="form-control"
                                                                        id="displayName" name="displayName" required
                                                                        placeholder="Nhập tên hiển thị cho kế hoạch này (Ví dụ: Kế hoạch chuyên môn môn Toán)">
                                                                </div>

                                                                <div class="mb-4">
                                                                    <label for="planFile" class="form-label fw-bold">Tệp
                                                                        đính kèm (PDF) <span
                                                                            class="text-danger">*</span></label>
                                                                    <input class="form-control" type="file"
                                                                        id="planFile" name="planFile" accept=".pdf"
                                                                        required>
                                                                    <div class="form-text">Chỉ chấp nhận định dạng file
                                                                        .pdf. Đã gỡ bỏ giới hạn dung lượng tải lên.
                                                                    </div>
                                                                </div>

                                                                <div class="d-flex justify-content-end gap-2">
                                                                    <a href="/principal/training-plans"
                                                                        class="btn btn-secondary">Hủy bỏ</a>
                                                                    <button type="submit" class="btn btn-primary">
                                                                        <i class="fas fa-save me-2"></i>Lưu kế hoạch
                                                                    </button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </main>
                                            </div>
                                        </div>
                </div>
            </div>

            <%- include('../../../views/partials/footer') %>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>