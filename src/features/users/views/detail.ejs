<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chi Tiết Người Dùng</title>
  <!-- Bootstrap 5.3.0 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome 6.4.0 -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/public/stylesheets/style.css">
  <%
    // Hàm format ngày theo định dạng Việt (dd/mm/yyyy)
    const formatDate = (date) => {
      if (!date) return '';
      const d = new Date(date);
      const day = String(d.getDate()).padStart(2, '0');
      const month = String(d.getMonth() + 1).padStart(2, '0');
      const year = d.getFullYear();
      return `${day}/${month}/${year}`;
    };
    
    // Hàm format role để hiển thị
    const formatRole = (role) => {
      const roleMap = {
        'hieu_truong': 'Hiệu Trưởng',
        'to_truong': 'Tổ Trưởng Chuyên Môn',
        'giao_vien': 'Giáo Viên',
        'ql_thiet_bi': 'Nhân Viên QLTB',
        'admin': 'Quản Trị Viên'
      };
      return roleMap[role] || role;
    };
  %>
  <style>
    .detail-container {
      max-width: 900px;
      margin: 0 auto;
    }
    .detail-card {
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      padding: 2rem;
    }
    .detail-section-title {
      font-size: 1.1rem;
      font-weight: 600;
      color: var(--dark-gray);
      margin-bottom: 1.5rem;
      margin-top: 1.5rem;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid var(--light-gray);
    }
    .detail-section-title:first-child {
      margin-top: 0;
    }
    .detail-row {
      display: flex;
      gap: 1rem;
      margin-bottom: 1rem;
      padding-bottom: 0.75rem;
      border-bottom: 1px solid #f0f0f0;
    }
    .detail-row:last-child {
      border-bottom: none;
    }
    .detail-label {
      width: 200px;
      font-weight: 600;
      color: #495057;
      font-size: 0.95rem;
    }
    .detail-value {
      flex: 1;
      color: #212529;
      font-size: 0.95rem;
    }
    .detail-value:empty::before {
      content: '—';
      color: #6c757d;
      font-style: italic;
    }
  </style>
</head>
<body>
  <!-- Header -->
  <% const currentUser = typeof userObj !== 'undefined' ? userObj : { role: 'admin' }; %>
  <%- include('../../../views/partials/header', { currentPage: 'users-detail', user: currentUser }) %>

  <div class="container-fluid p-0">
    <div class="row g-0">
      <!-- Sidebar Admin -->
      <%- include('../../../views/partials/admin-sidebar', { currentPage: 'users-detail', user: currentUser }) %>

      <!-- Main Content -->
      <div class="col-md-9 col-lg-10 main-content">
        <div class="container py-4">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Chi Tiết Người Dùng</h1>
            <a href="/admin" class="btn btn-outline-secondary">
              <i class="fas fa-arrow-left me-2"></i>Quay lại
            </a>
          </div>

          <div class="detail-container">
            <div class="detail-card">
              <div class="detail-section-title">
                <i class="fas fa-user me-2"></i>Thông tin cá nhân
              </div>

              <div class="detail-row">
                <div class="detail-label">Họ và tên:</div>
                <div class="detail-value"><%= user.fullname || '' %></div>
              </div>

              <div class="detail-row">
                <div class="detail-label">Số điện thoại:</div>
                <div class="detail-value"><%= user.phone || '' %></div>
              </div>

              <div class="detail-row">
                <div class="detail-label">Địa chỉ:</div>
                <div class="detail-value"><%= user.address || '' %></div>
              </div>

              <div class="detail-row">
                <div class="detail-label">Ngày sinh:</div>
                <div class="detail-value"><%= formatDate(user.dob) %></div>
              </div>

              <div class="detail-row">
                <div class="detail-label">Giới tính:</div>
                <div class="detail-value"><%= user.gender || '' %></div>
              </div>

              <div class="detail-section-title">
                <i class="fas fa-key me-2"></i>Thông tin đăng nhập
              </div>

              <div class="detail-row">
                <div class="detail-label">Tên đăng nhập:</div>
                <div class="detail-value"><%= user.username || '' %></div>
              </div>

              <div class="detail-row">
                <div class="detail-label">Email:</div>
                <div class="detail-value"><%= user.email || '' %></div>
              </div>

              <div class="detail-row">
                <div class="detail-label">Mã nhân viên:</div>
                <div class="detail-value"><%= user.maNV || '' %></div>
              </div>

              <div class="detail-section-title">
                <i class="fas fa-briefcase me-2"></i>Thông tin công việc
              </div>

              <div class="detail-row">
                <div class="detail-label">Chức vụ:</div>
                <div class="detail-value"><%= formatRole(user.role) %></div>
              </div>

              <div class="detail-row">
                <div class="detail-label">Năm kinh nghiệm:</div>
                <div class="detail-value"><%= user.experience || '' %></div>
              </div>

              <div class="detail-row">
                <div class="detail-label">Bộ môn:</div>
                <div class="detail-value"><%= user.subject || '' %></div>
              </div>

              <div class="detail-row">
                <div class="detail-label">Trình độ chuyên môn:</div>
                <div class="detail-value"><%= user.specialization || '' %></div>
              </div>

              <div class="detail-row">
                <div class="detail-label">Trạng thái:</div>
                <div class="detail-value">
                  <% if (user.trangThai === 'active') { %>
                    <span class="badge bg-success">Hoạt động</span>
                  <% } else { %>
                    <span class="badge bg-secondary">Không hoạt động</span>
                  <% } %>
                </div>
              </div>

              <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                <a href="/admin" class="btn btn-outline-secondary">
                  <i class="fas fa-arrow-left me-2"></i>Quay lại
                </a>
                <form action="/admin/<%= user.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Bạn có chắc chắn muốn xóa người dùng này?');">
                  <button type="submit" class="btn btn-outline-danger">
                    <i class="fas fa-trash me-2"></i>Xóa
                  </button>
                </form>
                <a href="/admin/<%= user.id %>/edit" class="btn btn-primary">
                  <i class="fas fa-edit me-2"></i>Chỉnh sửa
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

