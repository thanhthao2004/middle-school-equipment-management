<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <title>Danh Sách Người Dùng</title>
  <link rel="stylesheet" href="/public/stylesheets/style.css">
  <style>
    .sidebar {
      width: 270px;
      background: #2196f3;
      color: #fff;
      height: 100vh;
      float: left;
      padding: 0;
      box-sizing: border-box;
      border-right: 1px solid #97c5f5;
    }
    .sidebar h3 {
      padding: 32px 0 14px 28px;
      margin: 0; font-size: 17px;
      font-weight: 500;
      letter-spacing: 0.5px;
    }
    .sidebar .nav-section {
      margin-bottom: 18px;
    }
    .sidebar a {
      display: block;
      color: #fff;
      text-decoration: none;
      font-size: 15px;
      padding: 15px 0 15px 35px;
      margin: 0 0 2px 0;
      border-left: 4px solid transparent;
      transition: background .13s, border .13s;
    }
    .sidebar a.active, .sidebar a:focus {
      background: #156dc5;
      border-left: 4px solid #fff;
    }
    .sidebar a:hover { background: #1976d2; }
    .main {
      margin-left: 270px; padding: 0; min-height: 100vh;
    }
  </style>
</head>
<body>
<div class="sidebar">
  <h3>Bảng chọn</h3>
  <div class="nav-section">
    <a href="/users/create">Tạo Tài Khoản</a>
  </div>
  <div class="nav-section">
    <a class="active" href="/users">Quản Lí Tài Khoản</a>
  </div>
</div>
<div class="main">
  <h2 style="color:#495057; text-align:center; margin-top:16px;">Danh Sách Người Dùng</h2>
  <div style="text-align:right; margin: 10px 0;">
    <a class="btn btn-register" href="/users/create">+ Tạo tài khoản mới</a>
  </div>
  <div style="overflow-x:auto;">
    <table class="equipment-table" border="0" cellspacing="0" cellpadding="8" style="width:100%; min-width:700px; background:#fff; border-radius:8px;">
      <thead>
        <tr style="background-color:#f8f9fa; color:#495057;">
          <th>ID</th>
          <th>Họ và tên</th>
          <th>Tên đăng nhập</th>
          <th>Chức vụ</th>
          <th>Số điện thoại</th>
          <th>Năm KN</th>
          <th>Giới tính</th>
          <th>Bộ môn</th>
        </tr>
      </thead>
      <tbody>
        <% if (users && users.length > 0) { %>
          <% users.forEach(function(u) { %>
          <tr>
            <td><%= u.id %></td>
            <td><%= u.fullname %></td>
            <td><%= u.username %></td>
            <td><%= u.role %></td>
            <td><%= u.phone %></td>
            <td><%= u.experience %></td>
            <td><%= u.gender %></td>
            <td><%= u.subject %></td>
          </tr>
          <% }); %>
        <% } else { %>
          <tr><td colspan="8" style="text-align:center; color:#6c757d">Chưa có người dùng nào.</td></tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
</body>
</html>
