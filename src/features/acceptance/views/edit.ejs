<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sửa chi tiết Nghiệm thu</title>

    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        .acceptance-form-box {
            border: 1px solid #ddd;
            padding: 30px;
            border-radius: 8px;
            background-color: #fff;
            max-width: 1100px;
            margin: 20px auto;
        }
        .table-form th, .table-form td {
            font-size: 0.85rem;
            padding: 8px;
        }
        .table-form th {
            background-color: #e9ecef;
        }
        .table-form .form-control-sm {
            height: 30px;
            padding: 0.25rem 0.5rem;
            font-size: 0.8rem;
        }
    </style>
</head>

<body>

<%- include('../../../views/partials/header', { currentPage: 'acceptance', user }) %>

<div class="container-fluid p-0">
    <div class="row g-0">

        <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'acceptance', user }) %>

        <div class="col-md-9 col-lg-10 main-content">
            <div class="container py-4">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3 mb-0">SỬA CHI TIẾT NGHIỆM THU</h1>
                    <span class="text-muted small">Quản lý thiết bị</span>
                </div>

                <div class="acceptance-form-box">
                    <h4 class="mb-4">Mã: <%= minute.maBienBan %></h4>

                    <!-- FORM POST THẬT -->
                    <form method="post">

                        <div class="table-responsive">
                            <table class="table table-bordered table-form">
                                <thead>
                                <tr>
                                    <th rowspan="2">STT</th>
                                    <th colspan="2" class="text-center">Thông tin Thiết bị</th>
                                    <th colspan="2" class="text-center">Số lượng</th>
                                    <th rowspan="2">Chất lượng</th>
                                    <th rowspan="2">Lý do</th>
                                    <th rowspan="2">Thỏa mãn</th>
                                </tr>
                                <tr>
                                    <th>Tên Danh mục</th>
                                    <th>Tên TB</th>
                                    <th>Số lượng đặt</th>
                                    <th>Số lượng thực tế</th>
                                </tr>
                                </thead>

                                <tbody>
                                <% details.forEach((item, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>

                                        <td>Thiết bị</td>
                                        <td><%= item.maTB %></td>

                                        <td><%= item.soLuongThucTe %></td>

                                        <td>
                                            <input type="number"
                                                   class="form-control form-control-sm"
                                                   name="details[<%= index %>][soLuongThucTe]"
                                                   value="<%= item.soLuongThucTe %>"
                                                   min="0">
                                        </td>

                                        <td>
                                            <select class="form-select form-select-sm"
                                                    name="details[<%= index %>][chatLuong]">
                                                <option <%= item.chatLuong === 'Tốt' ? 'selected' : '' %>>Tốt</option>
                                                <option <%= item.chatLuong === 'Khá' ? 'selected' : '' %>>Khá</option>
                                                <option <%= item.chatLuong === 'Trung bình' ? 'selected' : '' %>>Trung bình</option>
                                            </select>
                                        </td>

                                        <td>
                                            <input type="text"
                                                   class="form-control form-control-sm"
                                                   name="details[<%= index %>][lyDo]"
                                                   value="<%= item.lyDo || '' %>"
                                                   placeholder="Nhập lý do nếu có">
                                        </td>

                                        <td class="text-center">
                                            <input type="hidden"
                                                   name="details[<%= index %>][id]"
                                                   value="<%= item._id %>">
                                            <i class="fas fa-check text-success"></i>
                                        </td>
                                    </tr>
                                <% }) %>
                                </tbody>

                            </table>
                        </div>

                        <div class="text-end mt-4">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-1"></i> Lưu kết quả
                            </button>
                            <button type="button" class="btn btn-secondary px-4 ms-2"
                                    onclick="window.history.back()">
                                Hủy
                            </button>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<%- include('../../../views/partials/footer') %>
<script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
