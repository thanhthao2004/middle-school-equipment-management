<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chỉnh sửa báo cáo thanh lý</title>

    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/stylesheets/disposal.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <!-- Sidebar -->
            <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'disposal' , user: typeof user
                !=='undefined' ? user : { role: 'ql_thiet_bi' } }) %>

                <!-- Main Content -->
                <div class="col-md-9 col-lg-10 main-content">
                    <!-- Header -->
                    <%- include('../../../views/partials/header', { currentPage: 'disposal' , user: typeof user
                        !=='undefined' ? user : { role: 'ql_thiet_bi' } }) %>
                        <div class="container py-4">
                            <!-- MAIN -->
                            <div class="main">

                                <!-- HEADER -->
                                <div class="main-header">
                                    <div style="display:flex; align-items:center;">
                                        <button class="btn-menu" id="toggleSidebar"><i class="fas fa-bars"></i></button>
                                        <h2>CHỈNH SỬA BÁO CÁO THANH LÝ THIẾT BỊ HỎNG</h2>
                                    </div>
                                    <div class="user"><i class="fas fa-user"></i> QLTB</div>
                                </div>

                                <!-- INFO SECTION + SEARCH BOX -->
                                <div class="disposal-info d-flex align-items-center gap-3 flex-wrap">

                                    <!-- Info boxes -->
                                    <div class="info-box info-code">
                                        <label>Mã biên bản</label>
                                        <span class="value">
                                            <%= disposal.code %>
                                        </span>
                                    </div>

                                    <div class="info-box info-year">
                                        <label>Năm học</label>
                                        <span class="value">
                                            <%= disposal.year %>
                                        </span>
                                    </div>

                                    <div class="info-box info-date">
                                        <label>Ngày lập</label>
                                        <span class="value">
                                            <%= disposal.created_at %>
                                        </span>
                                    </div>

                                    <!-- Search box -->
                                    <div class="search-box">
                                        <input type="text" id="searchDevice" placeholder="Tìm thiết bị...">
                                        <button type="button" class="search-btn"><i class="fas fa-search"></i> Tìm
                                            kiếm</button>
                                    </div>

                                </div>


                                <!-- FORM ẨN -->
                                <form id="editDisposalForm" action="/manager/disposal/<%= disposal.id %>" method="POST"
                                    style="display:none;">
                                    <input type="hidden" name="code" value="<%= disposal.code %>">
                                    <input type="hidden" name="year" value="<%= disposal.year %>">
                                    <input type="hidden" name="created_at" value="<%= disposal.created_at %>">
                                </form>

                                <!-- BẢNG CHỈNH SỬA -->
                                <div class="table-responsive" style="overflow-x:auto;">
                                    <table class="table-modern" style="width:100%;">
                                        <thead>
                                            <tr>
                                                <th>Tên thiết bị</th>
                                                <th>Loại thiết bị</th>
                                                <th>Bộ môn quản lý</th>
                                                <th>Ngày phát hiện hỏng</th>
                                                <th>Mức độ hỏng</th>
                                                <th>Lý do hỏng</th>
                                                <th>Giá bán dự kiến</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (disposal.details && disposal.details.length> 0) { %>
                                                <% disposal.details.forEach((d, index)=> { %>
                                                    <tr>
                                                        <td><input type="text" class="form-control"
                                                                value="<%= d.name %>"></td>
                                                        <td>
                                                            <select class="form-select">
                                                                <% deviceTypes.forEach(type=> { %>
                                                                    <option value="<%= type %>" <%=d.type===type
                                                                        ? 'selected' : '' %>><%= type %>
                                                                    </option>
                                                                    <% }) %>
                                                            </select>
                                                        </td>
                                                        <td>
                                                            <select class="form-select">
                                                                <% departments.forEach(dep=> { %>
                                                                    <option value="<%= dep %>" <%=d.department===dep
                                                                        ? 'selected' : '' %>>
                                                                        <%= dep %>
                                                                    </option>
                                                                    <% }) %>
                                                            </select>
                                                        </td>
                                                        <td><input type="date" class="form-control"
                                                                value="<%= d.broken_date %>"></td>
                                                        <td><input type="text" class="form-control"
                                                                value="<%= d.level %>"></td>
                                                        <td><input type="text" class="form-control"
                                                                value="<%= d.reason %>"></td>
                                                        <td><input type="number" class="form-control"
                                                                value="<%= d.price %>" min="0"></td>
                                                    </tr>
                                                    <% }) %>
                                                        <% } else { %>
                                                            <tr>
                                                                <td colspan="7" class="text-center">Chưa có thiết bị nào
                                                                    trong báo cáo</td>
                                                            </tr>
                                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>

                                <!-- NÚT HÀNH ĐỘNG -->
                                <div class="d-flex justify-content-end mt-3 gap-2">
                                    <button class="btn btn-primary"
                                        onclick="document.getElementById('editDisposalForm').submit();">
                                        <i class="fas fa-save"></i> Lưu thay đổi
                                    </button>
                                    <a href="/manager/disposal" class="btn btn-secondary"><i class="fas fa-times"></i>
                                        Hủy</a>
                                </div>

                            </div>
                        </div>
                        <!-- Footer -->
                        <%- include('../../../views/partials/footer') %>
                </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/javascripts/disposal.js"></script>
</body>

</html>