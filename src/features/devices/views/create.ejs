<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thêm thiết bị mới</title>

    <!-- Bootstrap 5.3.0 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome 6.4.0 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/devices.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <!-- Header -->
    <%- include('../../../views/partials/header', { currentPage: 'devices' , user: typeof user !=='undefined' ? user : {
        role: 'ql_thiet_bi' } }) %>

        <!-- Main Layout with Sidebar -->
        <div class="container-fluid p-0">
            <div class="row g-0">
                <!-- Sidebar QLTB -->
                <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'devices' , user: typeof user
                    !=='undefined' ? user : { role: 'ql_thiet_bi' } }) %>

                    <!-- Main Content -->
                    <div class="col-md-9 col-lg-10 main-content">
                        <div class="container-fluid py-4">
                            <!-- Page Header -->
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h1 class="h3 mb-0">THÊM THIẾT BỊ MỚI</h1>
                                <a href="/manager/devices" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Quay lại
                                </a>
                            </div>

                            <!-- Flash Messages -->
                            <% if (typeof messages !=='undefined' && messages.error) { %>
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    <strong>Lỗi!</strong>
                                    <%= messages.error %>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                                <% } %>

                                    <% if (typeof messages !=='undefined' && messages.success) { %>
                                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                                            <i class="fas fa-check-circle me-2"></i>
                                            <strong>Thành công!</strong>
                                            <%= messages.success %>
                                                <button type="button" class="btn-close"
                                                    data-bs-dismiss="alert"></button>
                                        </div>
                                        <% } %>

                                            <!-- Validation Errors Modal -->
                                            <% if (typeof messages !=='undefined' && messages.validationErrors &&
                                                messages.validationErrors.length> 0) { %>
                                                <div class="modal fade" id="errorModal" tabindex="-1"
                                                    aria-labelledby="errorModalLabel" aria-hidden="true"
                                                    data-bs-backdrop="static">
                                                    <div class="modal-dialog modal-dialog-centered">
                                                        <div class="modal-content border-danger">
                                                            <div class="modal-header bg-danger text-white">
                                                                <h5 class="modal-title" id="errorModalLabel">
                                                                    <i class="fas fa-exclamation-circle me-2"></i>Dữ
                                                                    liệu không hợp lệ
                                                                </h5>
                                                                <button type="button" class="btn-close btn-close-white"
                                                                    data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <p class="mb-2">Vui lòng kiểm tra lại các lỗi sau:</p>
                                                                <ul class="list-unstyled mb-0">
                                                                    <% messages.validationErrors.forEach(error=> { %>
                                                                        <li class="mb-2">
                                                                            <i
                                                                                class="fas fa-times-circle text-danger me-2"></i>
                                                                            <%= error %>
                                                                        </li>
                                                                        <% }); %>
                                                                </ul>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-danger"
                                                                    data-bs-dismiss="modal">
                                                                    <i class="fas fa-check me-1"></i>Đã hiểu
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <script>
                                                    // Auto-show error modal
                                                    document.addEventListener('DOMContentLoaded', function () {
                                                        var errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
                                                        errorModal.show();
                                                    });
                                                </script>
                                                <% } %>

                                                    <!-- Form -->
                                                    <div class="card">
                                                        <div class="card-body">
                                                            <form action="/manager/devices/create" method="POST"
                                                                id="deviceForm" enctype="multipart/form-data">
                                                                <div class="row">
                                                                    <!-- Mã thiết bị (hidden - auto-generated) -->
                                                                    <input type="hidden" id="maTB" name="maTB" value="">
                                                                    <!-- Tên thiết bị -->
                                                                    <div class="col-md-6 mb-3">
                                                                        <label for="tenTB" class="form-label">
                                                                            Tên thiết bị <span
                                                                                class="text-danger">*</span>
                                                                        </label>
                                                                        <input type="text" class="form-control"
                                                                            id="tenTB" name="tenTB" required
                                                                            value="<%= typeof formData !== 'undefined' ? formData.tenTB || '' : '' %>"
                                                                            placeholder="Nhập tên thiết bị">
                                                                    </div>

                                                                    <!-- Danh mục -->
                                                                    <div class="col-md-6 mb-3">
                                                                        <label for="category" class="form-label">Danh
                                                                            mục</label>
                                                                        <select class="form-select" id="category"
                                                                            name="category">
                                                                            <option value="">Chọn danh mục</option>
                                                                            <% if (categories && categories.length> 0) {
                                                                                %>
                                                                                <% categories.forEach(cat=> { %>
                                                                                    <option value="<%= cat._id %>"
                                                                                        <%=typeof formData
                                                                                        !=='undefined' &&
                                                                                        formData.category &&
                                                                                        formData.category.toString()===cat._id.toString()
                                                                                        ? 'selected' : '' %>>
                                                                                        <%= cat.tenDM || cat.name || ''
                                                                                            %>
                                                                                    </option>
                                                                                    <% }); %>
                                                                                        <% } %>
                                                                        </select>
                                                                    </div>

                                                                    <!-- Lớp (multi-select) -->
                                                                    <div class="col-md-6 mb-3">
                                                                        <label for="lop" class="form-label">
                                                                            Lớp <span class="text-muted">(có thể chọn nhiều)</span>
                                                                        </label>
                                                                        <select class="form-select" id="lop" name="lop" multiple size="4">
                                                                            <option value="6" <%= typeof formData !== 'undefined' && Array.isArray(formData.lop) && formData.lop.includes('6') ? 'selected' : '' %>>Lớp 6</option>
                                                                            <option value="7" <%= typeof formData !== 'undefined' && Array.isArray(formData.lop) && formData.lop.includes('7') ? 'selected' : '' %>>Lớp 7</option>
                                                                            <option value="8" <%= typeof formData !== 'undefined' && Array.isArray(formData.lop) && formData.lop.includes('8') ? 'selected' : '' %>>Lớp 8</option>
                                                                            <option value="9" <%= typeof formData !== 'undefined' && Array.isArray(formData.lop) && formData.lop.includes('9') ? 'selected' : '' %>>Lớp 9</option>
                                                                        </select>
                                                                        <small class="form-text text-muted">
                                                                            <i class="fas fa-info-circle"></i> Giữ phím Ctrl (Windows) hoặc Cmd (Mac) để chọn nhiều lớp
                                                                        </small>
                                                                    </div>

                                                                    <!-- Số lượng -->
                                                                    <div class="col-md-6 mb-3">
                                                                        <label for="soLuong" class="form-label">Số
                                                                            lượng</label>
                                                                        <input type="number" class="form-control"
                                                                            id="soLuong" name="soLuong" min="0"
                                                                            value="<%= typeof formData !== 'undefined' ? formData.soLuong || 0 : 0 %>"
                                                                            placeholder="0"
                                                                            oninput="calculateTotalPrice()">
                                                                    </div>

                                                                    <!-- Giá thành -->
                                                                    <div class="col-md-6 mb-3">
                                                                        <label for="giaThanh" class="form-label">
                                                                            Giá thành (đơn giá)
                                                                        </label>
                                                                        <input type="number" class="form-control"
                                                                            id="giaThanh" name="giaThanh" min="0"
                                                                            value="<%= typeof formData !== 'undefined' ? formData.giaThanh || 0 : 0 %>"
                                                                            placeholder="VNĐ"
                                                                            oninput="calculateTotalPrice()">
                                                                        <small class="form-text text-muted">
                                                                            Giá mua mỗi đơn vị thiết bị
                                                                        </small>
                                                                    </div>

                                                                    <!-- Thành tiền (tự động tính) -->
                                                                    <div class="col-md-6 mb-3">
                                                                        <label for="tongGia" class="form-label">
                                                                            <i class="fas fa-calculator me-1"></i>Thành tiền
                                                                        </label>
                                                                        <input type="text" class="form-control" 
                                                                            id="tongGia" name="tongGia" 
                                                                            readonly 
                                                                            style="background-color: #f8f9fa; font-weight: bold; color: #28a745;"
                                                                            value="0 VNĐ">
                                                                        <small class="form-text text-muted">
                                                                            Tự động tính = Giá thành × Số lượng
                                                                        </small>
                                                                    </div>

                                                                    <!-- Tình trạng thiết bị (Physical Condition) -->
                                                                    <div class="col-md-6 mb-3">
                                                                        <label for="tinhTrangThietBi"
                                                                            class="form-label">Tình trạng</label>
                                                                        <select class="form-select"
                                                                            id="tinhTrangThietBi"
                                                                            name="tinhTrangThietBi">
                                                                            <option value="">-- Chọn tình trạng --</option>
                                                                            <%
                                                                            // Tạo Set để loại bỏ giá trị trùng lặp
                                                                            const uniqueStatuses = new Set();
                                                                            
                                                                            // Thêm từ filterOptions nếu có
                                                                            if (filterOptions && filterOptions.statuses) {
                                                                                filterOptions.statuses.forEach(status => {
                                                                                    if (status && status.trim()) {
                                                                                        uniqueStatuses.add(status.trim());
                                                                                    }
                                                                                });
                                                                            }
                                                                            
                                                                            // Thêm các giá trị mặc định nếu chưa có
                                                                            const defaultStatuses = ['Tốt', 'Khá', 'Trung bình', 'Hỏng'];
                                                                            defaultStatuses.forEach(status => {
                                                                                uniqueStatuses.add(status);
                                                                            });
                                                                            
                                                                            // Render các option duy nhất
                                                                            const sortedStatuses = Array.from(uniqueStatuses).sort();
                                                                            sortedStatuses.forEach(status => {
                                                                                const selected = typeof formData !== 'undefined' && 
                                                                                    formData.tinhTrangThietBi === status ? 'selected' : '';
                                                                            %>
                                                                                <option value="<%= status %>" <%= selected %>><%= status %></option>
                                                                            <% }); %>
                                                                        </select>
                                                                    </div>

                                                                    <!-- Vị trí lưu trữ -->
                                                                    <div class="col-md-6 mb-3">
                                                                        <label for="viTriLuuTru" class="form-label">Vị
                                                                            trí lưu trữ</label>

                                                                        <select class="form-select" id="viTriLuuTru"
                                                                            name="viTriLuuTru">
                                                                            <option value="">-- Chọn vị trí --</option>
                                                                            <%
                                                                            // Tạo Set để loại bỏ giá trị trùng lặp
                                                                            const uniqueLocations = new Set();
                                                                            
                                                                            // Thêm từ filterOptions nếu có
                                                                            if (filterOptions && filterOptions.locations) {
                                                                                filterOptions.locations.forEach(location => {
                                                                                    if (location && location.trim()) {
                                                                                        uniqueLocations.add(location.trim());
                                                                                    }
                                                                                });
                                                                            }
                                                                            
                                                                            // Render các option duy nhất
                                                                            const sortedLocations = Array.from(uniqueLocations).sort();
                                                                            sortedLocations.forEach(location => {
                                                                                const selected = typeof formData !== 'undefined' && 
                                                                                    formData.viTriLuuTru === location ? 'selected' : '';
                                                                            %>
                                                                                <option value="<%= location %>" <%= selected %>><%= location %></option>
                                                                            <% }); %>
                                                                            <option value="__custom__">Khác (nhập tự do)</option>
                                                                        </select>

                                                                        <!-- Custom input field (hidden by default) -->
                                                                        <input type="text" class="form-control mt-2"
                                                                            id="customViTriLuuTru"
                                                                            placeholder="Nhập vị trí lưu trữ tùy chỉnh"
                                                                            style="display: none;">

                                                                        <small class="form-text text-muted">
                                                                            Chọn từ danh sách hoặc chọn "Khác" để nhập
                                                                            tự do
                                                                        </small>
                                                                    </div>

                                                                    <!-- Nguồn gốc -->
                                                                    <div class="col-md-6 mb-3">
                                                                        <label for="nguonGoc" class="form-label">Nguồn
                                                                            gốc</label>
                                                                        <select class="form-select" id="nguonGoc"
                                                                            name="nguonGoc">
                                                                            <option value="">-- Chọn nguồn gốc --</option>
                                                                            <%
                                                                            // Tạo Set để loại bỏ giá trị trùng lặp
                                                                            const uniqueOrigins = new Set();
                                                                            
                                                                            // Thêm từ filterOptions nếu có
                                                                            if (filterOptions && filterOptions.origins) {
                                                                                filterOptions.origins.forEach(origin => {
                                                                                    if (origin && origin.trim()) {
                                                                                        uniqueOrigins.add(origin.trim());
                                                                                    }
                                                                                });
                                                                            }
                                                                            
                                                                            // Thêm các giá trị mặc định
                                                                            const defaultOrigins = ['Mua mới', 'Tài trợ', 'Hiến tặng', 'Giáo viên tự làm'];
                                                                            defaultOrigins.forEach(origin => {
                                                                                uniqueOrigins.add(origin);
                                                                            });
                                                                            
                                                                            // Render các option duy nhất
                                                                            const sortedOrigins = Array.from(uniqueOrigins).sort();
                                                                            sortedOrigins.forEach(origin => {
                                                                                const selected = typeof formData !== 'undefined' && 
                                                                                    formData.nguonGoc === origin ? 'selected' : '';
                                                                            %>
                                                                                <option value="<%= origin %>" <%= selected %>><%= origin %></option>
                                                                            <% }); %>
                                                                        </select>
                                                                        <small class="form-text text-muted">
                                                                            <i class="fas fa-info-circle"></i>
                                                                            Chọn "Giáo viên tự làm" sẽ tự động đặt giá
                                                                            thành = 0đ
                                                                        </small>
                                                                    </div>

                                                                    <!-- Ngày nhập -->
                                                                    <div class="col-md-6 mb-3">
                                                                        <label for="ngayNhap" class="form-label">Ngày
                                                                            nhập</label>
                                                                        <input type="date" class="form-control"
                                                                            id="ngayNhap" name="ngayNhap">
                                                                    </div>

                                                                    <!-- Hình ảnh (Multiple Upload) -->
                                                                    <div class="col-md-12 mb-3">
                                                                        <label for="hinhAnh" class="form-label">
                                                                            <i class="fas fa-images me-1"></i>Hình ảnh
                                                                            thiết bị (Tối đa 5 ảnh)
                                                                        </label>
                                                                        <input type="file" class="form-control"
                                                                            id="hinhAnh" name="hinhAnh"
                                                                            accept="image/jpeg,image/jpg,image/png,image/gif,image/webp"
                                                                            multiple>
                                                                        <small class="form-text text-muted">
                                                                            <i class="fas fa-info-circle"></i> Chọn tối
                                                                            đa 5 ảnh (JPG/PNG/GIF/WEBP - mỗi ảnh ≤ 5MB)
                                                                        </small>

                                                                        <!-- Multiple Images Preview Container -->
                                                                        <div id="imagePreviewContainer" class="mt-3"
                                                                            style="display:none;">
                                                                            <label
                                                                                class="form-label text-muted small">Xem
                                                                                trước:</label>
                                                                            <div id="imagePreviewGrid" class="row g-2">
                                                                            </div>
                                                                        </div>
                                                                    </div>

                                                                    <!-- Hướng dẫn sử dụng -->
                                                                    <div class="col-md-12 mb-3">
                                                                        <label for="huongDanSuDung"
                                                                            class="form-label">Hướng dẫn sử
                                                                            dụng</label>
                                                                        <textarea class="form-control"
                                                                            id="huongDanSuDung" name="huongDanSuDung"
                                                                            rows="4"
                                                                            placeholder="Nhập hướng dẫn sử dụng thiết bị..."></textarea>
                                                                    </div>
                                                                </div>

                                                                <!-- Form Actions -->
                                                                <div class="d-flex justify-content-end gap-2 mt-4">
                                                                    <button type="button" class="btn btn-secondary"
                                                                        onclick="window.location.href='/manager/devices'">
                                                                        <i class="fas fa-times"></i> Hủy
                                                                    </button>
                                                                    <button type="submit" class="btn btn-primary">
                                                                        <i class="fas fa-save"></i> Lưu
                                                                    </button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                        </div>
                    </div>
            </div>
        </div>

        <!-- Footer -->
        <%- include('../../../views/partials/footer') %>

            <!-- Bootstrap JS -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="/javascripts/devices.js"></script>
</body>

</html>