<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sửa nhà cung cấp</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/suppliers.css">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
  <!-- Header -->
  <%- include('../../../views/partials/header', { currentPage: 'suppliers' , user: typeof user !=='undefined' ? user : {
    role: 'ql_thiet_bi' } }) %>

    <!-- Main Layout with Sidebar -->
    <div class="container-fluid p-0">
      <div class="row g-0">
        <!-- Sidebar QLTB -->
        <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'suppliers' , user: typeof user
          !=='undefined' ? user : { role: 'ql_thiet_bi' } }) %>

          <!-- Main Content -->
          <div class="col-md-9 col-lg-10 main-content">
            <div class="container-fluid py-4">
              <!-- Page Header -->
              <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">SỬA NHÀ CUNG CẤP</h1>
                <a href="/manager/suppliers" class="btn btn-secondary">
                  <i class="fas fa-arrow-left"></i> Quay lại
                </a>
              </div>

              <!-- Form -->
              <div class="card">
                <div class="card-body">
                  <form action="/manager/suppliers/<%= supplier.id %>" method="POST">
                    <div class="row g-3">
                      <div class="col-12 col-md-6">
                        <label class="form-label">Mã Nhà Cung Cấp</label>
                        <input type="text" class="form-control" value="<%= supplier.maNCC %>" readonly>
                      </div>


                      <div class="col-12 col-md-6">
                        <label for="name" class="form-label">Tên Nhà Cung Cấp</label>
                        <input type="text" id="name" name="name" class="form-control" value="<%= supplier.name %>">
                      </div>

                      <div class="col-12">
                        <label for="address" class="form-label">Địa Chỉ</label>
                        <input type="text" id="address" name="address" class="form-control"
                          value="<%= supplier.address %>">
                      </div>

                      <div class="col-12 col-md-6">
                        <label for="phone" class="form-label">Số Điện Thoại</label>
                        <input type="text" id="phone" name="phone" class="form-control" value="<%= supplier.phone %>">
                      </div>

                      <div class="col-12 col-md-6">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="email" class="form-control" value="<%= supplier.email %>">
                      </div>

                      <div class="col-12 col-md-6">
                        <label for="type" class="form-label">
                          Loại Thiết Bị <span class="text-danger">*</span>
                        </label>

                        <select id="type" name="type" class="form-select" required>
                          <option value="">-- Chọn loại thiết bị --</option>

                          <% categories.forEach(c=> { %>
                            <option value="<%= c.name %>" <%=supplier.type===c.name ? 'selected' : '' %>>
                              <%= c.name %>
                            </option>
                            <% }) %>
                        </select>
                      </div>


                      <div class="col-12 col-md-6">
                        <label for="contractDate" class="form-label">Ngày Hợp Tác</label>
                        <input type="date" name="contractDate" class="form-control" value="<%= supplier.contractDate 
    ? supplier.contractDate.toISOString().substring(0, 10) 
    : '' %>">

                      </div>

                      <div class="col-12">
                        <label for="status" class="form-label">Trạng Thái</label>
                        <select id="status" name="status" class="form-select">
                          <option value="Hoạt động" <%=supplier.status==='Hoạt động' ? 'selected' : '' %>>Hoạt động
                          </option>
                          <option value="Ngừng hợp tác" <%=supplier.status==='Ngừng hợp tác' ? 'selected' : '' %>>Ngừng
                            hợp tác</option>
                        </select>
                      </div>
                    </div>

                    <div class="d-flex gap-2 justify-content-end mt-4">
                      <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Lưu</button>
                      <button type="button" class="btn btn-secondary"
                        onclick="window.location.href='/manager/suppliers'">
                        <i class="fas fa-times"></i> Hủy
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>

    <!-- Footer -->
    <%- include('../../../views/partials/footer') %>

      <!-- Bootstrap JS -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
      <script src="/javascripts/suppliers.js"></script>
</body>

</html>