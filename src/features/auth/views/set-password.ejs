<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card mt-5">
                    <div class="card-header text-center">
                        <h4>
                            <%= title %>
                        </h4>
                        <% if (user && user.hoTen) { %>
                            <p class="text-muted small mb-0">Chào mừng <%= user.hoTen %>!</p>
                            <% } %>
                    </div>
                    <div class="card-body">
                        <% if (locals.error || (typeof query !=='undefined' && query.error)) { %>
                            <div class="alert alert-danger" role="alert">
                                <%= locals.error || query.error %>
                            </div>
                            <% } %>

                                <form method="POST" action="/auth/register/<%= token %>">
                                    <div class="mb-3">
                                        <label for="password" class="form-label">Mật khẩu mới</label>
                                        <input type="password" class="form-control" id="password" name="password"
                                            required minlength="6" placeholder="Tối thiểu 6 ký tự">
                                    </div>

                                    <div class="mb-3">
                                        <label for="confirmPassword" class="form-label">Xác nhận mật khẩu</label>
                                        <input type="password" class="form-control" id="confirmPassword"
                                            name="confirmPassword" required minlength="6"
                                            placeholder="Nhập lại mật khẩu">
                                    </div>

                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary">Thiết lập mật khẩu</button>
                                    </div>
                                </form>
                    </div>

                    <div class="card-footer text-center">
                        <small class="text-muted">
                            Mật khẩu phải có ít nhất 6 ký tự
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>
    <script>
        // Client-side validation for password match
        document.querySelector('form').addEventListener('submit', function (e) {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Mật khẩu xác nhận không khớp!');
                return false;
            }
        });
    </script>
</body>

</html>