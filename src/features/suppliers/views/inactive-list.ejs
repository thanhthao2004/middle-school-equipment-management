<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý nhà cung cấp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/stylesheets/suppliers.css">
    <link rel="stylesheet" href="/public/stylesheets/style.css">
</head>

<body>
    <!-- Header -->
    <%- include('../../../views/partials/header', { currentPage: 'suppliers' , user: typeof user !=='undefined' ? user :
        { role: 'ql_thiet_bi' } }) %>

        <!-- Main Layout with Sidebar -->
        <div class="container-fluid p-0">
            <div class="row g-0">
                <!-- Sidebar QLTB -->
                <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'suppliers' , user: typeof user
                    !=='undefined' ? user : { role: 'ql_thiet_bi' } }) %>

                    <!-- Main Content -->
                    <div class="col-md-9 col-lg-10 main-content">
                        <div class="container-fluid py-4">
                            <!-- Page Header -->
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h1 class="h3 mb-0">NHÀ CUNG CẤP NGỪNG HỢP TÁC</h1>
                                <a href="/manager/suppliers" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Quay lại
                                </a>
                            </div>

                            <!-- Search Box -->
                            <div class="card mb-4">
                                <div class="card-body">
                                    <div class="row g-3">
                                        <div class="col-12 col-md-8">
                                            <form method="GET" action="/manager/suppliers/inactive">
                                                <div class="row g-3">
                                                    <div class="col-12 col-md-8">
                                                        <input type="text" name="keyword" class="form-control"
                                                            placeholder="Tìm theo tên hoặc mã NCC..."
                                                            value="<%= keyword || '' %>">
                                                    </div>
                                                    <div class="col-12 col-md-4">
                                                        <button class="btn btn-primary w-100">
                                                            <i class="fas fa-search"></i> Tìm kiếm
                                                        </button>
                                                    </div>
                                                </div>
                                            </form>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Table -->
                            <div class="card">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Mã NCC</th>
                                                    <th>Tên NCC</th>
                                                    <th>Địa chỉ</th>
                                                    <th>SĐT</th>
                                                    <th>Email</th>
                                                    <th>Loại thiết bị</th>
                                                    <th>Ngày hợp tác</th>
                                                    <th>Trạng thái</th>
                                                    <th>Khôi phục</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                <% suppliers.forEach(s=> { %>
                                                    <tr>
                                                        <td>
                                                            <span class="badge bg-secondary">
                                                                <%= s.maNCC %>
                                                            </span>
                                                        </td>

                                                        <td>
                                                            <%= s.name %>
                                                        </td>

                                                        <td>
                                                            <%= s.address || '-' %>
                                                        </td>

                                                        <td>
                                                            <%= s.phone || '-' %>
                                                        </td>

                                                        <td>
                                                            <%= s.email || '-' %>
                                                        </td>

                                                        <td>
                                                            <%= s.type || '-' %>
                                                        </td>

                                                        <td>
                                                            <%= s.contractDate ? new
                                                                Date(s.contractDate).toLocaleDateString('vi-VN') : '-'
                                                                %>
                                                        </td>


                                                        <td>
                                                            <span class="badge bg-danger">Ngừng hợp tác</span>
                                                        </td>

                                                        <td>
                                                            <form action="/manager/suppliers/<%= s._id %>/restore"
                                                                method="POST">
                                                                <button class="btn btn-success btn-sm">
                                                                    <i class="fas fa-rotate-left"></i> Khôi phục
                                                                </button>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        </div>

        <!-- Footer -->
        <%- include('../../../views/partials/footer') %>

            <!-- Modal Xóa -->
            <div id="deleteModal" class="modal-overlay">
                <div class="modal-box">
                    <h3><i class="fas fa-triangle-exclamation"></i> Xác nhận xóa</h3>
                    <p id="deleteText"></p>
                    <form id="deleteForm" method="POST">
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Xác nhận</button>
                        <button id="cancelBtn" type="button" class="btn btn-secondary"><i class="fas fa-times"></i>
                            Hủy</button>
                    </form>
                </div>
            </div>

            <!-- Bootstrap JS -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="/public/javascripts/suppliers.js"></script>
</body>

</html>