<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Middle School Equipment Management' %></title>
    
    <!-- Bootstrap 5.3.0 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome 6.4.0 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- Custom Styles -->
    <link href="/stylesheets/style.css" rel="stylesheet">
    
    <!-- Additional CSS for specific pages -->
    <% if (typeof additionalCSS !== 'undefined' && additionalCSS) { %>
        <%- additionalCSS %>
    <% } %>
</head>
<body class="<%= typeof bodyClass !== 'undefined' ? bodyClass : '' %>" style="<%= typeof sidebarType !== 'undefined' ? 'background-color: var(--light-gray);' : '' %>">
    
    <!-- Header (khác nhau theo actor) -->
    <%- include('../partials/header', { 
        userRole: typeof userRole !== 'undefined' ? userRole : (typeof user !== 'undefined' && user.role ? user.role : 'giao_vien'),
        user: typeof user !== 'undefined' ? user : {},
        currentPage: typeof currentPage !== 'undefined' ? currentPage : ''
    }) %>
    
    <!-- Main Content Area -->
    <% if (typeof sidebarType !== 'undefined') { %>
        <!-- Layout với Sidebar -->
        <div class="container-fluid p-0">
            <div class="row g-0">
                <!-- Sidebar -->
                <%- include('../partials/' + sidebarType, { 
                    currentPage: typeof currentPage !== 'undefined' ? currentPage : ''
                }) %>
                
                <!-- Main Content -->
                <div class="col-md-9 col-lg-10 main-content">
                    <!-- Page Header (optional) -->
                    <% if (typeof pageHeader !== 'undefined' && pageHeader) { %>
                        <%- pageHeader %>
                    <% } %>
                    
                    <!-- Main Content -->
                    <div class="container-fluid">
                        <%- body %>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <!-- Layout không có Sidebar -->
        <main class="<%= typeof mainClass !== 'undefined' ? mainClass : 'container-fluid' %>">
            <%- body %>
        </main>
    <% } %>
    
    <!-- Footer (giống nhau cho tất cả) -->
    <%- include('../partials/footer') %>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Font Awesome JS fallback -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" crossorigin="anonymous"></script>
    
    <!-- Additional JS for specific pages -->
    <% if (typeof additionalJS !== 'undefined' && additionalJS) { %>
        <%- additionalJS %>
    <% } %>
</body>
</html>

