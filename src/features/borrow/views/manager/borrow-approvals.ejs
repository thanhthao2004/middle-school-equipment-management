<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách Phiếu Mượn Chờ Duyệt</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet">
    <link href="/stylesheets/borrow.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .filter-section { background-color: #f8f9fa; padding: 15px; border-radius: 8px; margin-bottom: 20px; border: 1px solid #e9ecef; }
        .table-approvals th { background-color: #e9ecef; }
        .table-approvals th, .table-approvals td { vertical-align: middle; font-size: 0.9rem; }
        .table-approvals .badge { font-weight: 500; }
    </style>
</head>
<body>
    <!-- Header -->
    <%- include('../../../../views/partials/header', { currentPage: 'borrow-approvals', user: typeof user !== 'undefined' ? user : { role: 'ql_thiet_bi' } }) %>

    <div class="container-fluid p-0">
        <div class="row g-0">
            <!-- Sidebar QLTB -->
            <%- include('../../../../views/partials/qltb-sidebar', { currentPage: 'borrow-approvals', user: typeof user !== 'undefined' ? user : { role: 'ql_thiet_bi' } }) %>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 main-content">
                <div class="container py-4">

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="h3 mb-0">DANH SÁCH PHIẾU MƯỢN THIẾT BỊ</h1>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-user-circle me-2 text-muted"></i>
                            <span class="text-muted small">Quản lý thiết bị</span>
                        </div>
                    </div>

                    <!-- Filter Section (Theo mockup) -->
                    <div class="filter-section">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-3">
                                <label class="form-label small text-muted fw-bold">Bộ Môn</label>
                                <select class="form-select form-select-sm" id="boMonFilter">
                                    <option value="">Tất cả</option>
                                    <option value="Tin hoc">Tin học</option>
                                    <option value="Hoa hoc">Hóa học</option>
                                    <option value="Ngu van">Ngữ Văn</option>
                                    <option value="Lich su">Lịch sử</option>
                                </select>
                            </div>
                            <div class="col-md-auto">
                                <button class="btn btn-primary btn-sm" id="btnApproveAll"><i class="fas fa-check me-1"></i>Duyệt tất cả</button>
                            </div>
                            <div class="col-md-4 ms-auto">
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control" placeholder="Tìm kiếm...">
                                    <button class="btn btn-outline-secondary" type="button"><i class="fas fa-search"></i> Tìm kiếm</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Table -->
                    <div class="card mt-2">
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover equipment-table table-approvals mb-0" id="borrowTable">
                                    <thead>
                                        <tr>
                                            <th>Mã Phiếu</th>
                                            <th>Tên Giáo Viên</th>
                                            <th>Bộ Môn</th>
                                            <th>Ngày Mượn</th>
                                            <th>Ngày Trả Dự Kiến</th>
                                            <th>Trạng Thái</th>
                                            <th>Xem Chi Tiết</th>
                                        </tr>
                                    </thead>
                                    <tbody id="borrowBody">
                                        <!-- Mock Data theo ảnh -->
                                        <tr data-id="P001" data-status="dang_muon">
                                            <td class="fw-bold">P001</td>
                                            <td>Nguyễn Văn A</td>
                                            <td>Tin học</td>
                                            <td>2025-09-20</td>
                                            <td>2025-09-25</td>
                                            <td><span class="badge bg-success">Đang mượn</span></td>
                                            <td><a class="btn btn-link p-0" href="/manager/borrow/P001">Xem</a></td>
                                        </tr>
                                        <tr data-id="P002" data-status="pending">
                                            <td class="fw-bold">P002</td>
                                            <td>Trần Thị B</td>
                                            <td>Tin học</td>
                                            <td>2025-09-21</td>
                                            <td>2025-09-26</td>
                                            <td><span class="badge bg-warning text-dark">Chờ duyệt</span></td>
                                            <td><a class="btn btn-link p-0" href="/manager/borrow/P002">Xem</a></td>
                                        </tr>
                                        <tr data-id="P003" data-status="dang_muon">
                                            <td class="fw-bold">P003</td>
                                            <td>Lê Văn C</td>
                                            <td>Hóa học</td>
                                            <td>2025-09-22</td>
                                            <td>2025-09-23</td>
                                            <td><span class="badge bg-success">Đang mượn</span></td>
                                            <td><a class="btn btn-link p-0" href="/manager/borrow/P003">Xem</a></td>
                                        </tr>
                                        <tr data-id="P005" data-status="pending">
                                            <td class="fw-bold">P005</td>
                                            <td>Đoàn Thị E</td>
                                            <td>Ngữ văn</td>
                                            <td>2025-09-23</td>
                                            <td>2025-09-29</td>
                                            <td><span class="badge bg-warning text-dark">Chờ duyệt</span></td>
                                            <td><a class="btn btn-link p-0" href="/manager/borrow/P005">Xem</a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="d-flex justify-content-end p-3">
                                <button class="btn btn-primary"><i class="fas fa-plus me-1"></i>Thêm vào phiếu</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('../../../../views/partials/footer') %>

    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>