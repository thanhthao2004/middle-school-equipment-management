<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Thêm nhà cung cấp</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/public/stylesheets/suppliers.css">
  <link rel="stylesheet" href="/public/stylesheets/style.css">
  <style>
    /* Flex layout để footer dính đáy và dính sidebar */
    .main-content {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      padding: 0;
    }

    .main {
      flex: 1;
      padding: 20px;
    }

    footer {
      margin: 0;
      padding: 15px 20px;
      background-color: #f5f5f5;
    }
  </style>
</head>

<body>
  <div class="container-fluid p-0">
    <div class="row g-0">
      <!-- Sidebar -->
      <%- include('../../../views/partials/qltb-sidebar', { currentPage: 'suppliers', user: typeof user !== 'undefined' ? user : { role: 'ql_thiet_bi' } }) %>

      <!-- Main Content -->
      <div class="col-md-9 col-lg-10 main-content">
        <!-- Header -->
        <%- include('../../../views/partials/header', { currentPage: 'suppliers', user: typeof user !== 'undefined' ? user : { role: 'ql_thiet_bi' } }) %>

        <div class="main">
          <div class="main-header">
            <h2>THÊM NHÀ CUNG CẤP</h2>
          </div>

          <form action="/manager/suppliers" method="POST">
            <div class="form-group">
              <label for="id">Mã Nhà Cung Cấp</label>
              <input type="text" id="id" value="NCC01" readonly>
            </div>

            <div class="form-group">
              <label for="name">Tên Nhà Cung Cấp</label>
              <input type="text" id="name" name="name" placeholder="Nhập tên nhà cung cấp" required>
            </div>

            <div class="form-group">
              <label for="address">Địa Chỉ</label>
              <input type="text" id="address" name="address" placeholder="Nhập địa chỉ">
            </div>

            <div class="form-group">
              <label for="phone">Số Điện Thoại</label>
              <input type="text" id="phone" name="phone" placeholder="Nhập số điện thoại">
            </div>

            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" placeholder="Nhập email">
            </div>

            <div class="form-group">
              <label for="type">Loại Thiết Bị</label>
              <input type="text" id="type" name="type" placeholder="Nhập loại thiết bị">
            </div>

            <div class="form-group">
              <label for="contractDate">Ngày Hợp Tác</label>
              <input type="date" id="contractDate" name="contractDate">
            </div>

            <div class="form-group">
              <label for="status">Trạng Thái</label>
              <select id="status" name="status" class="form-select">
                <option value="" selected>Chọn</option>
                <option value="Hoạt động">Hoạt động</option>
                <option value="Ngừng hợp tác">Ngừng hợp tác</option>
              </select>
            </div>

            <div class="btn-group mt-3">
              <button type="submit" class="btn-save"><i class="fas fa-save"></i> LƯU</button>
              <button type="button" class="btn-cancel" onclick="window.location.href='/manager/suppliers'"><i
                  class="fas fa-times"></i> HỦY</button>
            </div>
          </form>
        </div>

        <!-- Footer -->
        <%- include('../../../views/partials/footer') %>
      </div>
    </div>
  </div>

  <script src="/public/javascripts/suppliers.js"></script>
</body>

</html>
